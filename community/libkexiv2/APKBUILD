# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=libkexiv2
pkgver=21.12.0
pkgrel=0
pkgdesc="A library to manipulate pictures metadata"
url="https://www.kde.org/applications/graphics"
arch="all !armhf" # extra-cmake-modules
license="GPL-2.0-or-later"
makedepends="extra-cmake-modules qt5-qtbase-dev exiv2-dev"
subpackages="$pkgname-dev"
source="https://download.kde.org/stable/release-service/$pkgver/src/libkexiv2-$pkgver.tar.xz"

build() {
	cmake -B build \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	cd build
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}

package() {
	DESTDIR="$pkgdir" cmake --build build --target install
}

sha512sums="
7e5d55dd4ebfe555fded629d458f67aae1a6446df83dd279907c0bc2d87fb1ddd8a055ec1b5c180fc3efa6a77b3345ea48357b2e9b1a815bc0dc73800c233fd9  libkexiv2-21.12.0.tar.xz
"
