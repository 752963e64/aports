# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=py3-pymeeus
pkgver=0.3.13
pkgrel=0
pkgdesc="Python implementation of Jean Meeus astronomical routines"
url="https://github.com/architest/pymeeus"
arch="noarch"
license="LGPL-3.0-or-later"
depends="
	py3-atomicwrites
	py3-attrs
	py3-funcsigs
	py3-more-itertools
	py3-pathlib2
	py3-pluggy
	py3-py
	py3-six
	python3
	"
makedepends="py3-setuptools"
checkdepends="
	py3-coverage
	py3-flake8
	py3-mccabe
	py3-pycodestyle
	py3-pyflakes
	py3-pytest
	py3-pytest-cov
	"
source="https://pypi.python.org/packages/source/P/PyMeeus/PyMeeus-$pkgver.tar.gz"
builddir="$srcdir/PyMeeus-$pkgver"

build() {
	python3 setup.py build
}

check() {
	pytest
}

package() {
	python3 setup.py install --prefix=/usr --root="$pkgdir"
}

