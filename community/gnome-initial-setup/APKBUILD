# Contributor: Rasmus Thomsen <oss@cogitri.dev>
# Maintainer: Rasmus Thomsen <oss@cogitri.dev>
pkgname=gnome-initial-setup
pkgver=43.0
pkgrel=0
pkgdesc="A simple, easy,and safe way to prepare a new system"
url="https://wiki.gnome.org/Design/OS/InitialSetup"
# limited by gnome-shell
arch="all !armhf !s390x"
license="GPL-2.0-or-later"
depends="
	dbus:org.freedesktop.Secrets
	gsettings-desktop-schemas
	iso-codes
	"
makedepends="
	accountsservice-dev
	cheese-dev
	fontconfig-dev
	ibus-dev
	krb5-dev
	meson
	networkmanager-dev
	polkit-dev
	gdm-dev
	geoclue-dev
	geocode-glib-dev>=3.26.4-r1
	gnome-desktop-dev
	gnome-online-accounts-dev
	gtk4.0-dev
	libadwaita-dev
	libgweather4-dev
	libnma-dev
	libpwquality-dev
	libsecret-dev
	rest1-dev
	webkit2gtk-5.0-dev
	"
options="!check" # no tests
subpackages="$pkgname-lang"
source="https://download.gnome.org/sources/gnome-initial-setup/${pkgver%%.*}/gnome-initial-setup-$pkgver.tar.xz"

build() {
	abuild-meson \
		-Db_lto=true \
		-Dsystemd=false \
		. output
	meson compile ${JOBS:+-j ${JOBS}} -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
2079e1ab15d95587609926581ecef2f90c62c5d5b4fdb336da07378ed47faa0efa8ea06a219d87295bb9dc4fb846fab7f166c4730f8f8e308f58981eba9e8ba3  gnome-initial-setup-43.0.tar.xz
"
