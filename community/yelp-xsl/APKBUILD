pkgname=yelp-xsl
pkgver=3.38.1
pkgrel=0
pkgdesc="XSL stylesheets for the yelp help browser"
url="https://wiki.gnome.org/Apps/Yelp"
arch="noarch"
license="GPL-2.0-or-later AND LGPL-2.1-or-later AND MIT"
makedepends="intltool libxslt itstool"
options="!check" # no tests
source="https://download.gnome.org/sources/yelp-xsl/${pkgver%.*}/yelp-xsl-$pkgver.tar.xz"

prepare() {
	default_prepare
	sed 's|/usr/bin/sh|/bin/sh|' -i install-sh
}

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var
	make
}

package() {
	make DESTDIR="$pkgdir" install
	mkdir -p "$pkgdir"/usr/lib
	mv "$pkgdir"/usr/share/pkgconfig "$pkgdir"/usr/lib
}

sha512sums="6f4ce45043eaba0a4077dea658ccd522ef68750079ad7035d0d8730cdc6a79b86c49519b2d8bfdaa1130480a10eeb848a14d7e24d8a74f3dae4e5cfe18db4635  yelp-xsl-3.38.1.tar.xz"
