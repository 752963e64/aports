pkgname=yelp-xsl
pkgver=3.38.2
pkgrel=0
pkgdesc="XSL stylesheets for the yelp help browser"
url="https://wiki.gnome.org/Apps/Yelp"
arch="noarch"
license="GPL-2.0-or-later AND LGPL-2.1-or-later AND MIT"
makedepends="intltool libxslt itstool"
options="!check" # no tests
source="https://download.gnome.org/sources/yelp-xsl/${pkgver%.*}/yelp-xsl-$pkgver.tar.xz"

prepare() {
	default_prepare
	sed 's|/usr/bin/sh|/bin/sh|' -i install-sh
}

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var
	make
}

package() {
	make DESTDIR="$pkgdir" install
	mkdir -p "$pkgdir"/usr/lib
	mv "$pkgdir"/usr/share/pkgconfig "$pkgdir"/usr/lib
}

sha512sums="ec346211060991e06b70d5a0fe9abdc8d309e0748665f1fbcf2725d5e9847c944a89f8349c1d35606d089b2a9085f7534fdc05955643db3b0fc9dac6e8384da7  yelp-xsl-3.38.2.tar.xz"
