# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=qt6-qtvirtualkeyboard
pkgver=6.1.0
pkgrel=0
pkgdesc="Virtual keyboard framework"
url="https://qt.io"
arch="all"
license="LGPL-2.1-only AND LGPL-3.0-only AND GPL-3.0-only AND Qt-GPL-exception-1.0"
depends_dev="
	hunspell-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qtquickcontrols2-dev
	qt6-qtsvg-dev
	"
makedepends="$depends_dev
	cmake
	perl
	"
subpackages="$pkgname-dev"
options="!check" # No tests
builddir="$srcdir/qtvirtualkeyboard-everywhere-src-${pkgver/_/-}"

case $pkgver in
	*_alpha*|*_beta*|*_rc*) _rel=development_releases;;
	*) _rel=official_releases;;
esac

source="https://download.qt.io/$_rel/qt/${pkgver%.*}/${pkgver/_/-}/submodules/qtvirtualkeyboard-everywhere-src-${pkgver/_/-}.tar.xz"

build() {
	cmake -B build \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
69c00e6b7ed1b7d7b503e409b413e6a0dda36f71e6396f9f34d9207601aaa451e6198779939dc4daa83a157571cbe7712c9fbf309be0c73141843ac35ed6a7fd  qtvirtualkeyboard-everywhere-src-6.1.0.tar.xz
"
