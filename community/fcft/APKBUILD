# Maintainer: Alex McGrath <amk@amk.ie>
pkgname=fcft
pkgver=3.1.1
pkgrel=0
pkgdesc="Simple library for font loading and glyph rasterization using FontConfig, FreeType and pixman"
url="https://codeberg.org/dnkl/fcft.git"
license="MIT"
arch="all"
makedepends="
	meson
	scdoc
	fontconfig-dev
	freetype-dev
	harfbuzz-dev
	pixman-dev
	tllist-dev
	utf8proc-dev
	"
checkdepends="check-dev ttf-dejavu" # tests require a font to be installed
subpackages="$pkgname-dev $pkgname-doc"
source="$pkgname-$pkgver.tar.gz::https://codeberg.org/dnkl/fcft/archive/$pkgver.tar.gz"
builddir="$srcdir/fcft"

build() {
	abuild-meson . output
	meson compile -C output
}

check() {
	meson test --no-rebuild -v -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
0344fc55906dee2588162f805ad703fe0efd26f3a8ce794273721d6111dd29bdb3589bd863f24998346018932f78b4c2dc04c4e2c8b49286db1efa9ecbc5521f  fcft-3.1.1.tar.gz
"
