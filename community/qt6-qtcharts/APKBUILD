# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=qt6-qtcharts
pkgver=6.2.0
pkgrel=0
pkgdesc="Provides a set of easy to use chart components"
url="https://qt.io/"
arch="all !s390x" # s390x: blocked by qt6-qtdeclarative
license="LGPL-2.1-only AND LGPL-3.0-only AND GPL-3.0-only AND Qt-GPL-exception-1.0"
depends_dev="
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	"
makedepends="$depends_dev
	cmake
	perl
	"
subpackages="$pkgname-dev"
options="!check" # No tests
builddir="$srcdir/qtcharts-everywhere-src-${pkgver/_/-}"

case $pkgver in
	*_alpha*|*_beta*|*_rc*) _rel=development_releases;;
	*) _rel=official_releases;;
esac

source="https://download.qt.io/$_rel/qt/${pkgver%.*}/${pkgver/_/-}/submodules/qtcharts-everywhere-src-${pkgver/_/-}.tar.xz"

build() {
	cmake -B build \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
73e3f26571ae253db09f4b60be64a1d90c7363877e55745302864e5e897391514d7d7cef9300307cd3c5bf78307da7be07291764164fac4c59ac38badecc5161  qtcharts-everywhere-src-6.2.0.tar.xz
"
