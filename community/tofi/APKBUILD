# Contributor: Jakub Jirutka <jakub@jirutka.cz>
# Maintainer: Jakub Jirutka <jakub@jirutka.cz>
pkgname=tofi
pkgver=0.7.0
pkgrel=0
pkgdesc="Tiny dynamic menu for Wayland"
url="https://github.com/philj56/tofi"
arch="all"
license="MIT"
makedepends="
	cairo-dev
	freetype-dev
	harfbuzz-dev
	libxkbcommon-dev
	meson
	musl-fts-dev
	pango-dev
	scdoc
	wayland-dev
	wayland-protocols
	"
subpackages="
	$pkgname-doc
	$pkgname-bash-completion
	"
source="https://github.com/philj56/tofi/archive/v$pkgver/$pkgname-$pkgver.tar.gz"
options="!check"  # no tests provided

build() {
	LDFLAGS="$LDFLAGS -lfts" abuild-meson . output
	meson compile -j ${JOBS:-0} -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output

	# It's just standard MIT license.
	rm -rf "$pkgdir"/usr/share/licenses
}

sha512sums="
5e772c63d3e6f6f7ccad6d34ead88dd22dd4e98f4a44b915903730fb76f7cca8e0f9f6f809e7150bf48fbb74d9044f72408ce4f689c492c8b56da47115818908  tofi-0.7.0.tar.gz
"
