# Maintainer: Matthieu Monnier <matthieu.monnier@enalean.com>
pkgname=ncmpcpp
pkgver=0.9
pkgrel=0
pkgdesc="Ncurses based MPD client inspired by ncmpc"
url="http://rybczak.net/ncmpcpp"
arch="all"
license="GPL-2.0-or-later"
makedepends="boost-dev curl-dev libmpdclient-dev openssl-dev ncurses-dev
	readline-dev taglib-dev"
options="!check" # no tests suite
subpackages="$pkgname-doc"
source="http://rybczak.net/ncmpcpp/stable/ncmpcpp-$pkgver.tar.bz2"

build() {
	./configure \
		BOOST_LIB_SUFFIX=-mt \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var \
		--enable-clock \
		--with-taglib \
		--enable-visualizer
	make
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="aadf4bb510ce91b2af106d4881c90b618dbc30583c745e3ff924fc6c87553195b6cfb7d0034db7cf39d7001599a742d29d73a7de2701b70f36ad42d657df10e0  ncmpcpp-0.9.tar.bz2"
