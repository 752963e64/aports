# Maintainer: Rasmus Thomsen <oss@cogitri.dev>
pkgname=gnome-autoar
pkgver=0.3.0
pkgrel=0
pkgdesc="GNOME archive extraction library"
url="https://www.gnome.org/"
arch="all"
license="LGP-2.1-only"
makedepends="gtk+3.0-dev libarchive-dev vala"
subpackages="$pkgname-dev $pkgname-doc"
source="https://download.gnome.org/sources/gnome-autoar/${pkgver%.*}/gnome-autoar-$pkgver.tar.xz"

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var
	make
}

package() {
	make DESTDIR="$pkgdir" install
}

check() {
	make check
}

sha512sums="2f5962e115b25be9578ecad51d9906e426bb60b675e42b364d9f0b67f0751cf59d4afd4dbfc8adc0d13256e5dcee445c5195262e6ff0839ef88350b1c6e5293a  gnome-autoar-0.3.0.tar.xz"
