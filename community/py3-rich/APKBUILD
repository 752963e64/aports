pkgname=py3-rich
_pkgname=rich
pkgver=10.0.0
pkgrel=0
pkgdesc="Python library for rich text formatting and terminal formatting"
options="!check" # Testsuite not present in pypi tarball and uses poetry
url="https://rich.readthedocs.io/en/latest/"
arch="noarch"
license="MIT"
depends="
	py3-colorama
	py3-commonmark
	py3-pygments
	py3-typing-extensions
	"
makedepends="py3-setuptools"
source="https://files.pythonhosted.org/packages/source/${_pkgname:0:1}/$_pkgname/$_pkgname-$pkgver.tar.gz"
builddir="$srcdir/$_pkgname-$pkgver"

build() {
	python3 setup.py build
}

package() {
	python3 setup.py install --prefix=/usr --root="$pkgdir"
}

sha512sums="2ae3fa3c5062856b656525fc7be97654e8cacf60fe1a8ab213399db2a89874072329ea39f4bc61e936a2126f7b5ce199756230f34aa7cb003808d148cea17c5d  rich-10.0.0.tar.gz"
