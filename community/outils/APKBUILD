# Contributor: Sören Tempel <soeren+alpine@soeren-tempel.net>
# Maintainer: Sören Tempel <soeren+alpine@soeren-tempel.net>
pkgname=outils
pkgver=0.11
pkgrel=0
pkgdesc="Port of some non-standard OpenBSD tools to Linux"
url="https://github.com/leahneukirchen/outils"
arch="all"
license="BSD-3-Clause ISC"
makedepends="openssl-dev>3 linux-headers"
options="!check" # upstream doesn't have a test suite
subpackages="$pkgname-doc
	$pkgname-sha256:_tool
	$pkgname-lndir:_tool
	$pkgname-rdate:_tool
	$pkgname-calendar:_tool
	$pkgname-lam:_tool
	$pkgname-what:_tool
	$pkgname-rs:_tool
	$pkgname-unvis:_tool
	$pkgname-md5:_tool
	$pkgname-sha1:_tool
	$pkgname-apply:_tool
	$pkgname-sha512:_tool
	$pkgname-vis:_tool
	$pkgname-signify:_tool
	$pkgname-jot:_tool
	$pkgname-cksum:_tool"
source="$pkgname-$pkgver.tar.gz::https://github.com/leahneukirchen/outils/archive/v$pkgver.tar.gz"

build() {
	make CC="$CC" CFLAGS="$CFLAGS" \
		-C "$builddir"
}

package() {
	make DESTDIR="$pkgdir" install \
		-C "$builddir"

	# ts(1) is currently not compiled and installed.
	# See https://github.com/leahneukirchen/outils/commit/1ecea7abf3bc8b3885763053876075ba93b20ad0#commitcomment-87581200
	rm "$pkgdir"/usr/share/man/man1/ts.1
}

_tool() {
	local name=$(echo $subpkgname | cut -d '-' -f2)
	pkgdesc="$name tool from $pkgname"

	if [ "$name" = "cksum" ]; then
		depends="!coreutils $depends"
	fi

	if [ "$name" = "rdate" ]; then
		mkdir -p "$subpkgdir"/usr/sbin
		mv "$pkgdir"/usr/bin/$name \
			"$subpkgdir"/usr/sbin/$name
	else
		mkdir -p "$subpkgdir"/usr/bin
		mv "$pkgdir"/usr/bin/$name \
			"$subpkgdir"/usr/bin/$name
	fi

	rmdir "$pkgdir"/usr/bin/ 2>/dev/null || true
	rmdir "$pkgdir"/usr/ 2>/dev/null || true
}

sha512sums="
dfae2eb6384c14b1c0c6259706a87c42e2164daf2e8c428971b4ac9cbd6a05df97278f721d78185c315c1babe265e826be732002c4ac390754e9fdae9d1e0496  outils-0.11.tar.gz
"
