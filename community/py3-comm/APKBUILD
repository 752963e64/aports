# Contributor: Aiden Grossman <agrossman154@yahoo.com>
# Maintainer: Aiden Grossman <agrossman154@yahoo.com>
pkgname=py3-comm
pkgver=0.1.1
pkgrel=0
pkgdesc="Python comm implementation for the Jupyter kernel protocol"
url="https://github.com/ipython/comm"
arch="noarch"
license="BSD-3-Clause"
makedepends="py3-gpep517"
checkdepends="py3-pytest"
source="$pkgname-$pkgver.tar.gz::https://github.com/ipython/comm/archive/refs/tags/$pkgver.tar.gz"
builddir="$srcdir/comm-$pkgver"

build() {
	gpep517 build-wheel \
		--wheel-dir dist \
		--output-fd 1
}

check() {
	python3 -m venv --system-site-packages test-env
	test-env/bin/python3 -m installer \
		dist/*.whl
	test-env/bin/python3 -m pytest
}

package() {
	python3 -m installer --destdir="$pkgdir" dist/*.whl
}

sha512sums="
31ce4a1f1f35a3e1790e5a9896fd3f453a952c5fb0de094286bb31b806138a6661b143c1beb076b6fb73328304768e52c0ae6015f040b0451540a2d850f9d448  py3-comm-0.1.1.tar.gz
"
