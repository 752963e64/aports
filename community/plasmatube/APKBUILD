# Contributor: Ralf Rachinger <ralfrachinger@gmail.com>
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=plasmatube
pkgver=0_git20210709
pkgrel=0
_commit="df4a428a60b11cf0df678f7e1e18e66534fd0556"
pkgdesc="Kirigami YouTube video player based on Invidious"
arch="all !armhf !s390x !mips64" # armhf blocked by extra-cmake-modules and mips64, s390x blocked by polkit
url="https://invent.kde.org/plasma-mobile/plasmatube"
license="GPL-3.0-or-later AND CC0-1.0"
depends="
	gst-libav
	gst-plugins-good
	gst-plugins-good-qt
	kcoreaddons
	kdeclarative
	ki18n
	kirigami2
	qt5-qtmultimedia
	qt5-qtquickcontrols2
	"
makedepends="
	extra-cmake-modules
	ki18n-dev
	kirigami2-dev
	qt5-qtbase-dev
	qt5-qtquickcontrols2-dev
	"
source="https://invent.kde.org/plasma-mobile/plasmatube/-/archive/$_commit/plasmatube-$_commit.tar.gz"
options="!check" # No tests
builddir="$srcdir/$pkgname-$_commit"

build() {
	cmake -B build \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	cd build
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
41ec4bb61cc56f5d92efd143917198a03216904ba3579e5d39424a4f8009447af5eb5fdf878199fbc94ad1b6b3e8a21cfaf8b59243e7d74ab604d8fefa6ad763  plasmatube-df4a428a60b11cf0df678f7e1e18e66534fd0556.tar.gz
"
