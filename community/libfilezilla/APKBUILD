# Maintainer: Leonardo Arena <rnalrd@alpinelinux.org>
# filezilla needs to be rebuilt when libfilezilla version changes, ABI is not stable
pkgname=libfilezilla
pkgver=0.20.0
pkgrel=0
pkgdesc="C++ library for filezilla"
url="https://filezilla-project.org"
arch="all"
license="GPL-2.0-or-later"
makedepends="cppunit-dev gettext gnutls-dev nettle-dev"
subpackages="$pkgname-dev $pkgname-lang"
source="https://download.filezilla-project.org/libfilezilla/libfilezilla-$pkgver.tar.bz2"

build() {
	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--disable-static
	make
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="3eae172aa84a0d30e0ad5da4cab828b1003226f7971ccc8823f7f59bd1783067d4cbd4e11be8ba5ce1376243876c8516db563e336cdba99c24cad85730e22d1a  libfilezilla-0.20.0.tar.bz2"
