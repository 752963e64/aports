# Maintainer: Leonardo Arena <rnalrd@alpinelinux.org>
# filezilla needs to be rebuilt when libfilezilla version changes, ABI is not stable
pkgname=libfilezilla
pkgver=0.35.0
pkgrel=0
pkgdesc="C++ library for filezilla"
url="https://filezilla-project.org/"
arch="all"
license="GPL-2.0-or-later"
makedepends="cppunit-dev gettext gnutls-dev nettle-dev"
subpackages="$pkgname-dev $pkgname-lang"
source="https://download.filezilla-project.org/libfilezilla/libfilezilla-$pkgver.tar.bz2"

build() {
	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--disable-static
	make
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="
685ed22ab8e4c197f26488751bac2b28e72e5dddce0fce4795afabe59a9c1c7775ac92958ad9c15b0717a8e9f4cf4bf44eee61179d8a2194cbc11a7e2564a5c4  libfilezilla-0.35.0.tar.bz2
"
