# Maintainer: Leonardo Arena <rnalrd@alpinelinux.org>
# filezilla needs to be rebuilt when libfilezilla version changes, ABI is not stable
pkgname=libfilezilla
pkgver=0.26.0
pkgrel=0
pkgdesc="C++ library for filezilla"
url="https://filezilla-project.org"
arch="all"
license="GPL-2.0-or-later"
makedepends="cppunit-dev gettext gnutls-dev nettle-dev"
subpackages="$pkgname-dev $pkgname-lang"
source="https://download.filezilla-project.org/libfilezilla/libfilezilla-$pkgver.tar.bz2"

build() {
	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--disable-static
	make
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="96ccc61e66dae744c092389a570f591e4f4e62ebf4fc39ed5a60206ea96b47b1aeb3d8f2fb7e22b4920560af4ec212540cc177d23ddbeea879dcd80143b86af6  libfilezilla-0.26.0.tar.bz2"
