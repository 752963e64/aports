# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=qt6-qtquickcontrols2
pkgver=6.0.4
pkgrel=0
pkgdesc="User interface controls based on Qt Quick"
url="https://qt.io"
arch="all"
license="LGPL-2.1-only AND LGPL-3.0-only AND GPL-3.0-only AND Qt-GPL-exception-1.0"
depends_dev="
	qt6-qtdeclarative-dev
	vulkan-headers
	"
makedepends="$depends_dev
	cmake
	perl
	"
subpackages="$pkgname-dev"
options="!check" # No tests
builddir="$srcdir/qtquickcontrols2-everywhere-src-${pkgver/_/-}"

case $pkgver in
	*_alpha*|*_beta*|*_rc*) _rel=development_releases;;
	*) _rel=official_releases;;
esac

source="https://download.qt.io/$_rel/qt/${pkgver%.*}/${pkgver/_/-}/submodules/qtquickcontrols2-everywhere-src-${pkgver/_/-}.tar.xz"

build() {
	cmake -B build \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
42cf0fe29f134ab0412168b47da0833be31ecfbc349975bf04738d67829d4730601489e3b672bf3968ff4c3c1cb050fb3ba330d5bb521c42a716777b9bf36b60  qtquickcontrols2-everywhere-src-6.0.4.tar.xz
"
