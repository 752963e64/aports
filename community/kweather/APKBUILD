# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=kweather
pkgver=0.4
pkgrel=0
pkgdesc="Weather application for Plasma Mobile"
url="https://invent.kde.org/plasma-mobile/kweather"
# armhf blocked by qt5-qtdeclarative
# s390x blocked by plasma-framework
arch="all !armhf !s390x !mips64"
license="GPL-2.0-or-later AND CC-BY-4.0"
depends="
	kirigami2
	kquickcharts
	"
makedepends="
	extra-cmake-modules
	kconfig-dev
	kcoreaddons-dev
	ki18n-dev
	kirigami2-dev
	knotifications-dev
	kquickcharts-dev
	plasma-framework-dev
	qt5-qtbase-dev
	qt5-qtcharts-dev
	qt5-qtdeclarative-dev
	qt5-qtquickcontrols2-dev
	qt5-qtsvg-dev
	"
source="https://download.kde.org/unstable/kweather/$pkgver/kweather-$pkgver.tar.xz"
options="!check" # No tests

build() {
	cmake -B build \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="d3fb966b095803fd42d77234f9f0a558c3767f019c5adf9fd8881bf5ff636e64c941a1a2c629d7e4a48000d18426c64ac14c0ac3883e1767bb6d0383f5c9133a  kweather-0.4.tar.xz"
