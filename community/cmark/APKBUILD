# Contributor: Leo <thinkabit.ukim@gmail.com>
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=cmark
pkgver=0.30.0
pkgrel=1
pkgdesc="C reference implementation of CommonMark, a rationalized Markdown spec"
url="https://github.com/commonmark/cmark"
arch="all"
license="BSD-2-Clause"
depends_dev="
	$pkgname
	$pkgname-static
	"
makedepends="
	cmake
	re2c
	"
checkdepends="python3"
subpackages="$pkgname-doc $pkgname-static $pkgname-dev lib$pkgname:libs"
source="https://github.com/commonmark/cmark/archive/$pkgver/cmark-$pkgver.tar.gz"

build() {
	cmake -B build \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	cd build
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
53bbb8cdcac5431b88000f69df0aecfc7bd0d9ec0f7bc5a343281ca75e98304ef2674f55f76733acd81f8e8b9079eefabc9b3f3ef7dcd64087497282f17034a9  cmark-0.30.0.tar.gz
"
