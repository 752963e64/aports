# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=picard
pkgver=2.8.3
pkgrel=1
# armhf blocked by qt5-qtdeclarative
arch="all !armhf"
url="https://picard.musicbrainz.org/"
pkgdesc="Official MusicBrainz tagger"
license="GPL-2.0-or-later"
depends="
	chromaprint
	py3-dateutil
	py3-fasteners
	py3-mutagen
	py3-qt5
	py3-yaml
	"
makedepends="
	gettext
	py3-setuptools
	python3-dev
	"
checkdepends="
	py3-pytest
	"
subpackages="$pkgname-lang"
source="$pkgname-$pkgver.tar.gz::https://github.com/metabrainz/picard/archive/release-$pkgver.tar.gz
	$pkgname-fix-test.patch::https://github.com/metabrainz/picard/commit/76c2dff6b61140bbc7675c9e9f62a086b885e539.patch
	"
builddir="$srcdir/picard-release-$pkgver"

build() {
	python3 setup.py config
}

check() {
	pytest
}

package() {
	python3 setup.py install \
		--root="$pkgdir" \
		--disable-autoupdate
}

sha512sums="
b87e768f0f13e1e306279f71004b5ffaebb2cfc44be23f041d9193432bdc631c4a2b893d72b47109b06c450d6ff4e2b0a70c2a4b0cc5d1608a4481d26526b0e3  picard-2.8.3.tar.gz
1805f728e0131637e63bb89d0a45fb7312b89684d8921e96d338fa53356a6b815ab5b19a92fd9a9ff73cb6be5af212ecfbc4e8dad17b0c2d99a13a2e32e6c139  picard-fix-test.patch
"
