maintainer="Bart Ribbers <bribbers@disroot.org>"
pkgname=mkcal
pkgver=0.7.26
pkgrel=0
pkgdesc="The mobile version of the original KCAL from KDE"
url="https://github.com/sailfishos/mkcal"
# armhf blocked by kcalendarcore5-dev
arch="all !armhf"
license="LGPL-2.0-or-later"
depends_dev="
	kcalendarcore5-dev
	qt5-qtbase-dev
	timed-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	graphviz
	samurai
	"
checkdepends="
	dbus
	xvfb-run
	"
subpackages="$pkgname-dev $pkgname-doc $pkgname-tools"
source="https://github.com/sailfishos/mkcal/archive/$pkgver/mkcal-$pkgver.tar.gz"
options="!check" # Fails to connect to DBus server

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_PLUGINS=OFF \
		-DBUILD_DOCUMENTATION=ON
	cmake --build build
}

check() {
	dbus-run-session -- xvfb-run ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

tools() {
	pkgdesc="$pkgdesc (tools)"

	amove usr/bin/mkcaltool
}
sha512sums="
e39ceb665c44af266574fdbce6b8a0d678b410e27b78323f19c8a84fe2bb065adf56b452517be032ab71f9934404734d430cd3879407134cc3f180e59af4553a  mkcal-0.7.26.tar.gz
"
