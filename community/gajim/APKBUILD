# Contributor: Peter Shkenev <santurysim@gmail.com>
# Maintainer: Peter Shkenev <santurysim@gmail.com>
pkgname=gajim
pkgver=1.5.2
pkgrel=0
_pkgver_suffix=""
pkgdesc="A full featured and easy to use XMPP client"
url="https://gajim.org/"
arch="noarch"
license="GPL-3.0-only"
depends="
	dbus
	dbus-x11
	gtk+3.0
	gtksourceview4
	libsoup
	py3-cairo
	py3-css-parser
	py3-gobject3
	py3-keyring
	py3-nbxmpp
	py3-openssl
	py3-packaging
	py3-pillow
	py3-precis-i18n
	sqlite
	pango
	"
makedepends="py3-setuptools python3-dev gettext-dev"
checkdepends="xvfb-run font-dejavu"
source="
	https://gajim.org/downloads/${pkgver:0:3}/gajim-$pkgver$_pkgver_suffix.tar.gz
	"
subpackages="$pkgname-doc $pkgname-lang"

build() {
	python3 setup.py build
}

check() {
	xvfb-run python3 -m unittest discover -s test
}

package() {
	python3 setup.py install --prefix=/usr --root="$pkgdir"
}


sha512sums="
e6edd81de822cae27fdcea573d08a46cd3c83aaa68b0a66f87314440d606149a5813a5ddb48872c77bcf1892db742c901543f104f57a1551d8140b801b0cb8f3  gajim-1.5.2.tar.gz
"
