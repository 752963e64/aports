# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=kontrast
pkgver=20.12.0
pkgrel=0
pkgdesc="Tool to check contrast for colors that allows verifying that your colors are correctly accessible"
# armhf: Blocked by qt5-qtdeclarative
# s390x: Blocked by rust
arch="all !armhf !s390x !mips64"
url="https://invent.kde.org/accessibility/kontrast"
license="GPL-3.0-or-later AND CC0-1.0"
depends="kirigami2"
makedepends="
	extra-cmake-modules
	qt5-qtbase-dev
	qt5-qtdeclarative-dev
	qt5-qtquickcontrols2-dev
	qt5-qtsvg-dev
	kirigami2-dev
	ki18n-dev
	kcoreaddons-dev
	kdeclarative-dev
	"
source="https://download.kde.org/stable/release-service/$pkgver/src/kontrast-$pkgver.tar.xz"
subpackages="$pkgname-lang"
options="!check" # No tests

build() {
	cmake -B build \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --build build --target install
}
sha512sums="07bb52602f8818431c1a08d60cd44876fc55aa75fd091735592cbe0dcbe031271e14301f43aab6ff0e2918dc62fddce29515fcad939ec4f71d2983adb222e983  kontrast-20.12.0.tar.xz"
