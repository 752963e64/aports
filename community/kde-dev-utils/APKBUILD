# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=kde-dev-utils
pkgver=20.04.1
pkgrel=0
arch="all !armhf"
url="https://kde.org/applications/development/"
pkgdesc="Small utilities for developers using KDE/Qt libs/frameworks"
license="(LGPL-2.0-only OR LGPL-3.0-only) AND GPL-2.0-or-later"
makedepends="extra-cmake-modules qt5-qttools-dev qt5-qttools-static ki18n-dev kcoreaddons-dev kparts-dev kwidgetsaddons-dev"
source="https://download.kde.org/stable/release-service/$pkgver/src/kde-dev-utils-$pkgver.tar.xz"
subpackages="$pkgname-lang"
options="!check" # No tests

build() {
	cmake -B build \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	cd build
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}

package() {
	DESTDIR="$pkgdir" cmake --build build --target install
}

sha512sums="e2e60e2c32a35d30eceb7fff0a8d93d8f446313b8b5e48084de20f5f0cd6066c8c2a52cb821d06541de2503830cd0ac67468a7c1103e21f3268a834596274474  kde-dev-utils-20.04.1.tar.xz"
