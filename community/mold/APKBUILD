# Contributor: psykose <alice@ayaya.dev>
# Maintainer: psykose <alice@ayaya.dev>
pkgname=mold
pkgver=1.5.0
pkgrel=0
pkgdesc="fast modern linker"
url="https://github.com/rui314/mold"
arch="aarch64 x86_64" # only aarch64, x86_64 supported
license="AGPL-3.0" # not specified if -only
makedepends="
	clang
	cmake
	libtbb-dev
	linux-headers
	llvm-dev
	mimalloc2-dev
	openssl-dev
	samurai
	zlib-dev
	zstd-dev
	"
checkdepends="
	bash
	dwarf-tools
	grep
	perl
	"
subpackages="$pkgname-doc"
source="$pkgname-$pkgver.tar.gz::https://github.com/rui314/mold/archive/refs/tags/v$pkgver.tar.gz"

export SYSTEM_MIMALLOC=1
export SYSTEM_TBB=1
export LTO=1

prepare() {
	default_prepare

	rm -v test/elf/relro.sh
	case "$CARCH" in
	aarch64)
		rm -v test/elf/range-extension-thunk.sh
		rm -v test/elf/dt-init.sh
		;;
	esac
}

build() {
	cmake -B build -G Ninja \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_BUILD_TYPE=Release \
		-DMOLD_LTO=ON \
		-DMOLD_USE_SYSTEM_MIMALLOC=ON \
		-DMOLD_USE_SYSTEM_TBB=ON \
		-DBUILD_TESTING="$(want_check && echo ON || echo OFF)"

	cmake --build build
}

check() {
	ctest --output-on-failure --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
e750ffd23604a33e174444f8f303fa25d13de4ca07585bf000948d2ed7190c925646ec2ad06bfac50f3c504dab83e1bdfa288deb6dd8248a85f8d793210938c3  mold-1.5.0.tar.gz
"
