# Contributor: Kevin Daudt <kdaudt@alpinelinux.org>
# Maintainer: Kevin Daudt <kdaudt@alpinelinux.org>
pkgname=nfpm
pkgver=2.2.5
pkgrel=0
pkgdesc="a simple apk, Deb and RPM packager without external dependencies"
url="https://nfpm.goreleaser.com/"
arch="all"
license="MIT"
makedepends="go"
options="chmod-clean"
source="$pkgname-$pkgver.tar.gz::https://github.com/goreleaser/nfpm/archive/v$pkgver.tar.gz"

export GOPATH="$srcdir/go"

prepare() {
	default_prepare
	mkdir -p bin
}

build() {
	go build -ldflags "-s -w -X main.version=$pkgver" -v -o bin/ ./...
}

check() {
	go test
}

package() {
	install -Dm0755 bin/nfpm "$pkgdir/usr/bin/nfpm"
}

sha512sums="251c0aab63bcdde9dae2e4ecf96bfc8fdadf1e57f931473f33443de95d6eacbd81dd7cea0d435728fefae343318d228269d44cc9c6c849e2a9ee9fd224de1b0e  nfpm-2.2.5.tar.gz"
