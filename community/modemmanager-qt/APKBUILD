# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=modemmanager-qt
pkgver=5.86.0
pkgrel=0
pkgdesc="Qt wrapper for ModemManager DBus API"
# armhf blocked by extra-cmake-modules
# mips64, s390x and riscv64 blocked by polkit -> modemmanager
arch="all !armhf !mips64 !s390x !riscv64"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-only OR LGPL-3.0-only"
depends_dev="
	modemmanager-dev
	qt5-qtbase-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	graphviz-dev
	qt5-qttools-dev
	"
subpackages="$pkgname-dev $pkgname-doc"
options="!check" # requires dbus running
source="https://download.kde.org/stable/frameworks/${pkgver%.*}/modemmanager-qt-$pkgver.tar.xz"

build() {
	cmake -B build \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_QCH=ON
	cmake --build build
}

check() {
	cd build
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}


package() {
	DESTDIR="$pkgdir" cmake --install build
}
sha512sums="
373e4048c5fbdec4fcef2b4fb25f4aec141616d027c29ff12df6360e7320dbd438b1aa29cd467d59310fef5d1d64a5096f71bb0679d3e4b6654b5973e7c7d3ea  modemmanager-qt-5.86.0.tar.xz
"
