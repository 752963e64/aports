# Maintainer: Michał Polański <michal@polanski.me>
pkgname=neatvnc
pkgver=0.5.3
pkgrel=0
pkgdesc="A liberally licensed VNC server library with a clean interface"
url="https://github.com/any1/neatvnc"
license="ISC"
arch="all"
options="!check" # no test suite
makedepends="
	aml-dev
	ffmpeg-dev
	gnutls-dev
	libdrm-dev
	libjpeg-turbo-dev
	libuv-dev
	mesa-dev
	meson
	pixman-dev
	zlib-dev
	"
subpackages="$pkgname-dev"
source="$pkgname-$pkgver.tar.gz::https://github.com/any1/neatvnc/archive/v$pkgver.tar.gz"

build() {
	abuild-meson . output
	meson compile -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
154b28cd476daa71192a3be83eebaa15f654256495b0546cfc326db0f286582e060e401dd0ce27b7bda62f286240bba6356bd5c8e8104727ffd31a38e33cd552  neatvnc-0.5.3.tar.gz
"
