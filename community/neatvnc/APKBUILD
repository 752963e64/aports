# Maintainer: Michał Polański <michal@polanski.me>
pkgname=neatvnc
pkgver=0.3.0
pkgrel=0
pkgdesc="A liberally licensed VNC server library with a clean interface"
url="https://github.com/any1/neatvnc"
license="ISC"
arch="all"
options="!check" # no test suite
makedepends="
	meson
	pixman-dev
	libuv-dev
	libdrm-dev
	zlib-dev
	libjpeg-turbo-dev
	aml-dev
	"
subpackages="$pkgname-dev"
source="$pkgname-$pkgver.tar.gz::https://github.com/any1/neatvnc/archive/v$pkgver.tar.gz"

build() {
	abuild-meson . output
	meson compile -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="6b75a76d012be4d000d334fe4a5da774073dbcaaf9e1bf2a6e7fa54581575c45edb60c6ee267c649c67e638c2d14e2ac659b455d37ec7c05a82c97566ba63cab  neatvnc-0.3.0.tar.gz"
