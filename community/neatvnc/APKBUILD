# Maintainer: Michał Polański <michal@polanski.me>
pkgname=neatvnc
pkgver=0.3.1
pkgrel=0
pkgdesc="A liberally licensed VNC server library with a clean interface"
url="https://github.com/any1/neatvnc"
license="ISC"
arch="all"
options="!check" # no test suite
makedepends="
	meson
	pixman-dev
	libuv-dev
	libdrm-dev
	zlib-dev
	libjpeg-turbo-dev
	aml-dev
	"
subpackages="$pkgname-dev"
source="$pkgname-$pkgver.tar.gz::https://github.com/any1/neatvnc/archive/v$pkgver.tar.gz"

build() {
	abuild-meson . output
	meson compile -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="578594f3feb6c7c33d5f468ec814cc0e30a97e72628dd9244e0d29770f8b5bfd61c9d91a9c92f2545e317d4a7271ae6212c8c75f0c0e2c85d17c0a45e13cd884  neatvnc-0.3.1.tar.gz"
