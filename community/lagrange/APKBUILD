# Maintainer: Michał Polański <michal@polanski.me>
pkgname=lagrange
pkgver=1.6.0
pkgrel=0
pkgdesc="Beautiful Gemini client"
url="https://gmi.skyjake.fi/lagrange"
license="BSD-2-Clause"
arch="all"
makedepends="cmake fribidi-dev harfbuzz-dev libunistring-dev mpg123-dev
	openssl-dev pcre-dev sdl2-dev zlib-dev"
source="https://git.skyjake.fi/gemini/lagrange/releases/download/v$pkgver/lagrange-$pkgver.tar.gz"
options="!check" # no test suite

[ "$CARCH" = "riscv64" ] && options="$options textrels"

build() {
	cmake -B build \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
db0e958b959b4dbcb1d34e4fb7c7683750aa8216dcfa7868aa32397b4740552f96d21f6409320ff2a4353fb695e7aa91efafe12ec5db3be00872cd387641efec  lagrange-1.6.0.tar.gz
"
