# Contributor: Michał Polański <michal@polanski.me>
# Maintainer: Michał Polański <michal@polanski.me>
pkgname=lagrange
pkgver=1.7.3
pkgrel=0
pkgdesc="Beautiful Gemini client"
url="https://gmi.skyjake.fi/lagrange"
license="BSD-2-Clause"
arch="all"
makedepends="cmake fribidi-dev harfbuzz-dev libunistring-dev mpg123-dev
	openssl1.1-compat-dev pcre-dev sdl2-dev zlib-dev"
source="https://git.skyjake.fi/gemini/lagrange/releases/download/v$pkgver/lagrange-$pkgver.tar.gz"
options="!check" # no test suite

[ "$CARCH" = "riscv64" ] && options="$options textrels"


build() {
	cmake -B build \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DENABLE_POPUP_MENUS=OFF \
		-DENABLE_RESIZE_DRAW=OFF
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
ee5261769aab6db63a7e70d21376682ed1946e49ad3b6483a4752ad37f13922561f3a16413dce76b8f928849f50e911aac6f906c1ac750da0d45f1f8dc94e5e0  lagrange-1.7.3.tar.gz
"
