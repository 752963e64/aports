pkgname=lagrange
pkgver=1.6.2
pkgrel=0
pkgdesc="Beautiful Gemini client"
url="https://gmi.skyjake.fi/lagrange"
license="BSD-2-Clause"
arch="all"
makedepends="cmake fribidi-dev harfbuzz-dev libunistring-dev mpg123-dev
	openssl-dev pcre-dev sdl2-dev zlib-dev"
source="https://git.skyjake.fi/gemini/lagrange/releases/download/v$pkgver/lagrange-$pkgver.tar.gz"
options="!check" # no test suite

[ "$CARCH" = "riscv64" ] && options="$options textrels"

build() {
	cmake -B build \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
2f4ad3c93535e8cd8f8106bc7428d0ae00f09ee1dc37334c57bd16d685145250fcc71c4d118206cb30055cd4095f3095f0a23b944769668e6ff3ac11bd36a42f  lagrange-1.6.2.tar.gz
"
