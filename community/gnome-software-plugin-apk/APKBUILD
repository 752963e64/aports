# Contributor: Rasmus Thomsen <oss@cogitri.dev>
# Maintainer: Rasmus Thomsen <oss@cogitri.dev>
pkgname=gnome-software-plugin-apk
pkgver=0.7.0_git20200907
_commit=d0b8d55e0a1cf1881ab84785c8b9f7b06925363b
pkgrel=0
pkgdesc="APK plugin for GNOME Software"
url="https://github.com/Cogitri/gnome-software-plugin-apk"
arch="x86_64 aarch64" # alpinelinux-appstream-data
license="GPL-2.0-or-later"
depends="alpinelinux-appstream-data"
makedepends="meson gnome-software-dev gnome-software-static apk-polkit-rs-dev"
options="!check" # no tests
source="$pkgname-$pkgver.zip::https://github.com/Cogitri/gnome-software-plugin-apk/archive/$_commit.zip"
builddir="$srcdir/$pkgname-$_commit"

# We can't depend on gnome-software-plugin-apk directly in gnome-software
# since that causes a circular dep:
# gnome-software -> gnome-software-plugin-apk -> gnome-software-dev
case "$CARCH" in
	x86_64|aarch64) install_if="gnome-software" ;;
esac

build() {
	abuild-meson . output
	meson compile ${JOBS:+-j ${JOBS}} -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="adea542548a73fce14fa77d8cb7c0ee6e7fdbd9595e380a9d82b6c6118f1758d07576f4128a937b9a7e5e7ab72c67a4186bb992073e3a084b2141a1245b59ab1  gnome-software-plugin-apk-0.7.0_git20200907.zip"
