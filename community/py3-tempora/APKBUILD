# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=py3-tempora
pkgver=5.0.0
pkgrel=0
pkgdesc="Objects and routines pertaining to date and time (tempora)"
url="https://github.com/jaraco/tempora"
arch="noarch"
license="MIT"
depends="
	py3-jaraco.functools
	py3-tz
	python3
	"
# py3-setuptools_scm is required to set version of python module
makedepends="
	py3-jaraco.packaging
	py3-rst.linker
	py3-setuptools
	py3-setuptools_scm
	py3-sphinx
	"
checkdepends="py3-pytest py3-freezegun py3-pytest-freezegun"
subpackages="$pkgname-doc"
source="https://pypi.python.org/packages/source/t/tempora/tempora-$pkgver.tar.gz"
builddir="$srcdir/tempora-$pkgver"

build() {
	python3 setup.py build
}

check() {
	pytest
}

package() {
	python3 setup.py install --prefix=/usr --root="$pkgdir"
	python3 -m sphinx -W --keep-going docs "$pkgdir/usr/share/html/$pkgname"
}

sha512sums="
e95fff8c460329c8369f8f819a95341ec4e1641d2ecc88251c9681ac5e9678eded0f320aa1bff98a980fc552cb214ea3f40c249ea25b54d8fbe34849fffff7b6  tempora-5.0.0.tar.gz
"
