pkgname=httpie
pkgver=3.1.0
pkgrel=0
pkgdesc="CLI, cURL-like tool"
url="https://httpie.org/"
arch="noarch"
license="BSD-3-Clause"
depends="
	py3-defusedxml
	py3-multidict
	py3-pip
	py3-pygments
	py3-pysocks
	py3-requests
	py3-requests-toolbelt
	py3-setuptools
	py3-wheel
	python3
	"
checkdepends="
	py3-pytest
	py3-pytest-httpbin
	py3-pytest-lazy-fixture
	py3-responses
	py3-virtualenv
	"
source="https://files.pythonhosted.org/packages/source/h/httpie/httpie-$pkgver.tar.gz"

# secfixes:
#   1.0.3-r0:
#     - CVE-2019-10751

build() {
	python3 setup.py build
}

check() {
	virtualenv --system-site-packages .venv
	# activate script gets created after running virtualenv
	# shellcheck disable=SC1091
	. .venv/bin/activate
	pip install .

	python3 -m pytest ./httpie ./tests

	deactivate
}

package() {
	python3 setup.py install --prefix=/usr --root="$pkgdir"
}

sha512sums="
