# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=xfce4-screenshooter
pkgver=1.10.1
pkgrel=0
pkgdesc="Screenshot application for Xfce4"
url="https://goodies.xfce.org/projects/applications/xfce4-screenshooter"
arch="all"
license="GPL-2.0-or-later"
subpackages="$pkgname-doc $pkgname-lang"
makedepends="
	exo-dev
	hicolor-icon-theme
	libsoup3-dev
	libxext-dev
	libxfce4ui-dev
	xfce4-panel-dev
	"
source="https://archive.xfce.org/src/apps/xfce4-screenshooter/${pkgver%.*}/xfce4-screenshooter-$pkgver.tar.bz2"

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--libexecdir=/usr/lib \
		--localstatedir=/var \
		--disable-static
	make
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="
1e39bc89c0ec35e88834568a42e20d8f48dc141e045865623d387a91a9c7f7d96457db10e34d7ba6c5d8171673bb3b41f4d91d6cc53d1a841042acaa0cec202b  xfce4-screenshooter-1.10.1.tar.bz2
"
