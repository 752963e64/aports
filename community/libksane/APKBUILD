# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=libksane
pkgver=22.04.1
pkgrel=0
# armhf blocked by extra-cmake-modules
# s390x blocked by ktextwidgest, kwallet
arch="all !armhf !s390x !riscv64"
url="https://www.kde.org/applications/graphics/"
pkgdesc="An image scanning library"
license="LGPL-2.1-only OR LGPL-3.0-only"
makedepends="
	extra-cmake-modules
	ki18n-dev
	ktextwidgets-dev
	kwallet-dev
	kwidgetsaddons-dev
	qt5-qtbase-dev
	samurai
	sane-dev
	"
source="https://download.kde.org/stable/release-service/$pkgver/src/libksane-$pkgver.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	cd build
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
52083c8c018a1dfc37abf378c9df1bd406d8ebec7c1cee45afdeb80e3a696cf001ba046767e390b2999145e1a2e4e3ca74a8e43d314dc75bc8847c50388df766  libksane-22.04.1.tar.xz
"
