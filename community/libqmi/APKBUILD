# Contributor: Stuart Cardall <developer@it-offshore.co.uk>
# Maintainer: Stuart Cardall <developer@it-offshore.co.uk>
pkgname=libqmi
pkgver=1.24.14
pkgrel=0
pkgdesc="QMI modem protocol helper library"
url="https://www.freedesktop.org/wiki/Software/libqmi"
arch="all"
license="GPL-2.0-or-later AND LGPL-2.1-or-later"
makedepends="glib-dev gtk-doc libgudev-dev libmbim-dev linux-headers python3"
subpackages="
	$pkgname-dev
	$pkgname-doc
	$pkgname-bash-completion:bashcomp:noarch
	"
source="https://www.freedesktop.org/software/libqmi/libqmi-$pkgver.tar.xz"

# Tests fail
[ "$CARCH" = s390x ] && options="$options !check"

build() {
	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-static \
		--enable-mbim-qmux \
		--enable-more-warnings=yes
	make
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install
}

bashcomp() {
	depends=""
	pkgdesk="Bash completions for $pkgname"
	install_if="$pkgname=$pkgver-r$pkgrel bash-completion"

	amove usr/share/bash-completion/completions
}

sha512sums="dd934026478db09573bae1f3f5a7e19af7db88f56f64730ee89e208b0465fa25b83d6b6b5155690c8e8705cbc2af532fdc995ec5f88d4752562510265358fe2f  libqmi-1.24.14.tar.xz"
