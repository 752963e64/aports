# Contributor: Natanael Copa <ncopa@alpinelinux.org>
# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=rest
pkgver=0.9.0
pkgrel=0
pkgdesc="Library for access to RESTful web services"
url="https://www.gnome.org/"
arch="all"
license="LGPL-2.0-or-later"
makedepends="
	gi-docgen
	gobject-introspection-dev
	json-glib-dev
	libtool
	libsoup-dev
	meson
	"
subpackages="$pkgname-dev $pkgname-doc"
source="https://download.gnome.org/sources/rest/${pkgver%.*}/rest-$pkgver.tar.xz"

build() {
	abuild-meson . output
	meson compile ${JOBS:+-j ${JOBS}} -C output
}

check() {
	meson check
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
7392dc2b9d90b5140eca0e00c634749cbc3a0780d223da18abe40ddab7570a932746b163fd2f83f15e33e3faa178dc37b041bcb85bd5a18756a122c164c9f84c  rest-0.9.0.tar.xz
"
