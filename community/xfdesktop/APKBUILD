# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=xfdesktop
pkgver=4.20.0
pkgrel=0
pkgdesc="Desktop manager for Xfce"
url="https://xfce.org/"
arch="all"
license="GPL-2.0-or-later"
subpackages="$pkgname-doc $pkgname-lang"
depends="hicolor-icon-theme"
makedepends="
	exo-dev
	garcon-dev
	intltool
	libnotify-dev
	libwnck3-dev
	libxfce4ui-dev
	libxfce4windowing-dev
	thunar-dev
	"
source="https://archive.xfce.org/src/xfce/xfdesktop/${pkgver%.*}/xfdesktop-$pkgver.tar.bz2"

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--libexecdir=/usr/lib \
		--localstatedir=/var \
		--disable-static
	make
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="
84b0c87c9678d3d6170af3d6edabe983282b0bd4d696e32d3a1eaaca99651d56387a9767645d5b48afdc517a18503e42fdaf0a72af9a73144475fb3b6183219c  xfdesktop-4.20.0.tar.bz2
"
