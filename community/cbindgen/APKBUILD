# Contributor: Leo <thinkabit.ukim@gmail.com>
# Maintainer: Leo <thinkabit.ukim@gmail.com>
pkgname=cbindgen
pkgver=0.10.1
pkgrel=0
pkgdesc="Tool to generate C bindings from Rust code"
url="https://github.com/eqrion/cbindgen"
arch="x86_64 armv7 armhf aarch64 x86 ppc64le" # Limited by cargo
license="MPL-2.0"
makedepends="cargo"
source="$pkgname-$pkgver.tar.gz::https://github.com/eqrion/cbindgen/archive/v$pkgver.tar.gz"

build() {
	cargo build --release --verbose
}

check() {
	# Failing tests
	rm -rf tests/rust/expand*
	cargo test --release --verbose
}

package() {
	install -Dm0755 target/release/cbindgen -t "$pkgdir"/usr/bin
}

sha512sums="7c3e816698b244bdb3e970c62e4d035734adfa49cfba557f7919782b1e1301eefad82f3d56eb984441e4101b25239d0578151089c9e87900f28d0b7005d6cc6d  cbindgen-0.10.1.tar.gz"
