# Contributor: Síle Ekaterin Liszka <sheila@vulpine.house>
# Maintainer: Síle Ekaterin Liszka <sheila@vulpine.house>
pkgname=coeurl
pkgver=0.1.1
pkgrel=0
pkgdesc="Asynchronous wrapper around libcurl"
url="https://nheko.im/nheko-reborn/coeurl"
arch="all"
license="MIT"
makedepends="cmake curl-dev libevent-dev meson spdlog-dev"
subpackages="$pkgname-dev"
source="https://nheko.im/nheko-reborn/coeurl/-/archive/v$pkgver/coeurl-v$pkgver.tar.bz2"
builddir="$srcdir/$pkgname-v$pkgver"

build() {
	meson \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var \
		--buildtype=plain \
		. output
	meson compile ${JOBS:+-j ${JOBS}} -C output
}

check() {
	meson test --no-rebuild -v -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
9f781b30f57314253602b8560954122537b3c1d40cc327c62aac3662ba80ec8fe45fc69adec5c571b8861c996724c7869e4dc88fafc5ebee31794299de999e34  coeurl-v0.1.1.tar.bz2
"
