# Contributor: Jakub Jirutka <jakub@jirutka.cz>
# Maintainer: Jakub Jirutka <jakub@jirutka.cz>
pkgname=tree-sitter-bash
pkgver=0.19.0
pkgrel=1
pkgdesc="Bash grammar for tree-sitter"
url="https://github.com/tree-sitter/tree-sitter-bash"
arch="all"
license="MIT"
makedepends="tree-sitter-dev"
install_if="tree-sitter-grammars"
source="https://github.com/tree-sitter/tree-sitter-bash/archive/v$pkgver/tree-sitter-bash-$pkgver.tar.gz"
options="!check"  # no tests for shared lib

_lang=${pkgname#tree-sitter-}

build() {
	cd src

	cc $CFLAGS -fPIC -Wall -std=c99 -c ./*.c
	c++ $CXXFLAGS -fPIC -Wall -c ./*.cc
	c++ $LDFLAGS -shared -Wl,--no-undefined -o $_lang.so ./*.o
}

package() {
	# Some programs expect grammar libs as <lang>.so in a specific
	# directory, some expect libtree-sitter-<lang>.so on the library path.
	install -D -m755 src/$_lang.so -t "$pkgdir"/usr/lib/tree-sitter/
	ln -s tree-sitter/$_lang.so "$pkgdir"/usr/lib/libtree-sitter-$_lang.so
}

sha512sums="
62bc8bc25c999f9c79632bd6b236edd21ef15b14365dd1a956237b11a32f5e60a2f420ec67b60d46203699b7841d4bc10978fc0307d0c4013b376c6c024d89ae  tree-sitter-bash-0.19.0.tar.gz
"
