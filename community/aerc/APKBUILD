# Maintainer: Drew DeVault <sir@cmpwn.com>
pkgname=aerc
pkgver=0.8.1
pkgrel=0
pkgdesc="email client for your terminal"
url="https://aerc-mail.org"
arch="all"
license="MIT"
depends="less ncurses"
makedepends="go scdoc"
subpackages="$pkgname-doc"
source="$pkgname-$pkgver.tar.gz::https://git.sr.ht/~rjarry/aerc/archive/$pkgver.tar.gz"

build() {
	unset LDFLAGS # passed as go linker flags and invalid
	make PREFIX=/usr VERSION=$pkgver
}

check() {
	go test ./...
}

package() {
	make install PREFIX=/usr DESTDIR="$pkgdir"
}

sha512sums="
0d3903e0f57ed34d15a58d8ab2ac0c90918db207f5a48a40695a72b9156e7a3d04b932a3a8aaeedc2ee14050d8ebfe5a6acf6e8a9827cee74ff42733ae2e8a97  aerc-0.8.1.tar.gz
"
