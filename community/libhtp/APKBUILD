# Contributor: Steve McMaster <code@mcmaster.io>
# Maintainer: Steve McMaster <code@mcmaster.io>
pkgname=libhtp
pkgver=0.5.37
pkgrel=0
pkgdesc="HTTP normalizer and parser library"
url="https://github.com/OISF/libhtp"
arch="all"
license="BSD-3-Clause"
depends_dev="zlib-dev"
makedepends="$depends_dev automake autoconf libtool"
subpackages="$pkgname-dev"
source="$pkgname-$pkgver.tar.gz::https://github.com/OISF/libhtp/archive/$pkgver.tar.gz"

prepare() {
	default_prepare
	autoreconf -vif
}

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var \
		--disable-static
	make
}

package() {
	make DESTDIR="$pkgdir" install
}

check() {
	make check
}

sha512sums="e2a16862703e2541cecb841bc93fe1ea72f580fb5ed2c54583072bee4843b41510dae53a0e76105d2ee2e06ea5e3410c280296a98fbf8e24f7cf2705356bb9e2  libhtp-0.5.37.tar.gz"
