# Contributor: Francesco Colista <fcolista@alpinelinux.org>
# Maintainer: Francesco Colista <fcolista@alpinelinux.org>
pkgname=yad
pkgver=2.0
pkgrel=0
pkgdesc="A fork of zenity - display graphical dialogs from shell scripts or command line"
url="https://sourceforge.net/projects/yad-dialog"
arch="all"
license="GPL-3.0"
depends="hicolor-icon-theme"
makedepends="gtk+3.0-dev webkit2gtk-dev intltool libtool automake autoconf"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"
source="$pkgname-$pkgver.tar.gz::https://github.com/v1cont/$pkgname/archive/$pkgver.tar.gz"
builddir="$srcdir"/$pkgname-$pkgver

prepare() {
	default_prepare
	autoreconf -ivf && intltoolize
}

build() {
	./configure \
		--prefix=/usr \
		--enable-icon-browser \
		--enable-html \
		--disable-pfd
	make
}

check() {
	echo "src/util.c" >> po/POTFILES.in
	make check
}

package() {
	make DESTDIR="${pkgdir}" install
	mkdir -p "$pkgdir/usr/share/doc/$pkgname"
}

sha512sums="958c2f3dd6e62815fd89d43d3657445bbc9d08180e4527c5c556220f6a5647783bb1520a41dfef5c63e0e9c500ca0d55b66eabd374a3da680e603394e1e06173  yad-2.0.tar.gz"
