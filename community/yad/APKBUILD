# Contributor: Francesco Colista <fcolista@alpinelinux.org>
# Maintainer: Francesco Colista <fcolista@alpinelinux.org>
pkgname=yad
pkgver=9.2
pkgrel=0
pkgdesc="A fork of zenity - display graphical dialogs from shell scripts or command line"
url="https://sourceforge.net/projects/yad-dialog"
arch="all !mips64" # webkit2gtk
license="GPL-3.0-or-later"
depends="hicolor-icon-theme"
makedepends="gtk+3.0-dev webkit2gtk-dev intltool"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"
source="https://github.com/v1cont/yad/releases/download/v$pkgver/yad-$pkgver.tar.xz"

build() {
	./configure \
		--prefix=/usr \
		--enable-icon-browser \
		--enable-html \
		--disable-pfd
	make
}

check() {
	echo "src/util.c" >> po/POTFILES.in
	make check
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="ff231a2681cc4b3b602231db7ee766fbb747d5b07f5072a59179b0becdba4ce58ed7104adff8d2bc6a96d6a7fd35686524a7ff15593ea4b30e6360f515f9558b  yad-9.2.tar.xz"
