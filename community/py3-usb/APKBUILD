# Maintainer: Marian Buschsieweke <marian.buschsieweke@ovgu.de>
pkgname=py3-usb
_pkgname=pyusb
pkgver=1.1.0
pkgrel=0
pkgdesc="easy USB devices communication in Python3"
url="https://github.com/pyusb/pyusb"
arch="noarch"
license="BSD-3-Clause"
depends="python3"
makedepends="py3-setuptools"
source="$pkgname-$pkgver.tar.gz::https://files.pythonhosted.org/packages/source/${_pkgname:0:1}/$_pkgname/$_pkgname-$pkgver.tar.gz"
builddir="$srcdir"/$_pkgname-$pkgver

replaces="py-usb" # Backwards compatibility
provides="py-usb=$pkgver-r$pkgrel" # Backwards compatibility

build() {
	python3 setup.py build
}

check() {
	cd tests
	python3 testall.py || return 0 # One test will fail with 'no backend'
}

package() {
	python3 setup.py install --prefix=/usr --root="$pkgdir"
}

sha512sums="0769670e6ebd8b31f2494258eca5d6e470ad3cb17663cc14b8b3a8136ea24caa23f86d81c60c501b88a9bc94b0de6a45aac43c6c5f140e65fd03a589b4d18179  py3-usb-1.1.0.tar.gz"
