# Contributor: Valery Kartel <valery.kartel@gmail.com>
# Maintainer: Fabian Affolter <fabian@affolter-engineering.ch>
pkgname=py3-pyzmq
_pkgname=pyzmq
pkgver=18.0.1
pkgrel=2
pkgdesc="Python bindings for ZeroMQ"
url="https://pypi.python.org/pypi/pyzmq"
arch="all !s390x" # https://github.com/zeromq/pyzmq/issues/1274
license="LGPL-3.0-or-later BSD"
depends="python3"
makedepends="python3-dev py3-setuptools zeromq-dev"
checkdepends="py3-pytest"
source="https://files.pythonhosted.org/packages/source/p/$_pkgname/$_pkgname-$pkgver.tar.gz"
builddir="$srcdir/$_pkgname-$pkgver"

replaces=py-zmq # Backwards compatibility
provides=py-zmq=$pkgver-r$pkgrel # Backwards compatibility

build() {
	python3 setup.py build
}

check() {
	python3 setup.py build_ext --inplace
	python3 setup.py test
}

package() {
	python3 setup.py install --prefix=/usr --root="$pkgdir"
}

sha512sums="bb120811d160e31ce666d5ea92baacb33f3443522d767069ae58b9d2face973d957340c940006c59f6e163752d9fa26c3495f25dc29257bad0d0aa0d762bc4f2  pyzmq-18.0.1.tar.gz"
