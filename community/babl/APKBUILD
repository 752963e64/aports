# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=babl
pkgver=0.1.76
pkgrel=0
pkgdesc="Dynamic, any to any, pixel format conversion library"
url="http://gegl.org/babl"
arch="all"
license="LGPL-3.0-or-later"
makedepends="meson gobject-introspection-dev lcms2-dev vala"
subpackages="$pkgname-dev"
source="https://ftp.gimp.org/pub/babl/${pkgver%.*}/babl-$pkgver.tar.xz"

case "$CARCH" in
# tests time out on builder
mips*)	options="!check";;
esac

build() {
	abuild-meson . output
	ninja -C output
}

check() {
	ninja -C output test
}

package() {
	DESTDIR="$pkgdir" ninja -C output install
}

sha512sums="9f4b3abb402ae92478c1273d9b71cd235547d755b83d658c39ab4d0a31aad387fe5d81aea1d3bf99de4be6cf8ebd609ec9eb469ddde435922664c07eb71eae6c  babl-0.1.76.tar.xz"
