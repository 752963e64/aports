# Maintainer: psykose <alice@ayaya.dev>
pkgname=pythran
pkgver=0.13.0
pkgrel=0
pkgdesc="Ahead of Time compiler for numeric kernels"
url="https://github.com/serge-sans-paille/pythran"
arch="noarch"
license="BSD-3-Clause"
depends="
	py3-beniget
	py3-gast
	py3-numpy
	py3-ply
	python3
	"
makedepends="py3-gpep517 py3-setuptools python3-dev py3-wheel"
checkdepends="py3-pytest"
subpackages="$pkgname-pyc"
source="$pkgname-$pkgver.tar.gz::https://github.com/serge-sans-paille/pythran/archive/refs/tags/$pkgver.tar.gz
	arm-hwcap.patch
	cxx14compat.patch
	"
options="!check" # tests loop forever

build() {
	gpep517 build-wheel \
		--wheel-dir dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages testenv
	testenv/bin/python3 -m installer dist/*.whl
	testenv/bin/python3 -m pytest
}

package() {
	python3 -m installer -d "$pkgdir" \
		dist/*.whl
}

sha512sums="
014e57f65c694c6f14074dbf9824cbcc40899da4e9f82cd104f1348fc2d2fc3b056a5349a33f0f38eacaf59256853c89b9d4be40de52731b4710311c870d973d  pythran-0.13.0.tar.gz
25ac033c493f9beec68197c4c5c351921de3d7ca65010c32eaed1f0325a676dba2afa3e2d548bb1e528dfb035fb993bacf15ee2532eca7c212a663aa6d8b43c1  arm-hwcap.patch
77b1730caddd33f729965661a1c5ee570f968c88c70db8d19e6201e9690cf62b48dacfdab0a2bf97c0cba742238372a916ab31ec487a3f0026d80bf1f2fb21d0  cxx14compat.patch
"
