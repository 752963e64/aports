# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=upower
pkgver=0.99.15
pkgrel=0
pkgdesc="Power Management Services"
url="https://upower.freedesktop.org"
# s390x and riscv64 blocked by polkit
arch="all !s390x !riscv64"
license="GPL-2.0-or-later"
makedepends="
	docbook-xsl
	eudev-dev
	glib-dev
	gobject-introspection-dev
	gtk-doc
	libgudev-dev
	libxslt
	meson"
checkdepends="dbus py3-dbus py3-dbusmock py3-gobject3 py3-packaging umockdev-dev"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"
source="https://gitlab.freedesktop.org/upower/upower/-/archive/v$pkgver/upower-v$pkgver.tar.bz2
	fix-timeout.patch
	"
builddir="$srcdir/$pkgname-v$pkgver"

build() {
	abuild-meson \
		-Dudevrulesdir=/lib/udev/rules.d \
		-Dsystemdsystemunitdir=no \
		. output
	meson compile ${JOBS:+-j ${JOBS}} -C output
}

check() {
	meson test --no-rebuild -v -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
289c70ddd9175f13769803b3f95703f842640e8ec2c8dfc1ef3a8c151b7c309e404e375209c957d45578f4b9107ccd140cc35f5d592f6f84129c00266280ef4a  upower-v0.99.15.tar.bz2
308fcd3c2907491b64ad40180906c0af403886f7c6b34321c27f7f91609dd3844e05d853c6a8b57c6bf192cf965f246d802ad4b935c78fa564787f45ee9f8c2e  fix-timeout.patch
"
