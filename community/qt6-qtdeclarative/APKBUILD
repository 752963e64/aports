# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=qt6-qtdeclarative
pkgver=6.2.0
pkgrel=0
pkgdesc="Classes for QML and JavaScript languages"
url="https://qt.io/"
arch="all"
license="LGPL-2.1-only AND LGPL-3.0-only AND GPL-3.0-only AND Qt-GPL-exception-1.0"
depends_dev="
	qt6-qtbase-dev
	vulkan-headers
	"
makedepends="$depends_dev
	cmake
	lttng-ust-dev
	perl
	qt6-qtshadertools-dev
	"
subpackages="$pkgname-dev"
options="!check" # No tests
builddir="$srcdir/qtdeclarative-everywhere-src-${pkgver/_/-}"

case $pkgver in
	*_alpha*|*_beta*|*_rc*) _rel=development_releases;;
	*) _rel=official_releases;;
esac

source="https://download.qt.io/$_rel/qt/${pkgver%.*}/${pkgver/_/-}/submodules/qtdeclarative-everywhere-src-${pkgver/_/-}.tar.xz"

_qt6_prefix=/usr/lib/qt6

prepare() {
	default_prepare

	export PATH="$PATH:/usr/lib/qt6/bin"
}

build() {
	cmake -B build \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

dev() {
	default_dev

	find "$pkgdir"/"$_qt6_prefix"/bin/ -type f -not -name "qmlscene" | while read -r f; do
		file=$(basename $f)
		amove "${_qt6_prefix#/}"/bin/$file
	done
}


sha512sums="
5922d50258f5903561153037620aa96048cc7f93e948efe04aa7f25003d125010f64adffdd52df148558ab9275a5da8a43cf299072806fe54309735d0c5a7215  qtdeclarative-everywhere-src-6.2.0.tar.xz
"
