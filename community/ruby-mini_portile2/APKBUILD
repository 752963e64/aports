pkgname=ruby-mini_portile2
_gemname=${pkgname#ruby-}
pkgver=2.5.2
pkgrel=0
pkgdesc="Simplistic port-like solution for developers"
url="https://github.com/flavorjones/mini_portile"
arch="noarch"
license="MIT"
depends="ruby"
source="https://rubygems.org/downloads/$_gemname-$pkgver.gem"
options="!check"  # FIXME

package() {
	local gemdir="$pkgdir/$(ruby -e 'puts Gem.default_dir')"
	local geminstdir="$gemdir/gems/$_gemname-$pkgver"

	gem install \
		--local \
		--install-dir "$gemdir" \
		--ignore-dependencies \
		--no-document \
		--verbose \
		"$srcdir"/$_gemname-$pkgver.gem

	rm -rf "$gemdir"/cache \
		"$geminstdir"/.github \
		"$geminstdir"/test \
		"$geminstdir"/*.md \
		"$geminstdir"/*.txt \
		"$geminstdir"/*.yml \
		"$geminstdir"/Rakefile
}

sha512sums="
79e03ccb616d94d8ae6eca28246ccf367d2f46666e3ccdaf64656c2457f70a8859ffbbec928166ea27dc6521a7f6046f42f0ef12671db98ac094466dd5c90ede  mini_portile2-2.5.2.gem
"
