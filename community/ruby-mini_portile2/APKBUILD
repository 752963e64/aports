pkgname=ruby-mini_portile2
_gemname=${pkgname#ruby-}
pkgver=2.5.1
pkgrel=0
pkgdesc="Simplistic port-like solution for developers"
url="https://github.com/flavorjones/mini_portile"
arch="noarch"
license="MIT"
depends="ruby"
source="https://rubygems.org/downloads/$_gemname-$pkgver.gem"
options="!check"  # FIXME

package() {
	local gemdir="$pkgdir/$(ruby -e 'puts Gem.default_dir')"
	local geminstdir="$gemdir/gems/$_gemname-$pkgver"

	gem install \
		--local \
		--install-dir "$gemdir" \
		--ignore-dependencies \
		--no-document \
		--verbose \
		"$srcdir"/$_gemname-$pkgver.gem

	rm -rf "$gemdir"/cache \
		"$geminstdir"/.github \
		"$geminstdir"/test \
		"$geminstdir"/*.md \
		"$geminstdir"/*.txt \
		"$geminstdir"/*.yml \
		"$geminstdir"/Rakefile
}

sha512sums="dc696d1bebf2dabe227d5a7b49843da7317cd7ffff49e3078ca6b6608154e177dafcc7ddce7bd1c94b78fcbf97c3428cee716cea232ac94e11b2ca86de18a66b  mini_portile2-2.5.1.gem"
