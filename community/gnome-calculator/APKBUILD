# Contributors: Rasmus Thomsen <oss@cogitri.dev>
# Maintainer: Rasmus Thomsen <oss@cogitri.dev>
pkgname=gnome-calculator
pkgver=43.0
pkgrel=0
pkgdesc="Calculator for solving mathematical equations"
url="https://wiki.gnome.org/Apps/Calculator"
# s390x and riscv64 blocked by gtk4
arch="all !s390x !riscv64"
license="GPL-3.0-or-later"
# font needed for pango in tests and valadoc
makedepends="
	glib-dev
	gtksourceview5-dev
	gtk4.0-dev
	itstool
	libadwaita-dev
	libgee-dev
	libsoup3-dev
	libxml2-dev
	meson
	mpc1-dev
	mpfr-dev
	ttf-cantarell
	vala
	"
subpackages="$pkgname-doc $pkgname-lang $pkgname-dev"
source="https://download.gnome.org/sources/gnome-calculator/${pkgver%.*}/gnome-calculator-$pkgver.tar.xz"

if [ "$CARCH" = armhf ]; then
	options="$options !check" # tests time out on armhf
fi

build() {
	abuild-meson . output
	meson compile ${JOBS:+-j ${JOBS}} -C output
}

check() {
	meson test --no-rebuild --print-errorlogs -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
1abcc97d14d19dab2c1b293062a3753d15dca7cbf979375c53de33226d1f4c776c0691034d8cea8a6b6df5ffac3fdfbeb8a64ef761dbf8262599bfb271381b0a  gnome-calculator-43.0.tar.xz
"
