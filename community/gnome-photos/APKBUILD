# Contributor: Rasmus Thomsen <oss@cogitri.dev>
# Maintainer: Rasmus Thomsen <oss@cogitri.dev>
pkgname=gnome-photos
pkgver=43.0
pkgrel=0
pkgdesc="Access, organize and share your photos on GNOME"
url="https://wiki.gnome.org/Apps/Photos"
# s390x blocked by exempi -> tracker-miners
arch="all !s390x"
license="GPL-3.0-or-later"
depends="
	gsettings-desktop-schemas
	tracker-miners
	"
makedepends="
	babl-dev
	cairo-dev
	dbus-dev
	gegl-dev
	geocode-glib-dev>=3.26.4-r1
	gexiv2-dev
	glib-dev
	gnome-online-accounts
	grilo-dev
	gsettings-desktop-schemas-dev
	gtk+3.0-dev
	itstool
	libdazzle-dev
	libgdata-dev
	libhandy1-dev
	libjpeg-turbo-dev
	libpng-dev
	libportal-dev
	meson
	tracker-dev
	"
subpackages="$pkgname-lang $pkgname-doc"
source="https://download.gnome.org/sources/gnome-photos/${pkgver%.*}/gnome-photos-$pkgver.tar.xz"

build() {
	abuild-meson \
		-Db_lto=true \
		-Ddogtail=false \
		. output
	meson compile ${JOBS:+-j ${JOBS}} -C output
}

check() {
	meson test --no-rebuild --print-errorlogs -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
003f9bda3aa8a3d72aec960d7377d4df08784a95de66505b77ac2e2a75c44fb772fc560162f0e5195b4c3cb8a648263f2403ecc18648fafdc3e748eccf297e7c  gnome-photos-43.0.tar.xz
"
