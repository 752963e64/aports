pkgname=iwd
pkgver=0.23
pkgrel=0
pkgdesc="Internet Wireless Daemon"
url="https://iwd.wiki.kernel.org/"
arch="all"
license="LGPL-2.1-or-later"
depends="ell>=0.25"
makedepends="ell-dev dbus-dev readline-dev linux-headers asciidoc"
checkdepends="coreutils"
subpackages="$pkgname-doc $pkgname-openrc"
source="https://mirrors.edge.kernel.org/pub/linux/network/wireless/iwd-$pkgver.tar.gz
	dbus-netdev-group.patch
	disable-eapol-test.patch
	iwd.initd
	"
build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var \
		--enable-external-ell \
		--disable-systemd-service \
		--enable-sim-hardcoded \
		--enable-tools \
		--enable-docs
	make
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install
	install -m750 -d "$pkgdir"/var/lib/$pkgname
	install -Dm644 doc/main.conf "$pkgdir"/etc/"$pkgname"/main.conf
	install -m755 -D "$srcdir"/$pkgname.initd \
		"$pkgdir"/etc/init.d/$pkgname
}

