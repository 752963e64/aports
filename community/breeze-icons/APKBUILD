# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=breeze-icons
pkgver=5.79.0
pkgrel=0
pkgdesc="Breeze icon themes"
arch="noarch !armhf" # armhf blocked by extra-cmake-modules
url="https://community.kde.org/Frameworks"
license="LGPL-3.0-or-later"
makedepends="extra-cmake-modules qt5-qtbase-dev"
checkdepends="bash"
source="https://download.kde.org/stable/frameworks/${pkgver%.*}/breeze-icons-$pkgver.tar.xz"

build() {
	cmake -B build \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DBINARY_ICONS_RESOURCE=ON
	cmake --build build
}

check() {
	cd build
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest -E '(dupe|symlink)'
}

package() {
	DESTDIR="$pkgdir" cmake --build build --target install
}
sha512sums="d54d85f2a8005060349852ebe82ebdd70e45abaaa490da084cbc2066bb086c3d27e511419cfcbcc95c48332fbbabace4effebc28f56fafbb1b8921b1a2b69998  breeze-icons-5.79.0.tar.xz"
