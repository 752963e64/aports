# Contributor: Jakub Jirutka <jakub@jirutka.cz>
# Maintainer: Jakub Jirutka <jakub@jirutka.cz>
pkgname=mprocs
pkgver=0.4.1
pkgrel=0
pkgdesc="Run multiple commands in parallel"
url="https://github.com/pvolok/mprocs"
arch="aarch64 armhf armv7 ppc64le x86 x86_64"  # blocked by rust/cargo
license="MIT"
makedepends="cargo"
source="https://github.com/pvolok/mprocs/archive/v$pkgver/mprocs-$pkgver.tar.gz"

export CARGO_PROFILE_RELEASE_CODEGEN_UNITS=1
export CARGO_PROFILE_RELEASE_LTO="true"
export CARGO_PROFILE_RELEASE_OPT_LEVEL="z"
export CARGO_PROFILE_RELEASE_PANIC="abort"

prepare() {
	default_prepare

	cargo fetch --locked
}

build() {
	cargo build --frozen --release
}

check() {
	cargo test --frozen
}

package() {
	install -D -m755 target/release/mprocs -t "$pkgdir"/usr/bin/
}

sha512sums="
3d95565fb5e0bd8897e09b7a8ac698387307af704d5069d5c170d09a6954e37494e400ac9c61059530dc3de87309afc81f7fffb98b0a792356ad767b99b3ff7a  mprocs-0.4.1.tar.gz
"
