# Maintainer: opal hart <opal@wowana.me>
pkgname=py3-keyring
pkgver=23.10.0
pkgrel=0
pkgdesc="Access the system keyring service from Python"
url="https://github.com/jaraco/keyring"
arch="noarch"
license="GPL-3.0-only"
depends="
	py3-importlib-metadata
	py3-jaraco.classes
	py3-jeepney
	py3-secretstorage
	python3
	"
makedepends="py3-setuptools py3-gpep517 py3-installer py3-wheel py3-setuptools_scm"
checkdepends="py3-pytest"
source="https://files.pythonhosted.org/packages/source/k/keyring/keyring-$pkgver.tar.gz"
builddir="$srcdir/keyring-$pkgver"

export SETUPTOOLS_SCM_PRETEND_VERSION=$pkgver

build() {
	gpep517 build-wheel \
		--wheel-dir dist \
		--output-fd 1
}

check() {
	pytest
}

package() {
	python3 -m installer -d "$pkgdir" \
		dist/keyring-$pkgver-py3-none-any.whl
}

sha512sums="
eb930ab06c25016cf56a2240db5920f5b9fb164e9e3b84f4fe0580a71ddcba4d97b5fa982e138af20ff6b87dd14f866e32cf9c1bedb56e8c91cb97f658a1ed95  keyring-23.10.0.tar.gz
"
