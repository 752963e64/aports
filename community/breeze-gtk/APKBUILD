# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=breeze-gtk
pkgver=5.17.0
pkgrel=0
pkgdesc="A GTK Theme Built to Match KDE's Breeze"
arch="all"
url="https://www.kde.org/workspaces/plasmadesktop/"
license="LGPL-2.1-only"
depends="gtk-engines"
makedepends="extra-cmake-modules sassc breeze-dev breeze py3-cairo"
source="https://download.kde.org/stable/plasma/$pkgver/breeze-gtk-$pkgver.tar.xz"

prepare() {
	default_prepare

	mkdir "$builddir"/build
}

build() {
	cd "$builddir"/build
	cmake "$builddir" \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	make
}

check() {
	cd "$builddir"/build
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}

package() {
	cd "$builddir"/build
	DESTDIR="$pkgdir" make install
}
sha512sums="061cac638a78d7ff22298bf50caecc38299f21c3e67b403c625ad6ed43f6031cec7634a1ecc68f548f47db89356f61cb2994efaeb592e6d4ef304184d3376b10  breeze-gtk-5.17.0.tar.xz"
