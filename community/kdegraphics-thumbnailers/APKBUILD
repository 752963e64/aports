# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=kdegraphics-thumbnailers
pkgver=21.12.1
pkgrel=0
# armhf blocked by extra-cmake-modules
# s390x and riscv64 blocked by kio -> polkit
arch="all !armhf !s390x !mips64 !riscv64"
pkgdesc="Thumbnailers for various graphics file formats"
url="https://www.kde.org/applications/graphics/"
license="GPL-2.0-or-later AND LGPL-2.0-or-later"
makedepends="
	extra-cmake-modules
	qt5-qtbase-dev
	kio-dev
	karchive-dev
	libkexiv2-dev
	libkdcraw-dev
	"
source="https://download.kde.org/stable/release-service/$pkgver/src/kdegraphics-thumbnailers-$pkgver.tar.xz"
options="!check" # No tests

build() {
	cmake -B build \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
ccb50ea73efeb29d0436875167f462a4055b942d90634609b1e8c7002c2dcfdf2dfd2fb6e1135ed07ad879503055f9c92bd69aa7370a9855fc949ef4d668e482  kdegraphics-thumbnailers-21.12.1.tar.xz
"
