# Contributor: Jakub Jirutka <jakub@jirutka.cz>
# Maintainer: Jakub Jirutka <jakub@jirutka.cz>
pkgname=smenu
pkgver=0.9.16
pkgrel=0
pkgdesc="A standard input word picker"
url="https://github.com/p-gen/smenu"
arch="all"
license="GPL-2.0-only"
makedepends="ncurses-dev"
options="!check"  # tests seems to need full terminal to run
subpackages="$pkgname-doc"
source="https://github.com/p-gen/smenu/archive/v$pkgver/smenu-$pkgver.tar.gz"

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var
	make
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="f3a62812c3fce079a8b38e8da8a4b5e40538bd13b13206e9a7d87ba7699fc5064dbefb4990f763e65e2045067e2e3b354f9f6da98503da18553418d53c4a3009  smenu-0.9.16.tar.gz"
