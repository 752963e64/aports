#     - CVE-2019-19479
#     - CVE-2019-19480
#     - CVE-2019-19481
#   0.19.0-r0:
#     - CVE-2018-16391
#     - CVE-2018-16392
#     - CVE-2018-16393
#     - CVE-2018-16418
#     - CVE-2018-16419
#     - CVE-2018-16420
#     - CVE-2018-16421
#     - CVE-2018-16422
#     - CVE-2018-16423
#     - CVE-2018-16424
#     - CVE-2018-16425
#     - CVE-2018-16426
#     - CVE-2018-16427

prepare() {
	default_prepare
	./bootstrap
}

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var \
		--enable-zlib \
		--enable-readline \
		--enable-openssl \
		--enable-pcsc \
		--enable-sm
	make
}

package() {
	make DESTDIR="$pkgdir" install
	install -D -m644 etc/opensc.conf \
		"$pkgdir/etc/opensc.conf"

	mkdir -p "$pkgdir"/usr/share/bash-completion
	mv "$pkgdir"/etc/bash_completion.d "$pkgdir"/usr/share/bash-completion/completions
}

bashcomp() {
	depends=""
	pkgdesc="Bash completions for $pkgname"
	install_if="$pkgname=$pkgver-r$pkgrel bash-completion"

	amove usr/share/bash-completion/completions
}

