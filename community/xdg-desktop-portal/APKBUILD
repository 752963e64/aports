# Contributor: Rasmus Thomsen <oss@cogitri.dev>
# Maintainer: Rasmus Thomsen <oss@cogitri.dev>
pkgname=xdg-desktop-portal
pkgver=1.12.1
pkgrel=0
pkgdesc="Desktop integration portal"
options="!check" # Requires libportal which has no stable tags
url="https://github.com/flatpak/xdg-desktop-portal"
# s390x blocked by pipewire
# mips64 and riscv64 blocked by polkit -> flatpak
arch="all !mips64 !s390x !riscv64"
license="LGPL-2.1-or-later"
depends="bubblewrap"
makedepends="gettext-dev glib-dev json-glib-dev fontconfig-dev
	geoclue-dev xmlto flatpak flatpak-dev pipewire-dev fuse-dev autoconf automake libtool"
checkdepends="dbus"
subpackages="$pkgname-lang $pkgname-doc"
source="https://github.com/flatpak/xdg-desktop-portal/releases/download/$pkgver/xdg-desktop-portal-$pkgver.tar.xz"

prepare() {
	default_prepare

	sed 's|/usr/bin/sh|/bin/sh|' \
		-i compile \
		-i missing \
		-i install-sh \
		-i depcomp \
		-i config.sub \
		-i config.guess

	autoreconf -fi
}


build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var \
		--enable-docbook-docs \
		--disable-libportal # Unpackaged, has no stable tags
	make
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install

	# We don't need this
	rm -rf "$pkgdir"/usr/lib/systemd

	mkdir -p "$pkgdir"/usr/lib
	mv "$pkgdir"/usr/share/pkgconfig "$pkgdir"/usr/lib
}

sha512sums="
62df427e2d8d54acd9a34a02a77c26ae3911fbb4c5844eff4a253dc839775c929c6945401b93549ba200ba637d315146767e41f18a831d7627b35de880de0da1  xdg-desktop-portal-1.12.1.tar.xz
"
