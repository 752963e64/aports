# Contributor: Jakub Jirutka <jakub@jirutka.cz>
# Maintainer: Jakub Jirutka <jakub@jirutka.cz>
pkgname=dust
pkgver=0.8.4
pkgrel=0
pkgdesc="A more intuitive version of du in Rust"
url="https://github.com/bootandy/dust"
# riscv64: rust broken
arch="all !riscv64"
license="Apache-2.0"
makedepends="cargo"
options="net"
source="https://github.com/bootandy/dust/archive/v$pkgver/dust-$pkgver.tar.gz"

case "$CARCH" in
	# Some test fail on CI builders (see #/27645).
	armhf | armv7) options="!check";;
esac

export CARGO_PROFILE_RELEASE_OPT_LEVEL="z"
export CARGO_REGISTRIES_CRATES_IO_PROTOCOL="sparse"

prepare() {
	default_prepare

	cargo fetch --target="$CTARGET" --locked
}

build() {
	cargo build --release --frozen
}

check() {
	cargo test --frozen
}

package() {
	install -D -m755 target/release/$pkgname -t "$pkgdir"/usr/bin/
}

sha512sums="
3a0b8d3a136d69a4bf8a67e9c2de9f06a0cf6977eddebd6243b89d2cb889e334f27137e76cf456f9446f13d3a6cd382022f327ddf45b188bab943942bd101d23  dust-0.8.4.tar.gz
"
