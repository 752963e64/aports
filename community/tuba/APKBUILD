# Maintainer: Willow Barraco <contact@willowbarraco.fr>
pkgname=tuba
pkgver=0.3.1
pkgrel=0
pkgdesc="Browse the Fediverse"
url="https://tuba.geopjr.dev/"
arch="all"
license="GPL-3.0-or-later"
makedepends="
	desktop-file-utils
	glib-dev
	gtk4.0-dev
	gtksourceview5-dev
	json-glib-dev
	libadwaita-dev
	libgee-dev
	libsecret-dev
	libsoup3-dev
	libxml2-dev
	meson
	vala
	"
subpackages="$pkgname-lang"
options="!check"
source="tuba-v$pkgver.tar.gz::https://github.com/GeopJr/Tuba/archive/refs/tags/v$pkgver.tar.gz"
builddir="$srcdir/Tuba-$pkgver"

build() {
	abuild-meson -Db_lto=true . output
	meson compile ${JOBS:+-j ${JOBS}} -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
	ln -s dev.geopjr.Tuba "$pkgdir"/usr/bin/tuba
}

sha512sums="
22ac408c64801dfb185fe20543b20b6b5dc867e4b5708cd0a233fcb96defacf15ed8d2fed61cc7873e8b2037bec04dc6bdce8d11b35e3eaccd7526955979bd44  tuba-v0.3.1.tar.gz
"
