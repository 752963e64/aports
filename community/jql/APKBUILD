# Contributor: Jakub Jirutka <jakub@jirutka.cz>
# Maintainer: Jakub Jirutka <jakub@jirutka.cz>
pkgname=jql
pkgver=5.1.0
pkgrel=0
pkgdesc="A JSON Query Language CLI tool"
url="https://github.com/yamafaktory/jql"
# riscv64: rust broken
arch="all !riscv64"
license="MIT"
makedepends="cargo"
source="https://github.com/yamafaktory/jql/archive/v$pkgver/jql-$pkgver.tar.gz"

prepare() {
	default_prepare

	cargo fetch --locked
}

build() {
	cargo build --frozen --release
}

check() {
	cargo test --frozen
}

package() {
	install -D -m755 target/release/jql -t "$pkgdir"/usr/bin/
}

sha512sums="
ea610f8710ca6fb1535ff76de45b881c6f1f65803cdf70b968d3a6c49621189bdd10be8dd4f1969b93f7c71b7b247f9fb09911d2370f4dda32d19cc6171e77f2  jql-5.1.0.tar.gz
"
