# Contributor: Aji Kisworo Mukti <aji.kisworo.mukti@gmail.com>
# Maintainer:
pkgname=jpegoptim
pkgver=1.5.0
pkgrel=0
pkgdesc="JPEG optimization utility"
url="https://github.com/tjko/jpegoptim"
arch="all"
license="GPL-2.0-or-later"
makedepends="libjpeg-turbo-dev"
options="!check" # no testsuite
subpackages="$pkgname-doc"
source="$pkgname-$pkgver.tar.gz::https://github.com/tjko/jpegoptim/archive/v$pkgver.tar.gz"

prepare() {
	default_prepare
	update_config_sub
}

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--target=$CTARGET \
		--prefix=/usr \
		--mandir=/usr/share/man
	make
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="
79f839cd1c014dc471fdf8f56d42d9c2ec9e0758007a3388f43aba278e239dcebb7c859b16fc39ef41b1ce80540e3bb2b7dcafc695534ad13553ae3785c3e5fd  jpegoptim-1.5.0.tar.gz
"
