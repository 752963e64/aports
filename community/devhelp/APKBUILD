# Contributor: Rasmus Thomsen <oss@cogitri.dev>
# Maintainer: Rasmus Thomsen <oss@cogitri.dev>
pkgname=devhelp
pkgver=3.37.1
pkgrel=0
pkgdesc="API documentation browser for GTK+ and GNOME"
url="https://wiki.gnome.org/Apps/Devhelp"
arch="all"
license="GPL-2.0-or-later"
depends="gsettings-desktop-schemas"
makedepends="meson gobject-introspection-dev gsettings-desktop-schemas-dev
	webkit2gtk-dev amtk-dev glib-dev itstool"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"
source="https://download.gnome.org/sources/devhelp/${pkgver%.*}/devhelp-$pkgver.tar.xz"

build() {
	abuild-meson . output
	meson compile ${JOBS:+-j ${JOBS}} -C output
}

check() {
	meson test --no-rebuild -v -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="a96cf80983538cf35d1a7e18a3b282bc4601aaac0e124929ea61f94e9760a249a83e120860d8b4561eddb298c8ed4ae29b19a3d8d8e526f9b5b27086c4306202  devhelp-3.37.1.tar.xz"
