# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=step
pkgver=20.12.2
pkgrel=0
# armhf blocked by extra-cmake-modules
# mips, mips64 and s390x blocked by khtml
arch="all !armhf !mips !mips64 !s390x"
url="https://edu.kde.org/step/"
pkgdesc="Interactive Physics Simulator"
license="GPL-2.0-or-later AND GFDL-1.2-only"
makedepends="
	eigen-dev
	extra-cmake-modules
	kconfig-dev
	kcrash-dev
	kdoctools-dev
	khtml-dev
	kiconthemes-dev
	knewstuff-dev
	kplotting-dev
	qt5-qtbase-dev
	qt5-qtsvg-dev
	qt5-qttools-dev
	shared-mime-info
	"
source="https://download.kde.org/stable/release-service/$pkgver/src/step-$pkgver.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"

build() {
	cmake -B build \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	cd build
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}

package() {
	DESTDIR="$pkgdir" cmake --build build --target install
}

sha512sums="d48107702cc686160c9791bf50c1690f40fe0415d8c2b9e55d98bad6a740c0b7850e656e925a90011ea9c1fe223e261a3b71a1f626320a48723e2fed6fb5047a  step-20.12.2.tar.xz"
