# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=osinfo-db
pkgver=20210809
pkgrel=0
pkgdesc="osinfo database files"
url="https://libosinfo.org/"
arch="noarch"
license="LGPL-2.0-or-later"
makedepends="osinfo-db-tools"
source="https://releases.pagure.org/libosinfo/osinfo-db-$pkgver.tar.xz"

check() {
	osinfo-db-validate --dir "$builddir"
}

package() {
	osinfo-db-import --root "$pkgdir" \
		--dir /usr/share/osinfo "$srcdir"/osinfo-db-$pkgver.tar.xz
}

sha512sums="
e191531b43a806acdd2b11f69d293c31ce809786bf1d224e15e54e80079ff9de49b6e7e44595a75c27d98585fe8389e293e333872a8c8d1c4e1cff9873a78b1a  osinfo-db-20210809.tar.xz
"
