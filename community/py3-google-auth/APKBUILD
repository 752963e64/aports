pkgname=py3-google-auth
_pyname=google-auth
pkgver=1.13.1
pkgrel=0
pkgdesc="Google authentication library for Python."
url="https://google-auth.readthedocs.io/en/latest/"
arch="noarch"
license="Apache-2.0"
depends="
	python3
	py3-cachetools<5.0
	py3-asn1-modules
	py3-rsa<4.1
	py3-setuptools
	py3-six
	"
checkdepends="
	py3-flask
	py3-freezegun
	py3-oauth2client
	py3-openssl
	py3-pytest
	py3-pytest-cov
	py3-pytest-localserver
	py3-requests
	py3-responses
	py3-urllib3
	py3-cryptography
	"
source="https://files.pythonhosted.org/packages/source/g/$_pyname/$_pyname-$pkgver.tar.gz
	10-use-mock-from-standard-library.patch
	"

builddir="$srcdir/$_pyname-$pkgver"

build() {
	python3 setup.py build
}

package() {
	python3 setup.py install --prefix=/usr --root="$pkgdir"
}

check() {
	pytest-3 # skips grpc tests
}
