# Contributor: Rasmus Thomsen <oss@cogitri.dev>
# Maintainer: Rasmus Thomsen <oss@cogitri.dev>
pkgname=gjs
pkgver=1.64.5
pkgrel=0
pkgdesc="GNOME javascript library"
url="https://wiki.gnome.org/Projects/Gjs"
arch="all !s390x !mips !mips64"
license="MIT AND LGPL-2.0-or-later"
makedepends="dbus gobject-introspection-dev mozjs68-dev mozjs68
	gtk+3.0-dev cairo-dev meson libffi>=3.3"
checkdepends="xvfb-run"
subpackages="$pkgname-dev"
source="https://download.gnome.org/sources/gjs/${pkgver%.*}/gjs-$pkgver.tar.xz"

build() {
	meson \
		--buildtype=plain \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var \
		-Dprofile=disabled \
		-Dinstalled_tests=false \
		output
	ninja -C output
}

check() {
	# Tests can take a while on armv7
	xvfb-run meson test -C output -t 10
}

package() {
	DESTDIR="$pkgdir" ninja -C output install
}

sha512sums="41a3c79888792674b2bccbf254507ed02497eb571c8ca7f47aab406d2ee29b73c98b1c7d59c33ed33bad90c6989df944d78b86d2f7e9824d598b62e29769b6dc  gjs-1.64.5.tar.xz"
