pkgname=docker-py
pkgver=4.4.4
pkgrel=0
pkgdesc="Python library for the Docker Engine API"
url="https://github.com/dotcloud/docker-py"
arch="noarch"
license="Apache-2.0"
depends="dockerpy-creds py3-cparser py3-cryptography py3-ipaddress
	py3-packaging py3-parsing py3-requests py3-websocket-client"
makedepends="py3-flake8 py3-mock py3-setuptools py3-six python3-dev"
source="$pkgname-$pkgver.tar.gz::https://github.com/docker/docker-py/archive/$pkgver.tar.gz"

check() {
	python3 setup.py check
}

build() {
	python3 setup.py build
}

package() {
	python3 setup.py install --prefix=/usr --root="$pkgdir"
}

sha512sums="4106ffe353ce8c3227c30c38347f107e0f7da660f1c3ae68bf2c576fc6b270f6fae6774747c46491eae0fc85a48dfe246b7a22d8e45c74eff89ed43be285f0df  docker-py-4.4.4.tar.gz"
