# Contributor: Rasmus Thomsen <oss@cogitri.dev>
# Maintainer: Rasmus Thomsen <oss@cogitri.dev>
pkgname=retro-gtk
pkgver=0.18.1_git20200807
_commit=577091b483dba96b226d594d1adb939da6317982
pkgrel=0
pkgdesc="The GTK+ Libretro frontend framework"
url="https://gitlab.gnome.org/GNOME/retro-gtk"
arch="all"
license="GPL-3.0-or-later"
makedepends="meson libepoxy-dev glib-dev gtk+3.0-dev pulseaudio-dev
	gobject-introspection-dev vala libsamplerate-dev"
checkdepends="xvfb-run"
options="!check" # https://gitlab.gnome.org/GNOME/retro-gtk/-/issues/56
subpackages="$pkgname-dev"
source="https://gitlab.gnome.org/GNOME/retro-gtk/-/archive/master/retro-gtk-$_commit.tar.gz"
builddir="$srcdir/$pkgname-master-$_commit"

build() {
	abuild-meson . output
	meson compile ${JOBS:+-j ${JOBS}} -C output
}

check() {
	xvfb-run meson test --no-rebuild -v -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="cb1333bbce5b10b6cdd1fc68d26962533ea9e1f800d00b6399e9173f26095ac114008ac24e35da16b806f2451dd2bdeb4ab2008752aba691147c2ff6777b3a56  retro-gtk-577091b483dba96b226d594d1adb939da6317982.tar.gz"
