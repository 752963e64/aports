# Maintainer: Holger Jaekel <holger.jaekel@gmx.de>
pkgname=py3-rasterio
pkgver=1.1.7
pkgrel=0
pkgdesc="Fast and direct raster I/O for use with Numpy and SciPy"
url="https://pypi.python.org/pypi/rasterio"
arch="all !s390x !x86 !armhf !armv7 !mips !mips64"
license="BSD-3-Clause"
depends="
	py3-affine
	py3-attrs
	py3-boto3
	py3-click
	py3-click-plugins
	py3-cligj
	py3-matplotlib
	py3-numpy
	py3-snuggs
	"
makedepends="
	cython
	gdal-dev
	gdal-tools
	py3-numpy-dev
	python3-dev
	"
checkdepends="
	pytest
	py3-hypothesis
	py3-sphinx
	"
source="
	rasterio-$pkgver.tar.gz::https://github.com/mapbox/rasterio/archive/$pkgver.tar.gz
	"
builddir="$srcdir/rasterio-$pkgver"

build() {
	python3 setup.py build
}

check() {
	python3 setup.py test
}

package() {
	python3 setup.py install --prefix=/usr --root="$pkgdir" --optimize=2
}

sha512sums="f815cfaf727e23f2d93cc24ccf20b0fd35f810fa0ea0d499f4d07cd1f50550592d172b5e12c89791a7158fe6b211e52c95e6bb69e87318590b648d390c93681a  rasterio-1.1.7.tar.gz"
