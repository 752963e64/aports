# Maintainer: Michał Polański <michal@polanski.me>
pkgname=lfs
pkgver=2.1.0
pkgrel=0
pkgdesc="Get information on your mounted disks"
url="https://github.com/Canop/lfs"
license="MIT"
arch="all !s390x !riscv64" # blocked by rust/cargo
makedepends="cargo"
source="https://github.com/Canop/lfs/archive/v$pkgver/lfs-$pkgver.tar.gz"

build() {
	cargo build --release --locked
}

check() {
	cargo test --release --locked
}

package() {
	install -Dm755 target/release/lfs "$pkgdir"/usr/bin/lfs
}

sha512sums="
d7d7e97f1e034726e5e54865c3f71a97d9a540643d69521b3ab79bc28106de79a0055ed4d1239dbfb41858c655ba28218d63f21cec097e99341602989fe71d11  lfs-2.1.0.tar.gz
"
