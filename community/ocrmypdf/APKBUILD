# Maintainer: Carlo Landmeter <clandmeter@alpinelinux.org>
pkgname=ocrmypdf
pkgver=11.4.3
pkgrel=0
pkgdesc="Add OCR text layer to scanned PDF files"
url="https://github.com/jbarlow83/OCRmyPDF"
arch="noarch"
license="MIT"
options="!check" # failing tests with jbig2enc 0.17
depends="
	python3
	py3-setuptools
	py3-reportlab
	py3-chardet
	py3-cffi
	py3-img2pdf
	py3-pdfminer
	py3-pikepdf
	py3-pillow
	py3-tqdm

	tesseract-ocr
	ghostscript
	unpaper
	qpdf
	jbig2enc
	pngquant
	leptonica
	"
makedepends="python3-dev"
source="https://files.pythonhosted.org/packages/source/o/ocrmypdf/ocrmypdf-$pkgver.tar.gz"

build() {
	python3 setup.py build
}

check() {
	python3 setup.py test
}

package() {
	python3 setup.py install --prefix=/usr --root="$pkgdir"
}

sha512sums="88b7c6b922d3aee517584b6f50a457e69baf260e9f7c3d7f5473deb955cb6e17ac0351115bc48bb8e5b47f78304c5e82ea76f0e999f0491a7353691dce986d4a  ocrmypdf-11.4.3.tar.gz"
