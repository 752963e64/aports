# Contributor: Carlo Landmeter <clandmeter@alpinelinux.org>
# Maintainer: Carlo Landmeter <clandmeter@alpinelinux.org>
pkgname=ocrmypdf
pkgver=14.0.1
pkgrel=1
pkgdesc="Add OCR text layer to scanned PDF files"
url="https://github.com/ocrmypdf/OCRmyPDF"
arch="noarch !s390x !riscv64" # pngquant
license="MIT"
depends="
	ghostscript
	jbig2enc
	leptonica
	pngquant
	py3-coloredlogs
	py3-deprecation
	py3-img2pdf
	py3-packaging
	py3-pdfminer
	py3-pikepdf
	py3-pillow
	py3-pluggy
	py3-reportlab
	py3-tqdm
	python3
	qpdf
	tesseract-ocr
	unpaper
	"
makedepends="py3-gpep517 py3-setuptools_scm py3-wheel"
checkdepends="py3-pytest py3-pytest-cov py3-pytest-xdist"
source="https://files.pythonhosted.org/packages/source/o/ocrmypdf/ocrmypdf-$pkgver.tar.gz"

build() {
	export SETUPTOOLS_SCM_PRETEND_VERSION=$pkgver
	gpep517 build-wheel \
		--wheel-dir dist \
		--output-fd 1
}

check() {
	PYTHONPATH=src \
	pytest
}

package() {
	python3 -m installer -d "$pkgdir" \
		dist/ocrmypdf*.whl
}

sha512sums="
154805c67d9d01acbbfd9aa0e4f546722af36502459514588e9ea8fb423d66fc07c5a65ad16c167b454b67cc8d7e93a053037c188afae6af2e44dd2269125dd1  ocrmypdf-14.0.1.tar.gz
"
