# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=ktrip
pkgver=22.02
pkgrel=0
pkgdesc="A public transport assistant"
# armhf blocked by extra-cmake-modules
# s390x and riscv64 blocked by qqc2-desktop-style
arch="all !armhf !s390x !riscv64"
url="https://invent.kde.org/utilities/ktrip"
license="GPL-2.0-only OR GPL-3.0-only"
depends="
	kde-icons
	kirigami-addons
	kirigami2
	"
makedepends="
	extra-cmake-modules
	kconfig-dev
	kcontacts-dev
	ki18n-dev
	kitemmodels-dev
	kpublictransport-dev
	qqc2-desktop-style-dev
	qt5-qtbase-dev
	qt5-qtdeclarative-dev
	qt5-qtquickcontrols2-dev
	"
source="https://download.kde.org/stable/plasma-mobile/$pkgver/ktrip-$pkgver.tar.xz"
options="!check" # No tests

build() {
	cmake -B build \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DKF_IGNORE_PLATFORM_CHECK=ON
	cmake --build build
}

check() {
	cd build
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}
sha512sums="
7da8c2ba3affc193b51c5c4dc9b2c973aa8e03b02413626d198dfde5f5bd061203b36aec0b8a9557ba2380346719b8c1fc2dd704afdf057ee14b40b88e0003d9  ktrip-22.02.tar.xz
"
