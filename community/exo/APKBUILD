# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=exo
pkgver=4.16.1
pkgrel=0
pkgdesc="Extensions to Xfce by os-cillation"
url="http://www.os-cillation.com/article.php?sid=40"
arch="all"
license="GPL-2.0-or-later AND LGPL-2.1-or-later"
depends="hicolor-icon-theme"
makedepends="gtk+3.0-dev libxfce4util-dev libxfce4ui-dev perl perl-uri
	libnotify-dev gtk-doc intltool"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang $pkgname-libs"
source="https://archive.xfce.org/src/xfce/exo/${pkgver%.*}/exo-$pkgver.tar.bz2
	"

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--libexecdir=/usr/lib/xfce4 \
		--localstatedir=/var \
		--disable-static \
		--enable-gtk-doc
	make
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="692d1c5adf58704546c580c1959b893ef20503180620b731444e29d534407515067b892736ad5ed904d3dbf480fbee7df9f36725b003067272c973f6ac8279d7  exo-4.16.1.tar.bz2"
