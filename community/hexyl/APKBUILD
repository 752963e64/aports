# Contributor: Michał Polański <michal@polanski.me>
# Maintainer: Michał Polański <michal@polanski.me>
pkgname=hexyl
pkgver=0.11.0
pkgrel=0
pkgdesc="Command-line hex viewer with colored output"
url="https://github.com/sharkdp/hexyl"
license="Apache-2.0 OR MIT"
arch="all !s390x !riscv64" # blocked by rust/cargo
makedepends="cargo"
source="https://github.com/sharkdp/hexyl/archive/v$pkgver/hexyl-$pkgver.tar.gz"

prepare() {
	default_prepare

	cargo fetch --locked
}

build() {
	cargo build --frozen --release
}

check() {
	cargo test --frozen
}

package() {
	install -Dm755 target/release/hexyl -t "$pkgdir"/usr/bin/
}

sha512sums="
413dbc5fe0f8d69430d62708df4b6a58b32f7adc180c72c39aa735d9ac663a0584ceb6ffb7de71e4f9f18c4f0c8aa4ae3328609c547ff0293e489e1e36fc80c6  hexyl-0.11.0.tar.gz
"
