# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=diffoscope
pkgver=229
pkgrel=0
pkgdesc="In-depth comparison of files, archives, and directories"
url="https://diffoscope.org/"
arch="noarch"
license="GPL-3.0-or-later"
depends="
	py3-libarchive-c
	py3-magic
	python3
	"
makedepends="
	py3-docutils
	py3-setuptools
	python3-dev
	"
checkdepends="
	bzip2
	cdrkit
	gzip
	libarchive-tools
	openssh-client-default
	py3-html2text
	py3-pytest
	unzip
	"
source="https://salsa.debian.org/reproducible-builds/diffoscope/-/archive/$pkgver/diffoscope-$pkgver.tar.gz"

build() {
	python3 setup.py build
}

check() {
	# html test fails
	PYTHONPATH="$PWD" \
	PYTHONDONTWRITEBYTECODE=1 \
	pytest -v -k 'not test_diff'
}

package() {
	python3 setup.py install --prefix=/usr --root="$pkgdir"
}

sha512sums="
b25d24c83d7f4d35f39e2d9fd949f55c015d885ad35d138b2f14e08cfb9bf749c537acd6251a305c377e74d6952f298b1f2c181a8e3c17e4ba2b073165b58b3d  diffoscope-229.tar.gz
"
