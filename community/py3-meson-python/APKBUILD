# Maintainer: psykose <alice@ayaya.dev>
pkgname=py3-meson-python
pkgver=0.11.0
pkgrel=2
pkgdesc="Meson PEP 517 Python build backend"
url="https://github.com/mesonbuild/meson-python"
arch="noarch"
license="MIT"
depends="
	meson
	py3-pyproject-metadata
	python3
	"
checkdepends="py3-pytest"
source="$pkgname-$pkgver.tar.gz::https://github.com/mesonbuild/meson-python/archive/refs/tags/$pkgver.tar.gz"
builddir="$srcdir/meson-python-$pkgver"
options="!check" # no tests via meson

build() {
	abuild-meson . output
	meson compile -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
fb894d0db6d18febd6388b7e686d0c7c1e3308f6ebf926c7300e2f376b1d2a803adcf5925c80d05982805e3ce4a59676c9ef829eacdab4696dabec3cb93e4192  py3-meson-python-0.11.0.tar.gz
"
