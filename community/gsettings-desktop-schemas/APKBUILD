pkgname=gsettings-desktop-schemas
pkgver=3.37.92
pkgrel=0
pkgdesc="A collection of GSettings schemas"
url="https://gitlab.gnome.org/GNOME/gsettings-desktop-schemas"
arch="noarch"
license="LGPL-2.0-or-later"
makedepends="glib-dev gobject-introspection-dev meson"
subpackages="$pkgname-dev $pkgname-lang"
source="https://download.gnome.org/sources/gsettings-desktop-schemas/${pkgver%.*}/gsettings-desktop-schemas-$pkgver.tar.xz"

build() {
	abuild-meson . output
	meson compile ${JOBS:+-j ${JOBS}} -C output
}

check() {
	meson test --no-rebuild -v -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="042e390b10be9ccba73c4521f8870b79ba47744be79bc483fef6f569ad9e883561de4c462656cc898c894fa749556b99cc575eafa96b8448d1fdd69b885dd61f  gsettings-desktop-schemas-3.37.92.tar.xz"
