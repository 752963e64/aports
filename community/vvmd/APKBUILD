# Contributor: Clayton Craft <clayton@craftyguy.net>
# Maintainer: Clayton Craft <clayton@craftyguy.net>
pkgname=vvmd
pkgver=0.13
pkgrel=0
pkgdesc="lower level daemon that retrieves Visual Voicemail"
url="https://gitlab.com/kop316/vvmd"
arch="all"
license="GPL-2.0-only"
depends="mobile-broadband-provider-info"
makedepends="
	curl-dev
	dbus-dev
	glib-dev
	libphonenumber-dev
	meson
	modemmanager-dev
	"
source="https://gitlab.com/kop316/vvmd/-/archive/$pkgver/vvmd-$pkgver.tar.gz
	vvmd.desktop"

case "$CARCH" in
x86)
	# fail for some reason
	options="$options !check"
	;;
esac

build() {
	abuild-meson . output
	meson compile ${JOBS:+-j ${JOBS}} -C output
}

check() {
	meson test --no-rebuild --print-errorlogs -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
	install -Dm644 "$srcdir"/vvmd.desktop -t \
		"$pkgdir"/etc/xdg/autostart
}

sha512sums="
8149c4570f0353c923faf33dc3d01a21901c71294d30763cdb596273c32942dd9bdfc50b6a7d12442577cb7251c7d9da6724f9526c4b20934875cab00b897f5a  vvmd-0.13.tar.gz
5f5d14ca6ca59b6b0f5bbdef8ab0a6a95fe057846b98ba49933981452eb1743d9825cb2e5f87a28b0571b5f45eac06a453c01ecee34bd3996fc14e13ad786a6e  vvmd.desktop
"
