# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=libkipi
pkgver=20.12.0
pkgrel=0
pkgdesc="KDE Image Plugin Interface library"
# armhf blocked by extra-cmake-modules
# s390x/mips64 blocked by kxmlgui
arch="all !armhf !s390x !mips64"
url="https://www.digikam.org/"
license="GPL-2.0-or-later AND LGPL-2.0-or-later"
depends_dev="
	kconfig-dev
	kservice-dev
	kxmlgui-dev
	qt5-qtbase-dev
	"
makedepends="$depends_dev extra-cmake-modules"
source="https://download.kde.org/stable/release-service/$pkgver/src/libkipi-$pkgver.tar.xz"
subpackages="$pkgname-dev"
options="!check" # Test suite fails to compile

build() {
	cmake -B build \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_TESTING=OFF
	cmake --build build
}

check() {
	cd build
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}

package() {
	DESTDIR="$pkgdir" cmake --build build --target install
}
sha512sums="2a0a3ee9c10c3783cfaa5031e531a6eb0db9279bd941533d2aca13d65633020c060b4baf62fea695fc821a1abb7f8cf845392469aaa799ed8a867a9070bc27c6  libkipi-20.12.0.tar.xz"
