# Maintainer: Francesco Colista <fcolista@alpinelinux.org>
pkgname=py3-pypdf2
_pkgname=PyPDF2
pkgver=2.10.0
pkgrel=0
pkgdesc="Pure-Python library built as a PDF toolkit"
url="https://github.com/py-pdf/PyPDF2"
arch="noarch"
license="BSD-3-Clause"
depends="python3"
options="!check" # upstream has issues with testing
makedepends="py3-setuptools"
checkdepends="py3-pillow py3-pytest"
source="https://files.pythonhosted.org/packages/source/${_pkgname:0:1}/$_pkgname/$_pkgname-$pkgver.tar.gz"
builddir="$srcdir"/$_pkgname-$pkgver

build() {
	python3 setup.py build
}

check() {
	pytest -v
}

package() {
	python3 setup.py install --prefix=/usr --root="$pkgdir"
}

sha512sums="
959bf10a74f3bba796a72bb84278d44671148bf9ef8a384fc7735ce27d734dc231c4d787347d409729f46d2517768e2f5869dba38b988ddee0fa70ee9122bab0  PyPDF2-2.10.0.tar.gz
"
