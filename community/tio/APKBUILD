# Contributor: Sodface <sod@sodface.com>
# Maintainer: Sodface <sod@sodface.com>
pkgname=tio
pkgver=1.33
pkgrel=0
pkgdesc="Simple TTY Terminal I/O Application"
url="https://tio.github.io/"
arch="all"
license="GPL-2.0-or-later"
makedepends="linux-headers meson"
options="!check" # no test suite
subpackages="$pkgname-doc $pkgname-bash-completion"
source="https://github.com/tio/tio/releases/download/v$pkgver/tio-$pkgver.tar.xz"

build() {
	abuild-meson \
		-Dbashcompletiondir="/usr/share/bash-completion/completions" \
		. output
	meson compile ${JOBS:+-j ${JOBS}} -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
aa5eefe8b3d30910af82cc5303b073d914a48cb33088f45799d4f557819d51cfc6d3b04b660728f540f8b0e2b07ff81ec30ad7ae51945c5476bbc936376770d1  tio-1.33.tar.xz
"
