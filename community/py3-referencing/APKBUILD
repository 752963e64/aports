# Maintainer: psykose <alice@ayaya.dev>
pkgname=py3-referencing
pkgver=0.29.3
pkgrel=0
pkgdesc="Cross-specification JSON referencing"
url="https://github.com/python-jsonschema/referencing"
arch="noarch"
license="MIT"
depends="
	py3-attrs
	py3-rpds
	"
makedepends="
	py3-gpep517
	py3-hatch-vcs
	py3-hatchling
	"
checkdepends="py3-pytest"
subpackages="$pkgname-pyc"
source="https://github.com/python-jsonschema/referencing/releases/download/v$pkgver/referencing-$pkgver.tar.gz"
builddir="$srcdir/referencing-$pkgver"
options="!check" # circular with jsonschema

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
2eddad1f76ff1ff610674d4fe1911d32bbb78fbd4e1df0b9035b37db748a5630d28f81dd2bcd75b6883019eb181b3bf9c4d47bc96d3c354fd67f46ed5bf2cf53  referencing-0.29.3.tar.gz
"
