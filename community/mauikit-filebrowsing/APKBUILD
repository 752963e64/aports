# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=mauikit-filebrowsing
pkgver=2.2.0
pkgrel=0
pkgdesc="MauiKit File Browsing utilities and controls"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://mauikit.org/"
license="GPL-2.0-or-later"
depends="
	kirigami2
	"
depends_dev="
	kio-dev
	mauikit-dev
	qt5-qtbase-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	samurai
	"
source="https://download.kde.org/stable/maui/mauikit-filebrowsing/$pkgver/mauikit-filebrowsing-$pkgver.tar.xz"
subpackages="$pkgname-dev"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	cd build
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
af3c176f99e77b80dea3ee923726981cf75a5681075f9322102bccf18f4e62ccd44263849b3ad18c8f9dc66e9379afb9eec6c3719974e445d3659592a6468f4a  mauikit-filebrowsing-2.2.0.tar.xz
"
