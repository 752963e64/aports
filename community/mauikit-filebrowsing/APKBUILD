# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=mauikit-filebrowsing
pkgver=2.0.0
pkgrel=0
pkgdesc="MauiKit File Browsing utilities and controls"
# armhf blocked by extra-cmake-modules
# mips64, s390x and riscv64 blocked by mauikit
arch="all !armhf !mips64 !s390x !riscv64"
url="https://mauikit.org/"
license="GPL-2.0-or-later"
depends="
	kirigami2
	mauikit
	"
depends_dev="
	kio-dev
	mauikit-dev
	qt5-qtbase-dev
	"
makedepends="$depends_dev
	extra-cmake-modules
	"
source="https://download.kde.org/stable/maui/mauikit-filebrowsing/$pkgver/mauikit-filebrowsing-$pkgver.tar.xz"
subpackages="$pkgname-dev"

build() {
	cmake -B build \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	cd build
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}
sha512sums="
9d8adca739764a9daefa2e0c852490c5b2e16d4ee66130b66a176ae77440f74b936a0218940276aa33d2f702594cfeead198ea2aed79f93dabb603284b54c0a7  mauikit-filebrowsing-2.0.0.tar.xz
"
