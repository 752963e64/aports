pkgname=byobu
pkgver=5.132
pkgrel=0
pkgdesc="An enhancement of the GNU Screen"
url="https://launchpad.net/byobu"
arch="noarch"
license="GPL-3.0"
depends="python3 tmux"
subpackages="$pkgname-doc"
source="https://launchpad.net/byobu/trunk/$pkgver/+download/byobu_$pkgver.orig.tar.gz"

build() {
	./configure \
		--prefix=/usr \
		--sysconfdir=/etc
	make
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="06417b3c830d97cc6b132378ffd5f825bc658d22cbca61ad70030d73020a2ad3dce2777727c0527be2d8f0ce9b780b38d8a01b08f37621b9f9609bb4805d8d2f  byobu_5.132.orig.tar.gz"
