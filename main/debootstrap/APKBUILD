pkgname=debootstrap
pkgver=1.0.120
pkgrel=0
pkgdesc="Debian/Ubuntu bootstrap scripts"
url="https://packages.qa.debian.org/d/debootstrap.html"
arch="noarch"
license="MIT"
options="!check" # upstream doesn't have a test suite
depends="debian-archive-keyring dpkg tar"
subpackages="$pkgname-doc"
source="http://ftp.debian.org/debian/pool/main/d/debootstrap/debootstrap_$pkgver.tar.gz"

package() {
	make DESTDIR="$pkgdir" install
	install -Dm644 $pkgname.8 \
		"$pkgdir"/usr/share/man/man8/$pkgname.8
}

sha512sums="677d659bb1af88adf5ba987232e5d53ddd1514601938adad37704b247b47fce23f98d420e5cca3b5bfb4aae067f9040ddede657bb67d22cedfd6451db463aead  debootstrap_1.0.120.tar.gz"
