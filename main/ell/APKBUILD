pkgname=ell
pkgver=0.48
pkgrel=0
pkgdesc="Linux library for embedded development"
url="https://01.org/ell"
arch="all"
license="GPL-2.0-only"
makedepends="glib-dev linux-headers"
checkdepends="dbus"
subpackages="$pkgname-dev"
source="https://mirrors.edge.kernel.org/pub/linux/libs/ell/ell-$pkgver.tar.gz
	"

case "$CARCH" in
aarch64|arm*) options="!check" ;;
esac

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var \
		--enable-glib
	make
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="
2d80f6d542fa8ebfe7d45b1dac67a68615b6c74f4ede9e6eeb983a916adb6cbbef8fe89752f1ac0a32591b9c13708849032a773db87acf4f79a33527c9dc4ee0  ell-0.48.tar.gz
"
