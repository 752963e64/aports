pkgname=ell
pkgver=0.42
pkgrel=0
pkgdesc="Linux library for embedded development"
url="https://01.org/ell"
arch="all"
license="GPL-2.0-only"
makedepends="glib-dev linux-headers"
checkdepends="dbus"
subpackages="$pkgname-dev"
source="https://mirrors.edge.kernel.org/pub/linux/libs/ell/ell-$pkgver.tar.gz
	"

case "$CARCH" in
aarch64|arm*) options="!check" ;;
esac

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var \
		--enable-glib
	make
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="
272aa8e3878d55edbb8b4e46a46d52852cbd94654dbbc16b8da5b39ce66e5b45a502c8cdceef1f74ff71547452d755b36fdb52e0fb9de713a9e3fb22eb7f7966  ell-0.42.tar.gz
"
