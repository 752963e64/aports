pkgname=ell
pkgver=0.43
pkgrel=0
pkgdesc="Linux library for embedded development"
url="https://01.org/ell"
arch="all"
license="GPL-2.0-only"
makedepends="glib-dev linux-headers"
checkdepends="dbus"
subpackages="$pkgname-dev"
source="https://mirrors.edge.kernel.org/pub/linux/libs/ell/ell-$pkgver.tar.gz
	"

case "$CARCH" in
aarch64|arm*) options="!check" ;;
esac

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var \
		--enable-glib
	make
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="
bb7e21857efc59af7ecfdf7fcb79101be6cf464bac7355baf6fb562800764d495a9fe0b60c5526318b5d57f28b31c08fc45a650d053293f1376b15a69964b5a0  ell-0.43.tar.gz
"
