pkgname=ell
pkgver=0.52
pkgrel=0
pkgdesc="Linux library for embedded development"
url="https://01.org/ell"
arch="all"
license="GPL-2.0-only"
makedepends="glib-dev linux-headers"
checkdepends="dbus"
subpackages="$pkgname-dev"
source="https://mirrors.edge.kernel.org/pub/linux/libs/ell/ell-$pkgver.tar.gz
	"

case "$CARCH" in
aarch64|arm*) options="!check" ;;
esac

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var \
		--enable-glib
	make
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="
fe689ffe4f1d8e6a7c76390541b00b70f92de7ccc65be65e9645d70e5dd190ff40e40ffa984d32855bcbf402f4dc52ca07504e3c3850d1bf3d8526a90dd5b3ad  ell-0.52.tar.gz
"
