_luaver=5.4
pkgname=highlight
pkgver=3.61
pkgrel=0
pkgdesc="Fast and flexible source code highlighter"
url="http://www.andre-simon.de/doku/highlight/highlight.html"
arch="all !mips !mips64" # Segfault during build
options="!check"  # No test suite.
license="GPL-3.0-or-later"
makedepends="lua$_luaver-dev boost-dev"
subpackages="$pkgname-doc"
source="http://www.andre-simon.de/zip/highlight-$pkgver.tar.bz2"

build() {
	make cli LUA_PKG_NAME=lua5.4
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="2290415a9da04b4ef13424a19a0272b01c58502e6e00330dc5fcbac1d5ab9022caa2470be3d17a8c2b0f722295b6a03616cc0c2d6946cb4114a050c582a3ad26  highlight-3.61.tar.bz2"
