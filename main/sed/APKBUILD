# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=sed
pkgver=4.8
pkgrel=1
subpackages="$pkgname-doc"
pkgdesc="GNU stream editor"
url="https://www.gnu.org/software/sed"
arch="all"
license="GPL-3.0-or-later"
makedepends="perl"
checkdepends="diffutils coreutils"
install="$pkgname.post-deinstall"
source="https://ftp.gnu.org/pub/gnu/$pkgname/$pkgname-$pkgver.tar.xz
	fix-test-canonicalize-lgpl.patch
	"

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--bindir=/bin \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--disable-i18n \
		--disable-nls
	make
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install

	rm -rf "$pkgdir"/usr/lib/charset.alias || true
	rmdir -p "$pkgdir"/usr/lib 2>/dev/null || true
}

sha512sums="
7de25d9bc2981c63321c2223f3fbcab61d7b0df4fcf7d4394b72400b91993e1288d8bf53948ed5fffcf5a98c75265726a68ad4fb98e1d571bf768603a108c1c8  sed-4.8.tar.xz
b0a542f1534f6b613f34eec08e52cc4471d301aa8daf335bfc25b298bafee00b1a2a8948d6428aeb1e1a4b13abdc81d50e049c3e1316c0bd81c8468f316fdb60  fix-test-canonicalize-lgpl.patch
"
