# Maintainer: Leonardo Arena <rnalrd@alpinelinux.org>
pkgname=perl-fcgi
_realname=FCGI
pkgver=0.80
pkgrel=0
pkgdesc="Perl Fast CGI module"
url="https://metacpan.org/pod/FCGI"
arch="all"
license="OML"
depends="perl"
makedepends="perl-dev"
subpackages="$pkgname-doc"
options="!check" # makedepends missing
source="https://cpan.metacpan.org/authors/id/E/ET/ETHER/FCGI-$pkgver.tar.gz"

builddir="$srcdir/$_realname-$pkgver"

build() {
	PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
	make
}

check() {
	make test
}

package() {
	make DESTDIR="$pkgdir" install
	# creates collision among perl modules
	find "$pkgdir" -name perllocal.pod -delete
}

sha512sums="
665ec497472c9e8b550725fbb1c89a58266a39d8af4c97a729a10bd7ca3c125ff477910667a1defc8157a08c2ffc0e0284af3a4af9490ef7b83d8669398822da  FCGI-0.80.tar.gz
"
