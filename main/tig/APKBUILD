# Contributor: Fabian Affolter <fabian@affolter-engineering.ch>
# Maintainer: Fabian Affolter <fabian@affolter-engineering.ch>
pkgname=tig
pkgver=2.5.6
pkgrel=0
pkgdesc="Text-mode interface for the git revision control system"
url="https://jonas.github.io/tig/"
arch="all"
license="GPL-2.0-or-later"
depends="git"
makedepends="ncurses-dev xmlto asciidoc"
subpackages="$pkgname-doc"
source="https://github.com/jonas/tig/releases/download/tig-$pkgver/tig-$pkgver.tar.gz"

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var
	make all doc-man
}

check() {
	# Tests require a tty, if it is not accessible
	# (e.g. on the CI) then we skip all tests. This
	# allows us to still run them locally.
	if (stty -g </dev/tty) 1>/dev/null 2>&1; then
		env SHELL=/bin/sh make -j1 test
	else
		warning "Skipping tests, no tty."
	fi
}

package() {
	make DESTDIR="$pkgdir" install install-doc-man
}

sha512sums="
