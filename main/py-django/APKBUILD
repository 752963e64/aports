#   1.11.15-r0:
#     - CVE-2018-14574
#   1.11.18-r0:
#     - CVE-2019-3498
#   1.11-20-r0:
#     - CVE-2019-6975

build() {
	cd "$builddir"
	python2 setup.py build || return 1
}

package() {
	cd "$builddir"
	python2 setup.py install --root "$pkgdir" --skip-build || return 1
}

