# Contributor: Laurent Bercot <ska-devel@skarnet.org>
# Maintainer: Laurent Bercot <ska-devel@skarnet.org>
pkgname=utmps
pkgver=0.0.3.2
pkgrel=0
pkgdesc="A secure utmp/wtmp implementation"
url="https://skarnet.org/software/$pkgname/"
arch="all"
options="!check"  # No test suite
license="ISC"
depends="s6-ipcserver"
makedepends="skalibs-dev"
subpackages="$pkgname-static $pkgname-dev $pkgname-doc $pkgname-openrc"
source="https://skarnet.org/software/$pkgname/$pkgname-$pkgver.tar.gz
	utmpd.initd
	wtmpd.initd"
install="utmps.pre-install"

build() {
	./configure \
		--enable-shared \
		--enable-static \
		--disable-allstatic \
		--libdir=/usr/lib \
		--libexecdir="/lib/$pkgname" \
		--with-dynlib=/lib
	make
}

package() {
	make DESTDIR="$pkgdir" install
	rm -f "$pkgdir/usr/include/utmpx.h"
	mkdir -p "$pkgdir/etc/init.d"
	cp -f "$srcdir/utmpd.initd" "$pkgdir/etc/init.d/utmpd"
	cp -f "$srcdir/wtmpd.initd" "$pkgdir/etc/init.d/wtmpd"
	chmod 0755 "$pkgdir/etc/init.d/utmpd" "$pkgdir/etc/init.d/wtmpd"
}

static() {
	default_static
	rmdir -p "$pkgdir"/usr/lib || :
}

doc() {
	default_doc
	mkdir -p "$subpkgdir/usr/share/doc"
	cp -a "$builddir/doc" "$subpkgdir/usr/share/doc/$pkgname"
}

