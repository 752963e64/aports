# Contributor: Leo <thinkabit.ukim@gmail.com>
# Maintainer: Simon Zeni <simon@bl4ckb0ne.ca>
pkgname=spirv-headers
_pkgname=SPIRV-Headers
pkgver=1.3.224.0
# khronos don't know how to tag anything to save their life
_gitrev=b2a156e1c0434bc8c99aaebba1c7be98be7ac580
pkgrel=0
pkgdesc="Machine-readable files for the SPIR-V Registry"
options="!check" # No testsuite
url="https://github.com/KhronosGroup/SPIRV-Headers"
arch="noarch"
license="GPL-3.0-or-later"
makedepends="cmake samurai"
source="$pkgname-$pkgver.tar.gz::https://github.com/KhronosGroup/SPIRV-Headers/archive/$_gitrev.tar.gz"
builddir="$srcdir/$_pkgname-$_gitrev"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DBUILD_SHARED_LIBS=True \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
654b8c8eb70f55bd9159550c667dc3858bb166c9de9ae05221d76c6a64fbbe15fd2207e788eb6d2d78408ee7350163a04f24588cf97534ae897ebbd6bcf2789d  spirv-headers-1.3.224.0.tar.gz
"
