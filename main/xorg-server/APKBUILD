	libxxf86dga-dev
	libxxf86misc-dev
	perl
	pixman-dev
	util-macros
	wayland-dev
	wayland-protocols
	xcb-util-dev
	xcb-util-image-dev
	xcb-util-keysyms-dev
	xcb-util-renderutil-dev
	xcb-util-wm-dev
	xorgproto
	xtrans
	zlib-dev
	"
