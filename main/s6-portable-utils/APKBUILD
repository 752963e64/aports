# Maintainer: Laurent Bercot <ska-devel@skarnet.org>
# Contributor: John Regan <john@jrjrtech.com>
pkgname=s6-portable-utils
pkgver=2.2.3.2
pkgrel=0
pkgdesc="skarnet.org's tiny portable generic utilities"
url="http://skarnet.org/software/$pkgname/"
arch="all"
license="ISC"
makedepends="skalibs-dev"
options="!check"
subpackages="$pkgname-doc"
source="https://skarnet.org/software/s6-portable-utils/s6-portable-utils-$pkgver.tar.gz"

build() {
	./configure \
		--enable-shared \
		--enable-static \
		--disable-allstatic \
		--prefix=/usr \
		--libdir=/usr/lib
	make
}

package() {
	make DESTDIR="$pkgdir" install
}

doc() {
	default_doc
	mkdir -p "$subpkgdir/usr/share/doc"
	cp -a "$builddir/doc" "$subpkgdir/usr/share/doc/$pkgname"
}

sha512sums="3d976bb41502b86cc68d25bcde44fc218668d8d1c4c6e513ab2bc0dda459439d6d55144e503420ac38d0b052e7c678a254780f9cc6dee6ae6d6debf4d1954134  s6-portable-utils-2.2.3.2.tar.gz"
