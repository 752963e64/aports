pkgname=vala
pkgver=0.48.10
pkgrel=0
pkgdesc="Compiler for the GObject type system"
url="https://wiki.gnome.org/Projects/Vala"
arch="all"
license="LGPL-2.0-or-later"
subpackages="$pkgname-doc $pkgname-dbg"
depends="glib-dev"
makedepends="libxslt-dev bash flex bison gobject-introspection-dev graphviz-dev"
checkdepends="dbus-x11"
source="https://download.gnome.org/sources/vala/${pkgver%.*}/vala-$pkgver.tar.xz"

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr
	make
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="15ad1f848bee9aaf9ffb560991aaded20a70d5fb0dcfca23dde6a3d83a4de96d9823a06c6a00d8c2d4628340f810319fe6d34661fe12b55061e761c9e62ea03d  vala-0.48.10.tar.xz"
