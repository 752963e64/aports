# Maintainer: Laurent Bercot <ska-devel@skarnet.org>
pkgname=busybox-mdev-openrc
pkgver=1.0
pkgrel=0
pkgdesc="Init script for mdev under openrc"
url="https://git.alpinelinux.org/aports/tree/main/busybox-mdev-openrc"
arch="noarch"
license="GPL-2.0-only"
depends="busybox openrc>=0.24.1-r6 mdev-conf"
makedepends=""
options="!check"
replaces="busybox-initscripts busybox-openrc<1.1"
provides="dev-openrc"
provider_priority=30
source="mdev.initd"

package() {
	install -D -m 0755 "$srcdir"/mdev.initd "$pkgdir"/etc/init.d/mdev
}

sha512sums="
