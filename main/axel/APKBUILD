# Contributor:
# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=axel
pkgver=2.17.6
pkgrel=1
pkgdesc="A multiple-connection concurrent downloader"
url="https://github.com/axel-download-accelerator/axel"
arch="all"
options="!check" # has no checks
license="GPL-2.0-or-later"
makedepends="openssl-dev automake autoconf libtool"
subpackages="$pkgname-doc"
source="$url/releases/download/v$pkgver/axel-$pkgver.tar.xz
	CVE-2020-13614.patch
	"

# secfixes:
#   2.17.6-r1:
#     - CVE-2020-13614

build() {
	cd "$builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var \
		--disable-nls
	make
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install
}

