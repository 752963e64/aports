# Maintainer: Cameron Banta <cbanta@gmail.com>
pkgname=less
pkgver=581
pkgrel=2
pkgdesc="File pager"
url="http://www.greenwoodsoftware.com/less/"
arch="all"
license="GPL-3.0-or-later OR BSD-2-Clause"
options="!check"
makedepends="ncurses-dev"
subpackages="$pkgname-doc"
source="http://www.greenwoodsoftware.com/less/less-$pkgver.tar.gz
	0001-Shouldn-t-use-memcpy-to-copy-to-overlapping-range.patch
	$pkgname-hyperlink-filter-cve.patch::https://github.com/gwsw/less/commit/a78e1351113cef564d790a730d657a321624d79c.patch
	"

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info
	make
}

package() {
	make DESTDIR="$pkgdir" install
}

