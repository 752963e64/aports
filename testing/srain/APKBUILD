# Contributor: Francesco Colista <fcolista@alpinelinux.org>
# Maintainer: Francesco Colista <fcolista@alpinelinux.org>
pkgname=srain
pkgver=1.2.0
pkgrel=0
pkgdesc="Modern IRC client written in GTK."
url="https://srain.im"
arch="all"
license="GPL-2.0"
makedepends="py3-sphinx meson gettext cmake ninja
glib-dev gtk+3.0-dev libconfig-dev libsecret-dev libsoup-dev"
subpackages="$pkgname-doc"
source="$pkgname-$pkgver.tar.gz::https://github.com/SrainApp/srain/archive/$pkgver.tar.gz"

build() {
	meson setup \
		--prefix=/usr \
		--datadir=/usr/share \
		--sysconfdir=/etc	\
		--buildtype=release	\
	builddir
	ninja -C builddir
}

check() {
	meson check
}

package() {
	DESTDIR="$pkgdir" ninja -C builddir install
}

sha512sums="19d838e91b9b8cb85f83906fa17989c81a0f0e19c379dfdc865748335937affb13a9dcc03076f56e93c4b9d9bc97ed0d1578f93d565cf68e1a976711190a7a30  srain-1.2.0.tar.gz"
