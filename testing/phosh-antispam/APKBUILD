# Contributor: Clayton Craft <clayton@craftyguy.net>
# Maintainer: Clayton Craft <clayton@craftyguy.net>
pkgname=phosh-antispam
pkgver=2.0_beta
pkgrel=0
pkgdesc="monitors Gnome Calls and manages phone calls from unidentified/unknown callers"
url="https://gitlab.com/kop316/phosh-antispam"
arch="all !s390x !riscv64"  # no libhandy1
license="GPL-3.0-or-later"
depends="calls>=41_beta"
makedepends="meson glib-dev gtk+3.0-dev libhandy1-dev"
subpackages="$pkgname-doc $pkgname-lang $pkgname-bash-completion"
source="https://gitlab.com/kop316/phosh-antispam/-/archive/${pkgver/_/.}/phosh-antispam-${pkgver/_/.}.tar.gz"
builddir="$srcdir/$pkgname-${pkgver/_/.}"

build() {
	abuild-meson . output
	meson compile ${JOBS:+-j ${JOBS}} -C output
}

check() {
	meson test --no-rebuild -v -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
d4787413a03a92c1a21fab671c5a2d97839494afc6341f1cb501492ae2eca328a587d74d9cc877ad4664b49b5341f9222a3839baed375cd6130124ae4c91932d  phosh-antispam-2.0.beta.tar.gz
"
