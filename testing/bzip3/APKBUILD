# Contributor: Grigory Kirillov <txgk@bk.ru>
# Maintainer: Grigory Kirillov <txgk@bk.ru>
pkgname=bzip3
pkgver=1.1.1
pkgrel=1
pkgdesc="Better and stronger spiritual successor to BZip2"
url="https://github.com/kspalaiologos/bzip3"
arch="all"
license="LGPL-3.0-only"
subpackages="$pkgname-libs $pkgname-static $pkgname-dev"
source="https://github.com/kspalaiologos/bzip3/releases/download/$pkgver/bzip3-$pkgver.tar.gz"

build() {
	./configure \
		--target="$CTARGET" \
		--build="$CBUILD" \
		--host="$CHOST" \
		--prefix=/usr
	make all
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install
}

libs() {
	pkgdesc="$pkgdesc (library)"
	mkdir -p "$subpkgdir"/usr/lib
	mv "$pkgdir"/usr/lib/libbzip3.so "$subpkgdir"/usr/lib/
}

sha512sums="
9c53a390d62bc865245c59cc2cb3744751b03be21d80bc0f8bd9a644384ed0f1e3bdfd6accc69f438cfbda29115632d0df6cb64e58537f427e63631313957461  bzip3-1.1.1.tar.gz
"
