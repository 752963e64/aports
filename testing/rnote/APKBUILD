# Contributor: Jakob Meier <comcloudway@ccw.icu>
# Maintainer: Jakob Meier <comcloudway@ccw.icu>
pkgname=rnote
pkgver=0.5.18
pkgrel=0
pkgdesc="Sketch and take handwritten notes."
url="https://rnote.flxzt.net/"
arch="all"
license="GPL-3.0-or-later"
makedepends="
	alsa-lib-dev
	cargo
	clang-dev
	cmake
	gtk4.0-dev
	libadwaita-dev
	meson
	poppler-dev
	"
subpackages="$pkgname-lang"
source="
	https://github.com/flxzt/rnote/archive/refs/tags/v$pkgver/rnote-$pkgver.tar.gz
	system-deps.patch
	"
builddir="$srcdir/rnote-$pkgver"
options="net"

build() {
	abuild-meson \
		. output
	meson compile ${JOBS:+-j ${JOBS}} -C output
}
check() {
	meson test --no-rebuild --print-errorlogs -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
a28511ace2655999a1beb7e831f8cd8467648dd7e4ba7e81277c0473c912d781f56036538140bc521c568c6047c83a43241002f62beb3099f9c436f1976b9682  rnote-0.5.18.tar.gz
cf83e1357eefb8bdf1542850d66d8007d620e4050b5715dc83f4a921d36ce9ce47d0d13c5d85f2b0ff8318d2877eec2f63b931bd47417a81a538327af927da3e  system-deps.patch
"
