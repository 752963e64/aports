# Contributor: Milan P. StaniÄ‡ <mps@arvanta.net>
# Maintainer: Heiko Bernloehr <Heiko.Bernloehr@FreeIT.de>
pkgname="lnav"
pkgver="0.8.5"
pkgrel=0
pkgdesc="advanced log file navigator and viewer"
url="https://lnav.org"
arch="all"
options="!check" # failed on some tests
license="BSD-2-Clause"
makedepends="libbsd-dev bzip2-dev zlib-dev sqlite-dev readline-dev pcre-dev
	ncurses-dev autoconf automake bash"
subpackages="$pkgname-doc"
source="lnav-$pkgver.tar.gz::https://github.com/tstack/lnav/archive/v$pkgver.tar.gz"
builddir="$srcdir/lnav-$pkgver"

prepare() {
	default_prepare
	./autogen.sh
}

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var
	make
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="dec408df7dedb79863d59d3607b0ce1b1a01f3936830d2227f64592bad12c040b89e04108f22cf68989661a80d24e7a60516f51779f928e9fcc33bb64e140fe8  lnav-0.8.5.tar.gz"
