# Contributor: Jakub Jirutka <jakub@jirutka.cz>
# Maintainer:
pkgname=ocaml-lambda-term
_pkgname=lambda-term
pkgver=3.2.0
pkgrel=0
pkgdesc="Terminal manipulation library for OCaml"
url="https://github.com/ocaml-community/lambda-term"
arch="all !riscv64"  # restricted by ocaml
license="BSD-3-Clause"
depends="
	ocaml-camomile
	ocaml-lwt
	ocaml-lwt_log
	ocaml-lwt_react
	ocaml-mew
	ocaml-mew_vi
	ocaml-runtime
	ocaml-zed"
depends_dev="$pkgname=$pkgver-r$pkgrel"
makedepends="
	dune
	ocaml
	ocaml-bigarray-compat-dev
	ocaml-camomile-dev
	ocaml-charinfo_width-dev
	ocaml-compiler-libs
	ocaml-cppo-dev
	ocaml-csexp-dev
	ocaml-findlib-dev
	ocaml-lwt-dev
	ocaml-lwt_log-dev
	ocaml-lwt_react
	ocaml-mew-dev
	ocaml-mew_vi-dev
	ocaml-mmap-dev
	ocaml-ocamlbuild-dev
	ocaml-ocplib-endian-dev
	ocaml-react-dev
	ocaml-result-dev
	ocaml-seq-dev
	ocaml-trie-dev
	ocaml-zed-dev
	"
subpackages="$pkgname-dev $pkgname-doc"
source="$pkgname-$pkgver.tar.gz::https://github.com/ocaml-community/lambda-term/releases/download/$pkgver/lambda-term-$pkgver.tar.gz"
builddir="$srcdir/$_pkgname-$pkgver"

# 32-bit archs
case "$CARCH" in
	arm*|x86) options="$options textrels" ;;
esac

build() {
	export OCAMLPATH=/usr/lib/ocaml
	dune build --root . @install --no-buffer --verbose
}

check() {
	dune runtest --no-buffer --verbose
}

package() {
	dune install \
		--destdir="$pkgdir" \
		--prefix=/usr \
		--libdir=/usr/lib/ocaml

	# There's just a readme and changelog.
	rm -Rf "$pkgdir"/usr/doc

	mkdir -vp "$pkgdir"/usr/share
	mv -vf "$pkgdir"/usr/man "$pkgdir"/usr/share/
}

dev() {
	default_dev

	cd "$pkgdir"

	local path; for path in $(find usr/lib/ocaml \( \
			-name '*.cmt' -o \
			-name '*.cmti' -o \
			-name '*.cmx' -o \
			-name '*.cmxa' -o \
			-name '*.ml' -o \
			-name '*.mli' \
		\))
	do
		amove "$path"
	done
}

sha512sums="
46cd46f47c9f34c0a5e096b96e6eec59667b645bf5201140e498e6d4eb9baba8204a2b30b73c4b2f8140e5cf1972a56e3aa485b27bc5ace25b2c368f713ad7c4  ocaml-lambda-term-3.2.0.tar.gz
"
