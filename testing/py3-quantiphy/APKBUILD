# Contributor: Andy Hawkins <andy@gently.org.uk>
# Maintainer: Andy Hawkins <andy@gently.org.uk>
pkgname=py3-quantiphy
pkgver=2.13
pkgrel=0
pkgdesc="Physical Quantities"
url="https://quantiphy.readthedocs.io/"
arch="noarch"
license="GPL-3.0-or-newer"
depends="
	python3
	"
makedepends="
	py3-setuptools
	"
checkdepends="
	py3-pytest
	py3-inform
	"
source="$pkgname-v$pkgver.tar.gz::https://github.com/KenKundert/quantiphy/archive/v$pkgver.tar.gz"
builddir="$srcdir/quantiphy-$pkgver"

build() {
	python3 setup.py build
}

check() {
	# Exclude manual tests as they create a circular dependency with py3-quantiphy_eval
	PYTHONPATH="$PWD/build/lib" py.test-3 -k 'not test_manual'
}

package() {
	python3 setup.py install --prefix=/usr --root="$pkgdir"
}
sha512sums="1803fa92704d6157ade3f9536c708e4b977a42af3130555e16fec7d79cf03bf99bd7ae346a5b1f1c0cbd82723955db48e6f3ce5e1aeb9f8cea46c2002a0062da  py3-quantiphy-v2.13.tar.gz"
