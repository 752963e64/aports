pkgname=aerc
pkgver=0.2.0
pkgrel=0
pkgdesc="an email client for your terminal"
url="https://aerc-mail.org"
arch="all"
license="MIT"
depends="less"
makedepends="go scdoc"
subpackages="$pkgname-doc"
source="
	$pkgname-$pkgver.tar.gz::https://git.sr.ht/~sircmpwn/aerc/archive/$pkgver.tar.gz
	0001-Fix-test-failures.patch
"

build() {
	make PREFIX=/usr
}

check() {
	go test ./...
}

package() {
	make install PREFIX=/usr DESTDIR="$pkgdir"
}
