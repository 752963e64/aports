# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=kitinerary
pkgver=20.12.0
pkgrel=0
# armhf blocked by qt5-qtdeclarative
# ppc64le blocked by kitinerary
arch="all !armhf !ppc64le"
url="https://invent.kde.org/pim/kitinerary"
pkgdesc="Itinerary and boarding pass management application"
license="BSD-3-Clause AND LGPL-2.0-or-later"
depends="
	kirigami2
	qt5-qtquickcontrols2
	"
makedepends="
	extra-cmake-modules
	kcalendarcore-dev
	kcontacts-dev
	kholidays-dev
	ki18n-dev
	kmime-dev
	knotifications-dev
	kosmindoormap-dev
	kpkpass-dev
	libphonenumber-dev
	libxml2-dev
	openssl-dev
	poppler-dev
	qt5-qtbase-dev
	qt5-qtdeclarative-dev
	shared-mime-info
	zlib-dev
	zxing-cpp-dev
	"
source="https://download.kde.org/stable/release-service/$pkgver/src/kitinerary-$pkgver.tar.xz"
subpackages="$pkgname-dev $pkgname-lang"

build() {
	cmake -B build \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	cd build
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="f4618a27ef36cdb97732ef592cf677241ecacf5dadad3fe4aeb6c76428e90023f0a1fbae6cc6e57342e45f9ad2229fc2a500eadcfcf78d8d460593e55f1dd944  kitinerary-20.12.0.tar.xz"
