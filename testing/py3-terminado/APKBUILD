pkgname=py3-terminado
pkgver=0.12.1
pkgrel=0
pkgdesc="Tornado websocket backend for xterm.js"
url="https://github.com/jupyter/terminado"
arch="noarch"
license="BSD-2-Clause"
depends="py3-ptyprocess py3-tornado"
checkdepends="py3-pytest"
makedepends="py3-setuptools"
source="$pkgname-$pkgver.tar.gz::https://github.com/jupyter/terminado/archive/refs/tags/$pkgver.tar.gz
	bash.patch
	test_get_pid.patch
	"
builddir="$srcdir/terminado-$pkgver/"

build() {
	python3 setup.py build
}

check() {
	pytest
}

package() {
	python3 setup.py install --prefix=/usr --root="$pkgdir"
}

