pkgname=py3-pymediainfo
_pkgname=pymediainfo
pkgver=5.0.2
pkgrel=0
pkgdesc="A Python wrapper for the mediainfo library."
url="https://pypi.org/project/pymediainfo/"
arch="noarch"
license="MIT"
depends="libmediainfo python3"
checkdepends="py3-pytest py3-pytest-runner"
makedepends="py3-setuptools py3-setuptools_scm"
source="https://files.pythonhosted.org/packages/source/${_pkgname:0:1}/$_pkgname/$_pkgname-$pkgver.tar.gz"
builddir="$srcdir/$_pkgname-$pkgver"

build() {
	python3 setup.py build
}

check() {
	python3 setup.py check
}

package() {
	python3 setup.py install --prefix=/usr --root="$pkgdir"
}

sha512sums="7db94cf2326a518f7693f2e8d76aa7aef3440466b0eac768a553cc0763d3bceb84d8051dcd79db6577e22a4ddd580f910ac286c571f3e51197ef2e268a73671a  pymediainfo-5.0.2.tar.gz"
