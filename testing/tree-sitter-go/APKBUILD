# Contributor: Michał Polański <michal@polanski.me>
# Maintainer: Michał Polański <michal@polanski.me>
pkgname=tree-sitter-go
pkgver=0.19.1
pkgrel=0
pkgdesc="Go grammar for tree-sitter"
url="https://github.com/tree-sitter/tree-sitter-go"
license="MIT"
arch="all"
makedepends="tree-sitter-dev"
checkdepends="tree-sitter-cli"
install_if="tree-sitter-grammars"
source="https://github.com/tree-sitter/tree-sitter-go/archive/v$pkgver/tree-sitter-go-$pkgver.tar.gz"

case "$CARCH" in
	# blocked by tree-sitter-cli
	s390x|riscv64) options="!check" ;;
esac

build() {
	abuild-tree-sitter build
}

check() {
	tree-sitter test
}

package() {
	DESTDIR="$pkgdir" abuild-tree-sitter install
}

sha512sums="
54dfe060bab199dacef4e1c5d20a1316540fcad772d0b2a097f655e64ee8dfb2f78e80cc4be7d9ca22fe4411ec492eb09334044cfd2746d21654f9c17a9e8c5c  tree-sitter-go-0.19.1.tar.gz
"
