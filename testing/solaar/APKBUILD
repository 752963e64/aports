# Maintainer: Antoni Aloy <aaloytorrens@gmail.com>
pkgname=solaar
pkgver=1.1.6
pkgrel=0
pkgdesc="Linux device manager for a wide range of Logitech devices"
url="https://pwr-solaar.github.io/Solaar/"
arch="noarch"
license="GPL-2.0-or-later"
makedepends="py3-setuptools"
depends="
	gtk+3.0
	libnotify
	py3-dbus
	py3-evdev
	py3-gobject3
	py3-hid-parser
	py3-psutil
	py3-udev
	py3-xlib
	py3-yaml
	"
subpackages="$pkgname-doc"
install="$pkgname.pre-install"
source="https://github.com/pwr-Solaar/Solaar/archive/$pkgver/$pkgname-$pkgver.tar.gz
	make-hid-parser-optional.patch
	$pkgname.rules
	"
builddir="$srcdir/Solaar-$pkgver"

build() {
	python3 setup.py build
}

check() {
	python3 setup.py check
}

package() {
	python3 setup.py install --root="$pkgdir"

	# udev
	install -Dm644 "$srcdir"/"$pkgname".rules \
	"$pkgdir"/lib/udev/rules.d/42-logitech-unify-permissions.rules

	# docs
	install -Dm644 "$builddir"/ChangeLog.md \
	"$pkgdir"/usr/share/doc/solaar/ChangeLog.md
	install -Dm644 "$builddir"/README.md \
	"$pkgdir"/usr/share/doc/solaar/README.md
}

sha512sums="
a1f17a93fb960170496851e86a461fef863dff1e86dbc1acc54083804495e1dbbb962c6eab8459e36af2822c2b06b2fe060f070dee8a1837b72059c8dbeb46db  solaar-1.1.6.tar.gz
3c0c957e4178931e85dea0485c670e68a46c76dc6f46d4a066204140ddeff39ba06bb4a4896c58e1cd726bca98e5984b5246465fefaaecff1182a2bd92593432  make-hid-parser-optional.patch
7f86932c463acf4368022134bf7ad16693ba40a1e65bf52379a28cedd870279afba5df90b9d99f6a24f420492f3068277bb6fca999df13c99936974f93a17424  solaar.rules
"
