# Contributor: Michał Polański <michal@polanski.me>
# Maintainer: Michał Polański <michal@polanski.me>
pkgname=gfold
pkgver=4.1.1
pkgrel=0
pkgdesc="CLI tool to help keep track of Git repositories"
url="https://github.com/nickgerace/gfold"
license="Apache-2.0"
arch="all !s390x !riscv64" # blocked by rust/cargo
makedepends="cargo"
source="https://github.com/nickgerace/gfold/archive/$pkgver/gfold-$pkgver.tar.gz"

prepare() {
	default_prepare

	cargo fetch --locked
}

build() {
	cargo build --release --frozen
}

check() {
	git init # needed for the integration test
	cargo test --frozen
}

package() {
	install -Dm755 target/release/gfold -t "$pkgdir"/usr/bin/
}

sha512sums="
b3f205c60842d48fa7a2232b03c9114425072e5904f5aed2ef198984d66e7efbe425780ae32fc219f8eb5b715cec039b96de5ef3960dba6062c8f486cf36c546  gfold-4.1.1.tar.gz
"
