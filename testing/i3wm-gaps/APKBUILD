# Maintainer: prspkt <prspkt@protonmail.com>
pkgname=i3wm-gaps
pkgver=4.21.1
pkgrel=0
pkgdesc="Improved dynamic tiling window manager with additional features"
url="https://github.com/Airblader/i3"
arch="all"
license="BSD-3-Clause"
replaces="i3wm"
makedepends="
	asciidoc
	bison
	cairo-dev
	flex
	libev-dev
	libxcb-dev
	libxkbcommon-dev
	meson
	pango-dev
	pcre2-dev
	perl
	startup-notification-dev
	xcb-util-cursor-dev
	xcb-util-keysyms-dev
	xcb-util-wm-dev
	xcb-util-xrm-dev
	xmlto
	yajl-dev
	"
subpackages="$pkgname-doc"
source="i3wm-$pkgver.tar.gz::https://github.com/Airblader/i3/archive/$pkgver.tar.gz"
builddir="$srcdir/i3-$pkgver"
options="!check" # missing perl bindings for libxcb

build() {
	abuild-meson \
		-Db_lto=true \
		-Dmans=true \
		-Ddocs=true \
		. output
	meson compile ${JOBS:+-j ${JOBS}} -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
9ef5bd2b658609907b0f76894508fdf2f9b94b85e5d211489f7b4bf7d98e8a66a670a040c8770f85795d929c8e07239cacc50082c6044ee78cf51633a78b4ce4  i3wm-4.21.1.tar.gz
"
