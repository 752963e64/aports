# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=kasts
pkgver=0_git20210530
pkgrel=0
_commit="e58b885debf920c66ad1916108e868bc581d0811"
pkgdesc="Kirigami-based podcast player"
# armhf blocked by extra-cmake-modules
arch="all !armhf"
url="https://invent.kde.org/plasma-mobile/kasts"
license="LicenseRef-KDE-Accepted-GPL AND CC0-1.0"
depends="
	kirigami2
	"
makedepends="
	extra-cmake-modules
	kconfig-dev
	kcoreaddons-dev
	ki18n-dev
	kirigami2-dev
	syndication-dev
	openssl-dev
	qt5-qtbase-dev
	qt5-qtdeclarative-dev
	qt5-qtmultimedia-dev
	qt5-qtquickcontrols2-dev
	qt5-qtsvg-dev
	"
source="https://invent.kde.org/plasma-mobile/kasts/-/archive/$_commit/kasts-$_commit.tar.gz"
options="!check" # No tests
builddir="$srcdir/$pkgname-$_commit"

build() {
	cmake -B build \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr
	cmake --build build
}

check() {
	cd build
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
66852000ef53c0835e849aac2b9f0f79d86bf46693227baddbbba09277839e16c43dd148c0ccd6aba6c546d719a6afb2e7c452bd0c3e0bac69d59979f02d137c  kasts-e58b885debf920c66ad1916108e868bc581d0811.tar.gz
"
