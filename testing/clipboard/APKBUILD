# Maintainer: Guy Godfroy <guy.godfroy@gugod.fr>
pkgname=clipboard
pkgver=0.1.3
pkgrel=0
pkgdesc="Cut, copy, and paste anything, anywhere, all from the terminal"
url="https://github.com/Slackadays/Clipboard"
arch="all"
license="GPL-3.0-only"
makedepends="cmake samurai"
source="$pkgname-$pkgver.tar.gz::https://github.com/Slackadays/Clipboard/archive/refs/tags/$pkgver.tar.gz"
builddir="$srcdir/Clipboard-$pkgver/src"
options="!check" # No test configuration file

build() {
	if [ "$CBUILD" != "$CHOST" ]; then
		CMAKE_CROSSOPTS="-DCMAKE_SYSTEM_NAME=Linux -DCMAKE_HOST_SYSTEM_NAME=Linux"
	fi
	cmake -B build -G Ninja \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DBUILD_SHARED_LIBS=True \
		-DCMAKE_BUILD_TYPE=None \
		$CMAKE_CROSSOPTS
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
9924eb19004ad197bd9cd9d1e9489b12d12f7885b3310fb1e8f3f09873540f10a79e2f708b8df0e6e6705383c89e2375c694da922a3fa9ebb3cf65deadd9e150  clipboard-0.1.3.tar.gz
"
