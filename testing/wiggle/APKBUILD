pkgname=wiggle
pkgver=1.2
pkgrel=0
pkgdesc="Tool for applying patches with conflicts"
url="https://blog.neil.brown.name/2013/08/wiggle-1-0/"
arch="all"
license="GPL-2.0-or-later"
makedepends="ncurses-dev groff"
checkdepends="bash"
subpackages="$pkgname-doc"
source="https://neil.brown.name/wiggle/wiggle-$pkgver.tar.gz"

build() {
	make wiggle wiggle.man
}

check() {
	make test
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="
