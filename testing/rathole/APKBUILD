# Contributor: Michał Polański <michal@polanski.me>
# Maintainer: Michał Polański <michal@polanski.me>
pkgname=rathole
pkgver=0.4.6
pkgrel=0
pkgdesc="High-performance reverse proxy for NAT traversal"
url="https://github.com/rapiz1/rathole"
license="Apache-2.0"
arch="all !s390x !riscv64" # blocked by rust/cargo
makedepends="cargo openssl-dev"
source="https://github.com/rapiz1/rathole/archive/v$pkgver/rathole-$pkgver.tar.gz"

prepare() {
	default_prepare
	cargo fetch --locked
}

build() {
	cargo build --frozen --release
}

check() {
	cargo test --frozen
}

package() {
	install -Dm755 target/release/rathole -t "$pkgdir"/usr/bin/
}

sha512sums="
e890fc8573ad3f358ec28c4ced52affb9b659a1606ac338a84751f15ebe91eed59c275a6c41e896bcc65d50463052bda7e6515cae09b0709b52a9e62a4d77a1f  rathole-0.4.6.tar.gz
"
