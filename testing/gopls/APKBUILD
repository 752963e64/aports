# Contributor: David Florness <david@florness.com>
# Maintainer: David Florness <david@florness.com>
pkgname=gopls
pkgver=0.6.0
pkgrel=0
pkgdesc="Language server for Go programming language"
url="https://github.com/golang/tools/blob/master/gopls"
arch="all !mips !mips64" # go is missing
options="chmod-clean"
license="BSD-3-Clause"
makedepends="go>=1.12"
source="$pkgname-$pkgver.tar.gz::https://github.com/golang/tools/archive/gopls/v$pkgver.tar.gz"
builddir="$srcdir/tools-$pkgname-v$pkgver/$pkgname"
export GOPATH="$srcdir"

check() {
	cd "test"
	go test
}

build() {
	go build -o "$pkgname" -trimpath
}

package() {
	install -Dm755 "$builddir/$pkgname" -t "$pkgdir"/usr/bin/
}

sha512sums="89ebf7aa4c86088a8b03ab54008a1eb59b4123b57ae4c49e3bcbec45574758ef978c623f543b5c61d35589a3d60dade452d6049a4e2ea43116302e560ef5a6a8  gopls-0.6.0.tar.gz"
