# Maintainer: Andy Hawkins <andy@gently.org.uk>
pkgname=py3-rkm-codes
pkgver=0.5
pkgrel=0
pkgdesc="Number format for compact robust labels"
url="https://nurdletech.com/linux-utilities/rkm_codes/"
arch="noarch"
license="GPL-3.0-or-newer"
depends="
	python3
	py3-quantiphy
	"
makedepends="py3-setuptools"
checkdepends="
	py3-pytest
	"
source="$pkgname-v$pkgver.tar.gz::https://github.com/KenKundert/rkm_codes/archive/v$pkgver.tar.gz"
builddir="$srcdir/rkm_codes-$pkgver"

build() {
	python3 setup.py build
}

check() {
	PYTHONPATH="$PWD/build/lib" py.test-3
}

package() {
	python3 setup.py install --prefix=/usr --root="$pkgdir"
}
