# Contributor: Maarten van Gompel <proycon@anaproy.nl>
# Maintainer: Anjandev Momi <anjan@momi.ca>
pkgname=pnc
pkgver=0.9.2
pkgrel=0
arch="all"
url="https://sxmo.org"
pkgdesc="libphonenumber command-line wrapper - Sxmo extended"
source="$pkgname-$pkgver.tar.gz::https://git.sr.ht/~anjan/pnc/archive/$pkgver.tar.gz"
license="GPL-3.0-only"
makedepends="
	cmake
	gawk
	icu-dev
	libphonenumber-dev
	samurai
	"
subpackages="$pkgname-doc $pkgname-gawk"

build() {
	if [ "$CBUILD" != "$CHOST" ]; then
		local crossopts="-DCMAKE_SYSTEM_NAME=Linux -DCMAKE_HOST_SYSTEM_NAME=Linux"
	fi
	cmake -B build -G Ninja \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_SHARED_LIBS=True \
		-DCMAKE_BUILD_TYPE=None \
		$crossopts
	cmake --build build
}

check() {
	cd build
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

gawk() {
	amove usr/lib/gawk
}

sha512sums="
da66b1a5f9c70ede47d5946d64b13f816f0f7fd8725d929000dd654c3dd2d3b36296021742b530f6439e98d9f224aef82229c9f2fbf308e9392a4180059c1075  pnc-0.9.2.tar.gz
"
