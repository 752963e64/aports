options="!check" # No tests
builddir="$srcdir/skill-date-time-$_commit"

package() {
	mkdir -p "$pkgdir"/usr/share/mycroft/skills/mycroft-date-time.mycroftai
	cp -r ./* "$pkgdir"/usr/share/mycroft/skills/mycroft-date-time.mycroftai/
}

