# Contributor: Petr Vorel <petr.vorel@gmail.com>
# Maintainer: Petr Vorel <petr.vorel@gmail.com>
pkgname=ltp
pkgver=20230127
pkgrel=0
pkgdesc="The Linux Test Project"
url="http://linux-test-project.github.io"
# limited to this given this is a huge package, request if you need it elsewhere
arch="aarch64 x86_64"
license="GPL-2.0-or-later"
depends="
	acl
	attr
	bc
	binutils
	e2fsprogs
	iproute2-minimal
	iputils
	"
makedepends="
	acl-dev
	bison
	flex
	keyutils-dev
	libaio-dev
	libcap-dev
	libselinux-dev
	libsepol-dev
	libtirpc-dev
	linux-headers
	numactl-dev
	openssl-dev
	"
options="!check" # no tests
source="https://github.com/linux-test-project/ltp/releases/download/$pkgver/ltp-full-$pkgver.tar.xz"
builddir="$srcdir/$pkgname-full-$pkgver"
ldpath="/usr/lib/ltp/testcases/data/ldd01/"
_prefix="/usr/lib/ltp"

prepare() {
	default_prepare

	# https://github.com/linux-test-project/ltp/blob/master/ci/alpine.sh
	rm -rfv \
		testcases/kernel/syscalls/fmtmsg/fmtmsg01.c \
		testcases/kernel/syscalls/rt_tgsigqueueinfo/rt_tgsigqueueinfo01.c \
		testcases/kernel/syscalls/timer_create/timer_create01.c \
		testcases/kernel/syscalls/timer_create/timer_create03.c
}

build() {
	LEXLIB=-lfl \
	./configure \
		--with-realtime-testsuite \
		--with-open-posix-testsuite \
		--disable-metadata \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=$_prefix
	make
}

package() {
	make DESTDIR="$pkgdir" install
	mkdir -pv "$pkgdir"/usr/bin
	ln -sf "$_prefix"/runltp "$pkgdir"/usr/bin
	ln -sf "$_prefix"/bin/ltp-bump "$pkgdir"/usr/bin
	ln -sf "$_prefix"/bin/ltp-pan "$pkgdir"/usr/bin
}

sha512sums="
f7448793708f64c227e650bddfc7e6ef7d1becba1ec57aa87087f6c26c54e447100af26974279e6029e8222a39d09f3c585c44bdfac1c827028dbce903dc33b5  ltp-full-20230127.tar.xz
"
