# Maintainer: Andy Hawkins <andy@gently.org.uk>
pkgname=emborg
pkgver=1.19
pkgrel=0
pkgdesc="Front-End to Borg Backup"
url="https://emborg.readthedocs.io/"
arch="noarch !s390x !mips !mips64 !armhf" # limited by borgbackup
license="GPL-3.0-or-newer"
depends="
	borgbackup
	python3
	py3-appdirs
	py3-arrow
	py3-docopt
	py3-inform
	py3-quantiphy
	py3-shlib
	"
makedepends="py3-setuptools"
source="$pkgname-v$pkgver.tar.gz::https://github.com/KenKundert/emborg/archive/v$pkgver.tar.gz"

build() {
	python3 setup.py build
}

check() {
	python3 setup.py test
}

package() {
	python3 setup.py install --prefix=/usr --root="$pkgdir"
}
sha512sums="591f2183cbb2980790ded6c4dbecbec1e9358c29e1a0d76608ecc76efd617230e49623ffcd0bd805d99f38a7ae22d7217990f08aa4c0865302064932d7984ae1  emborg-v1.19.tar.gz"
