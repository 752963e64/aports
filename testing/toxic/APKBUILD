pkgname=toxic
pkgver=0.13.0
pkgrel=0
pkgdesc="ncurses-based Tox client"
url="https://github.com/JFreegman/toxic"
arch="all"
license="GPL-3.0-or-later"
makedepends="
	curl-dev
	freealut-dev
	libconfig-dev
	libnotify-dev
	libqrencode-dev
	libvpx-dev
	libx11-dev
	linux-headers
	ncurses-dev
	openal-soft-dev
	opus-dev
	toxcore-dev
	"
subpackages="$pkgname-doc"
source="$pkgname-$pkgver.tar.gz::https://github.com/JFreegman/toxic/archive/v$pkgver.tar.gz"

build() {
	make
}

check() {
	./build/toxic --version
}

package() {
	make PREFIX="$pkgdir"/usr install
}

