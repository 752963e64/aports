# Maintainer: Micha≈Ç Adamski <michal@ert.pl>
pkgname=electrs
pkgver=0.9.1
pkgrel=0
pkgdesc="Efficient re-implementation of Electrum Server in Rust"
url="https://github.com/romanz/electrs"
license="MIT"
arch="x86 x86_64 aarch64" # limited by rust/cargo and rocksdb
makedepends="cargo rocksdb-dev clang-libs"
source="https://github.com/romanz/electrs/archive/v$pkgver/electrs-$pkgver.tar.gz"

build() {
	ROCKSDB_INCLUDE_DIR=/usr/include ROCKSDB_LIB_DIR=/usr/lib cargo build --release --locked
}

check() {
	cargo test --all --release --locked
}

package() {
	install -Dm755 target/release/$pkgname -t "$pkgdir"/usr/bin
}

sha512sums="
61b8fd2ea65c082406832568facc87c53e995f2912a796ba29cafb0a6bd76c52544070af562cdd78cd736acd2569ec8feab147ae17cf95a95b6ae63eea0b33bc  electrs-0.9.1.tar.gz
"
