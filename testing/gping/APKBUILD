# Contributor: Michał Polański <michal@polanski.me>
# Maintainer: Michał Polański <michal@polanski.me>
pkgname=gping
pkgver=1.6.2
pkgrel=0
pkgdesc="Ping, but with a graph"
url="https://github.com/orf/gping"
license="MIT"
arch="all !s390x !riscv64" # blocked by rust/cargo
makedepends="cargo"
source="https://github.com/orf/gping/archive/gping-v$pkgver/gping-$pkgver.tar.gz"
builddir="$srcdir/gping-gping-v$pkgver"

prepare() {
	default_prepare

	cargo fetch --locked
}

build() {
	cargo build --frozen --release
}

check() {
	cargo test --frozen
}

package() {
	install -Dm755 target/release/gping -t "$pkgdir"/usr/bin/
}

sha512sums="
a136f83b0b0aa627069e9ba5aac8bf0698f04b51d7eff73cfe289818c997c2e2d8c5204e9e6b849539b339527b89278f269b37bbabd4c4cd6d6da0e70ad7cc02  gping-1.6.2.tar.gz
"
