pkgname=onefetch
pkgver=2.7.2
pkgrel=0
pkgdesc="Git repository summary on your terminal"
url="https://github.com/o2sh/onefetch"
arch="all !s390x !mips !mips64"
license="MIT"
makedepends="cargo libgit2-dev zlib-dev"
source="$pkgname-$pkgver.tar.gz::https://crates.io/api/v1/crates/onefetch/$pkgver/download"

export LIBGIT2_SYS_USE_PKG_CONFIG=1

build() {
	cargo build --release --locked
}

check() {
	cargo test --release --locked
}

package() {
	install -Dm0755 target/release/onefetch "$pkgdir"/usr/bin/onefetch
}

sha512sums="1fdbbb2242dacc3f5972c2732b0a56eaa53a3e2a77adab47030a73df835f4177bb5a806cffd163fd8fe0e82d01310459d38e2c7080f62f39a93db455e6a83e5b  onefetch-2.7.2.tar.gz"
