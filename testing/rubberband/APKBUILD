# Contributor: David Demelier <markand@malikania.fr>
# Maintainer: David Demelier <markand@malikania.fr>
pkgname=rubberband
pkgver=2.0.1
pkgrel=0
pkgdesc="library for audio time-stretching and pitch-shifting"
url="https://www.breakfastquay.com/rubberband/"
arch="all"
license="GPL-2.0-only"
makedepends="fftw-dev
	ladspa-dev
	libsamplerate-dev
	libsndfile-dev
	lv2-dev
	meson
	vamp-sdk-dev"
subpackages="$pkgname-static $pkgname-dev"
source="https://breakfastquay.com/files/releases/rubberband-$pkgver.tar.bz2"
options="!check" # No tests

build() {
	abuild-meson \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var \
		--buildtype=plain \
		. output
	meson compile ${JOBS:+-j ${JOBS}} -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
7e120dbf20625980462cf5910b933b9631fd8a0b0e2ea927ca2417b352327c6398dc1d9bb89e2a1ed79118c840ef39ba5c0c52a0a4d4b494d68ae1dbb74f1cb1  rubberband-2.0.1.tar.bz2
"
