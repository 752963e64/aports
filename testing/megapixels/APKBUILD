# Contributor: Martijn Braam <martijn@brixit.nl>
# Maintainer: Oliver Smith <ollieparanoid@postmarketos.org>
pkgname=megapixels
pkgver=0.6.0
pkgrel=0
pkgdesc="GTK+3 camera app for ARM devices"
url="https://git.sr.ht/~martijnbraam/megapixels"
arch="armhf armv7 aarch64" # Specific to arm phone media pipelines
license="GPL-3.0-only"
makedepends="glib-dev gtk+3.0-dev meson"
source="
	$pkgname-$pkgver.tar.gz::https://git.sr.ht/~martijnbraam/megapixels/archive/$pkgver.tar.gz
"
options="!check" # There's no testsuite

build() {
	abuild-meson . output
	meson compile ${JOBS:+-j ${JOBS}} -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="a0780a04d18c80d78a5b98ea320ce3852601fd121926fc694b48072981500b36d8135245849322a2fe358e5f98a1a52c918a2c4d9d6148fdf9fc15e1d0565c5e  megapixels-0.6.0.tar.gz"
