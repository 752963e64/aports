# Maintainer: Drew DeVault <sir@cmpwn.com>
pkgname=liblouis
pkgver=3.18.0
pkgrel=0
pkgdesc="Braille translator and back-translator"
url="http://liblouis.org/"
arch="all"
license="GPL-3.0-or-later"
makedepends="help2man python3"
checkdepends="bash"
subpackages="$pkgname-static $pkgname-dev $pkgname-bin:_bin $pkgname-doc"
source="
	$pkgname-$pkgver.tar.gz::https://github.com/liblouis/liblouis/releases/download/v$pkgver/liblouis-$pkgver.tar.gz
	"

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var \
		--enable-ucs4
	make
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install
}

_bin() {
	mkdir -p "$subpkgdir"/usr
	mv "$pkgdir"/usr/bin "$subpkgdir"/usr
}

sha512sums="
ee0549038bb4f6ed9a2e8575ac04fafe470e6863ada9a669b7e08f51fc05cf0dc0392e38b730f3a82d4b231adb6923d89d1474fdbde0a1aa22d178dec7a11f96  liblouis-3.18.0.tar.gz
"
