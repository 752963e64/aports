# Contributor: Drew DeVault <sir@cmpwn.com>
# Maintainer:
pkgname=liblouis
pkgver=3.23.0
pkgrel=0
pkgdesc="Braille translator and back-translator"
url="http://liblouis.org/"
arch="all"
license="GPL-3.0-or-later"
makedepends="help2man python3"
checkdepends="bash"
subpackages="$pkgname-static $pkgname-dev $pkgname-bin:_bin $pkgname-doc"
source="
	$pkgname-$pkgver.tar.gz::https://github.com/liblouis/liblouis/releases/download/v$pkgver/liblouis-$pkgver.tar.gz
	"

# secfixes:
#   3.22.0-r0:
#     - CVE-2022-26981

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var \
		--enable-ucs4
	make
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install
}

_bin() {
	mkdir -p "$subpkgdir"/usr
	mv "$pkgdir"/usr/bin "$subpkgdir"/usr
}

sha512sums="
25819758fc987ed378c439c5d40efd2692247a6020a40e5909320021e518e0518f5b022dda4ea5c7006a0f1ce2a4225d4ee1404560987bb2dd83504d58aa09db  liblouis-3.23.0.tar.gz
"
