# Contributor: Jakub Jirutka <jakub@jirutka.cz>
# Maintainer: Jakub Jirutka <jakub@jirutka.cz>
pkgname=tofi
pkgver=0.3.0
pkgrel=0
pkgdesc="Tiny dynamic menu for Wayland"
url="https://github.com/philj56/tofi"
arch="all"
license="MIT"
makedepends="
	cairo-dev
	freetype-dev
	fts-dev
	harfbuzz-dev
	libxkbcommon-dev
	meson
	pango-dev
	scdoc
	wayland-dev
	wayland-protocols
	"
subpackages="
	$pkgname-doc
	$pkgname-bash-completion
	"
source="https://github.com/philj56/tofi/archive/v$pkgver/$pkgname-$pkgver.tar.gz"
options="!check"  # no tests provided

build() {
	LDFLAGS="$LDFLAGS -lfts" abuild-meson . output
	meson compile -j ${JOBS:-0} -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
033092d0d4ba583d45efb4e1c4dc220226b0899337f5b4f887f26a392737c018d422d50c13e518340229399a85735cd00e45ab108ee96f0456faba2db5080e2b  tofi-0.3.0.tar.gz
"
