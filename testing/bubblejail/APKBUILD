# Maintainer: Donoban <donoban@riseup.net>
pkgname=bubblejail
pkgver=0.4.2
pkgrel=0
pkgdesc="Bubblewrap based sandboxing for desktop applications"
url="https://github.com/igo95862/bubblejail"
arch="noarch"
license="GPL-3.0 License"
depends="python3 bubblewrap py3-xdg py3-toml"
makedepends="meson m4 py3-sphinx fish"
subpackages="$pkgname-doc
	$pkgname-bash-completion
	$pkgname-fish-completion"
source=" https://github.com/igo95862/bubblejail/releases/download/$pkgver/bubblejail-$pkgver.tar.gz
	fish_completions.patch
	ld_cache.patch"
builddir=$srcdir
options="!check" # No tests

build() {
	abuild-meson . output
	meson compile ${JOBS:+-j ${JOBS}} -C output
}

package() {
       DESTDIR=$pkgdir meson install --no-rebuild -C output
}

