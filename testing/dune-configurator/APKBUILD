# Contributor: rubicon <rubicon@mailo.com>
# Maintainer:
pkgname=dune-configurator
_pkgname=dune
pkgver=3.1.1_git20220513
_gitrev=56f6f7cc08794d2f9e24a5bc098c6c59783afccc
pkgrel=0
pkgdesc="System config helper for the Dune OCaml build system"
url="https://github.com/ocaml/dune"
arch="all !riscv64" # limited by ocaml aport
license="Apache-2.0"
options="!check"  # FIXME requires ocaml-menhir
checkdepends="bash"
depends_dev="$pkgname=$pkgver-r$pkgrel"
makedepends="dune ocaml ocaml-compiler-libs ocaml-findlib ocaml-csexp-dev"
subpackages="$pkgname-dev"
source="$pkgname-$pkgver.tar.gz::https://github.com/ocaml/dune/archive/$_gitrev/dune-$_gitrev.tar.gz"
builddir="$srcdir/$_pkgname-$_gitrev"

# 32-bit archs
case "$CARCH" in
	arm*|x86) options="$options textrels" ;;
esac

build() {
	export OCAMLPATH=/usr/lib/ocaml
	rm -rf vendor/csexp vendor/pp _build
	dune build -p dune-configurator @install
}

check() {
	make test
}

package() {
	dune install \
		--destdir="$pkgdir" \
		--prefix=/usr \
		--libdir=/usr/lib/ocaml \
		dune-configurator

	rm -Rf "$pkgdir"/usr/doc	# identical to main dune package
}

dev() {
	default_dev

	cd "$pkgdir"

	local path; for path in $(find usr/lib/ocaml \( \
			-name '*.cmt' -o \
			-name '*.cmti' -o \
			-name '*.cmx' -o \
			-name '*.cmxa' -o \
			-name '*.ml' -o \
			-name '*.mli' \
		\))
	do
		amove "$path"
	done
}

sha512sums="
efd970dfc0834f87b5361cd1644df68240ba6fea6bcb7aa9fb2fdb1dd4f5762309fa17391cad8f091298a7e203440adbd41b2198a9c0429b3c80054a032836ff  dune-configurator-3.1.1_git20220513.tar.gz
"
