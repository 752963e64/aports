pkgname=ksmbd-tools
pkgver=3.4.1
pkgrel=0
pkgdesc="userspace tools for kernel smb server (ksmbd)"
url="https://github.com/cifsd-team/ksmbd-tools"
arch="all"
license="GPL-2.0-or-later"
makedepends="autoconf automake libtool libnl3-dev glib-dev"
source="$pkgname-$pkgver.tar.gz::https://github.com/cifsd-team/ksmbd-tools/archive/refs/tags/$pkgver.tar.gz"

prepare() {
	default_prepare
	./autogen.sh
}

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var
	make
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="
6e9f78bf87a97834b6fdfd4e222ac3ce8b2e7ba91159192602e581b0cc8fea59799091f121218d638cf65a0c5cc2ecffde30afafa392482e38c946ec5ce33304  ksmbd-tools-3.4.1.tar.gz
"
