pkgname=gallery-dl
pkgver=1.20.5
pkgrel=0
pkgdesc="CLI tool to download image galleries"
url="https://github.com/mikf/gallery-dl"
arch="noarch"
license="GPL-2.0-or-later"
depends="
	py3-requests
	python3
	"
makedepends="py3-setuptools"
checkdepends="py3-pytest"
subpackages="
	$pkgname-doc
	$pkgname-bash-completion
	$pkgname-zsh-completion
	"
source="$pkgname-$pkgver.tar.gz::https://github.com/mikf/gallery-dl/archive/v$pkgver.tar.gz"

build() {
	python3 setup.py build

	make man completion
}

check() {
	make test
}

package() {
	python3 setup.py install --prefix=/usr --root="$pkgdir"
}

sha512sums="
a53102a9495763e001810c509265affc1594468e3ba73d3a677652e73d8f18d3414e6cf83dd30914e882e7867380f9c0322d42bf418b372f59be6981106d4cd5  gallery-dl-1.20.5.tar.gz
"
