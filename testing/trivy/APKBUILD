# Contributor: TBK <alpine@jjtc.eu>
# Maintainer: TBK <alpine@jjtc.eu>
pkgname=trivy
pkgver=0.24.0
pkgrel=0
pkgdesc="Simple and comprehensive vulnerability scanner for containers"
url="https://github.com/aquasecurity/trivy"
arch="all"
# s390x: tests SIGSEGV: https://github.com/aquasecurity/trivy/issues/430
# ppc64le: FTBFS: build constraints exclude all Go files in [...]
arch="$arch !s390x !ppc64le"
license="Apache-2.0"
makedepends="btrfs-progs-dev go linux-headers lvm2-dev"
source="https://github.com/aquasecurity/trivy/archive/v$pkgver/trivy-$pkgver.tar.gz"

build() {
	make build
}

check() {
	make test
}

package() {
	install -Dm755 $pkgname "$pkgdir"/usr/bin/$pkgname
}

sha512sums="
f63fcc796ed1ba418e00fc2309360bcb0c20c5dc34280ddd9e619bb947b1a89ddb0b250b984547b08dd29f4ac7fd9c966d8c6fe387bab045a0a5ed23c23b1b47  trivy-0.24.0.tar.gz
"
