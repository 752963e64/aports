# Contributor: TBK <alpine@jjtc.eu>
# Maintainer: TBK <alpine@jjtc.eu>
pkgname=trivy
pkgver=0.16.0
pkgrel=0
pkgdesc="Simple and comprehensive vulnerability scanner for containers"
url="https://github.com/aquasecurity/trivy"
arch="all"
arch="$arch !s390x" # tests SIGSEGV on s390x: https://github.com/aquasecurity/trivy/issues/430
license="Apache 2.0"
license="Apache-2.0"
makedepends="btrfs-progs-dev go linux-headers lvm2-dev"
source="https://github.com/aquasecurity/trivy/archive/v$pkgver/trivy-$pkgver.tar.gz"

build() {
	make build
}

check() {
	make test
}

package() {
	install -Dm755 $pkgname "$pkgdir"/usr/bin/$pkgname
}

sha512sums="ffbc111e34784a7703b98b444a94c20a360a1de9a134dd1e4a2ebe8149085c5d9cb6d2defdc0db42c8307d4131b0ab740624d1e43c6972531d76992fcea573d3  trivy-0.16.0.tar.gz"
