# Contributor: TBK <alpine@jjtc.eu>
# Maintainer: TBK <alpine@jjtc.eu>
pkgname=trivy
pkgver=0.13.0
pkgrel=0
pkgdesc="Simple and comprehensive vulnerability scanner for containers"
url="https://github.com/aquasecurity/trivy"
arch="all !mips !mips64" # limited by go on mips
arch="$arch !s390x" # tests SIGSEGV on s390x: https://github.com/aquasecurity/trivy/issues/430
license="Apache 2.0"
makedepends="btrfs-progs-dev go linux-headers lvm2-dev"
source="$pkgname-$pkgver.tar.gz::https://github.com/aquasecurity/trivy/archive/v$pkgver.tar.gz"

build() {
	make build
}

check() {
	make test
}

package() {
	install -Dm755 $pkgname "$pkgdir"/usr/bin/$pkgname
}

sha512sums="8c94b370148728ec82c98f6c2ce31e0752caaf9f29b1edaef40d5f6657269ce1ace6b1c747c3ec3b2b713bfc781555d1a4f6d77c994e1973f38fd2756240e290  trivy-0.13.0.tar.gz"
