# Contributor: Jakub Panek <me@panekj.dev>
# Maintainer: Jakub Panek <me@panekj.dev>
pkgname=lite-xl
pkgver=2.1.0
pkgrel=0
pkgdesc="Lightweight text editor written in Lua"
url="https://lite-xl.github.io"
arch="all"
license="MIT"
makedepends="
	cmake
	freetype-dev
	lua5.4-dev
	meson
	pcre2-dev
	reproc-dev
	sdl2-dev
	"
subpackages="$pkgname-doc"
source="https://github.com/lite-xl/lite-xl/archive/v$pkgver/lite-xl-$pkgver.tar.gz"
options="!check" # no tests available

build() {
	abuild-meson -Darch_tuple="$CARCH-linux" . output
	meson compile ${JOBS:+-j ${JOBS}} -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
1b34939591716f5f7e87d4fada2681c62b24b6e6e146cd52eb02617b96863bd2de21fce6e351edfc38ae6c2290889ecf0697647bd0eabd3f22866dbb6a4e6efc  lite-xl-2.1.0.tar.gz
"
