# Contributor: Michał Polański <michal@polanski.me>
# Maintainer: Michał Polański <michal@polanski.me>
pkgname=fq
pkgver=0.1.0
pkgrel=1
pkgdesc="Tool, language and decoders for inspecting binary data"
url="https://github.com/wader/fq"
license="MIT"
arch="all !ppc64le" # fails tests
makedepends="go"
checkdepends="expect"
source="https://github.com/wader/fq/archive/v$pkgver/fq-$pkgver.tar.gz"

export GOFLAGS="$GOFLAGS -trimpath -mod=readonly -modcacherw"
export GOCACHE="${GOCACHE:-"$srcdir/go-cache"}"
export GOTMPDIR="${GOTMPDIR:-"$srcdir"}"
export GOMODCACHE="${GOMODCACHE:-"$srcdir/go"}"

build() {
	make fq
}

check() {
	GO_TEST_RACE_FLAGS= make test
}

package() {
	install -Dm755 fq -t "$pkgdir"/usr/bin/
}

sha512sums="
3cc81962c9a31343109743f9de7b73939df9165d4d5dd4beff3790e85e435c0344fa44f59a66153d9235ed156e9bee0f93e63b36c492d337547c6cf1712132ed  fq-0.1.0.tar.gz
"
