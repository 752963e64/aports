# Contributor: Leo <thinkabit.ukim@gmail.com>
# Maintainer: Leo <thinkabit.ukim@gmail.com>
pkgname=qt5pas
pkgver=2.6
pkgrel=0
pkgdesc="Qt5 interface bindings for Pascal"
url="https://svn.freepascal.org/svn/lazarus/trunk/lcl/interfaces/qt5/cbindings"
arch="x86_64" # fpc
license="LGPL-3.0-or-later"
makedepends="qt5-qtbase-dev qt5-qtx11extras-dev"
subpackages="$pkgname-dev"
source="http://ftp.debian.org/debian/pool/main/libq/libqtpas/libqtpas_${pkgver}~beta.orig.tar.xz"
builddir="$srcdir/cbindings"

build() {
	qmake-qt5
	make
}

package() {
	INSTALL_ROOT="$pkgdir" make install
	install -Dm0644 qt5.pas -t "$pkgdir"/usr/share/pascal/qt5
}

dev() {
	default_dev
	amove usr/share/pascal/qt5/*.pas
}

sha512sums="cf498abfb60dacc5eebdd0ce125fea4573bd8b15a5643691b0f57c7c9152f9cb3c4669800ef9822db2c02e93833209f8acb77815cb0670faf5c743a8bf7c24ba  libqtpas_2.6~beta.orig.tar.xz"
