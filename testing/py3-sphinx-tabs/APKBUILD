pkgname=py3-sphinx-tabs
_pkgorig=sphinx-tabs
pkgver=3.4.1
pkgrel=0
pkgdesc="Tabbed views for Sphinx"
url="https://github.com/executablebooks/sphinx-tabs"
arch="noarch"
license="MIT"
depends="
	python3
	py3-docutils
	py3-pygments
	py3-sphinx
	"
makedepends="py3-setuptools"
checkdepends="py3-beautifulsoup4 py3-pytest py3-pytest-cov"
source="https://github.com/executablebooks/sphinx-tabs/archive/v$pkgver/$_pkgorig-$pkgver.tar.gz"
builddir="$srcdir/$_pkgorig-$pkgver"
# packaging test dependencies will require extra work | skip for now
options="!check"

build() {
	python3 setup.py build
}

check() {
	python3 -m pytest
}

package() {
	python3 setup.py install --skip-build --root="$pkgdir"
}

