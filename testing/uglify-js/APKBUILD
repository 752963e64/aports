# Contributor: Kevin Daudt <kdaudt@alpinelinux.org>
# Maintainer: Kevin Daudt <kdaudt@alpinelinux.org>
pkgname=uglify-js
pkgver=3.8.1
pkgrel=0
pkgdesc="JavaScript parser, mangler/compressor and beautifier toolkit"
url="http://lisperator.net/uglifyjs"
arch="noarch"
license="BSD-2-Clause"
depends="nodejs"
makedepends="npm"
source="https://registry.npmjs.org/uglify-js/-/uglify-js-$pkgver.tgz"
options="!check"
builddir="$srcdir/package"

unpack() {
	# skipping unpacking, installing archive directly
	verify
}

package() {
	npm install -g --user root --prefix "$pkgdir/usr" "$srcdir/uglify-js-$pkgver.tgz"
	chown -R root: "$pkgdir" # npm installs as build user
}

sha512sums="5bb2b1cb379a42666f5056c68f8f9816c86156b30119283621b7180231961afc7c0c7bc931c95b4c33297df77115418f0478c8cad93b289511fca517b2d5060f  uglify-js-3.8.1.tgz"
