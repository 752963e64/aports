# Contributor: André Klitzing <aklitzing@gmail.com>
# Maintainer: André Klitzing <aklitzing@gmail.com>
pkgname=curlie
pkgver=1.5.4
pkgrel=0
pkgdesc="Curlie is a frontend to curl that adds the ease of use of httpie"
url="https://github.com/rs/curlie"
arch="all !mips !mips64" # limited by go
license="MIT"
depends="curl"
makedepends="go"
subpackages="$pkgname-doc"
source="$pkgname-$pkgver.tar.gz::https://github.com/rs/curlie/archive/v$pkgver.tar.gz"

build() {
	go build
}

check() {
	go test
}

package() {
	install -Dm755 curlie "$pkgdir"/usr/bin/curlie
	install -Dm644 LICENSE "$pkgdir"/usr/share/licenses/$pkgname/LICENSE
}

sha512sums="ff8874d11e4cae7a78afe127cd1611eecd90d17efabce275a800612838fff32152fecb066ac6f9376614d5d2d0afe79b40612b879afb648ee74b788a4fff9c95  curlie-1.5.4.tar.gz"
