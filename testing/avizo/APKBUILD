pkgname=avizo
pkgver=1.0_git20211108
_gitrev=4e1f2200d497c8b0e0c372195aee627bcdc89a08
pkgrel=0
pkgdesc="A neat notification daemon"
url="https://github.com/misterdanb/avizo"
arch="all"
license="GPL-3.0"
makedepends="
	gobject-introspection-dev
	gtk+3.0-dev
	gtk-layer-shell-dev
	meson
	vala
	"
source="https://github.com/misterdanb/avizo/archive/$_gitrev/$pkgname-$_gitrev.tar.gz
	pr-19.patch
	pr-20.patch
	"
builddir="$srcdir/$pkgname-$_gitrev"
options="!check"  # no tests provided

build() {
	abuild-meson . output
	meson compile ${JOBS:+-j ${JOBS}} -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

