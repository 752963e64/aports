pkgname=py3-rarfile
_pyname=rarfile
pkgver=3.3
pkgrel=0
pkgdesc="RAR archive reader"
options="!check" # 3 tests fail
url="https://github.com/markokr/rarfile"
arch="noarch"
license="ISC"
makedepends="py3-setuptools"
checkdepends="py3-nose unrar"
source="https://files.pythonhosted.org/packages/source/${_pyname:0:1}/$_pyname/$_pyname-$pkgver.tar.gz"
builddir="$srcdir"/$_pyname-$pkgver

replaces="py-rarfile" # Backwards compatibility
provides="py-rarfile=$pkgver-r$pkgrel" # Backwards compatibility

build() {
	python3 setup.py build
}

check() {
	nosetests-3.7
}

package() {
	python3 setup.py install --prefix=/usr --root="$pkgdir"
}

sha512sums="6c66efae84d960bdda09e4d379744ebca7f5e280dcdc287183e22e7e633bbfd9b25f0672910e0ae80f4434b336aee6aa1036325786cbf82639bcff11ee34a02d  rarfile-3.3.tar.gz"
