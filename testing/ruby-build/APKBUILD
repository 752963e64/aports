# Maintainer: Thomas Kienlen <kommander@laposte.net>
pkgname=ruby-build
pkgver=20221121
pkgrel=0
pkgdesc="Compile and install Ruby"
url="https://github.com/rbenv/ruby-build"
arch="noarch"
license="MIT"
depends="
	bash
	"
subpackages="$pkgname-runtime:runtime"
source="$pkgname-$pkgver.tar.gz::https://github.com/rbenv/ruby-build/archive/v$pkgver.tar.gz"
options="!check" # No test suite
install="$pkgname.post-install"

package() {
	PREFIX="$pkgdir/usr" ./install.sh
}

runtime() {
	pkgdesc="ruby-build runtime dependencies"

	depends="
		autoconf
		coreutils
		libffi-dev
		linux-headers
		gdbm-dev
		openssl-dev>3
		readline-dev
		yaml-dev
		zlib-dev
		"

	mkdir -p "$subpkgdir"
}

sha512sums="
a8f3d04d1f514b92d57f1e1f9a96053ec339bc547996b2a9e53d7224f8d43de625858022256d79978c868bbbd4b59634a893f42d64fa49ff1f2064a3bdd38f88  ruby-build-20221121.tar.gz
"
