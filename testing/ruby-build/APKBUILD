# Maintainer: Thomas Kienlen <kommander@laposte.net>
pkgname=ruby-build
pkgver=20221206
pkgrel=0
pkgdesc="Compile and install Ruby"
url="https://github.com/rbenv/ruby-build"
arch="noarch"
license="MIT"
depends="
	bash
	"
subpackages="$pkgname-runtime:runtime"
source="$pkgname-$pkgver.tar.gz::https://github.com/rbenv/ruby-build/archive/v$pkgver.tar.gz"
options="!check" # No test suite
install="$pkgname.post-install"

package() {
	PREFIX="$pkgdir/usr" ./install.sh
}

runtime() {
	pkgdesc="ruby-build runtime dependencies"

	depends="
		autoconf
		coreutils
		libffi-dev
		linux-headers
		gdbm-dev
		openssl-dev>3
		readline-dev
		yaml-dev
		zlib-dev
		"

	mkdir -p "$subpkgdir"
}

sha512sums="
8ad9fcbe861276d51a1016ab25e9abe9caa3c4b11d87478b0a27f50a49c9c758f88ce1a01312526144ba220da2f3c9a696e9fa76635acf32383195448fc9483e  ruby-build-20221206.tar.gz
"
