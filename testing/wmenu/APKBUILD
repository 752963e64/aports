# Contributor: Dmitry Zakharchenko <dmitz@disroot.org>
# Maintainer: Dmitry Zakharchenko <dmitz@disroot.org>
pkgname=wmenu
pkgver=0.1.1
pkgrel=0
pkgdesc="Efficient dynamic menu for Wayland"
url="https://git.sr.ht/~adnano/wmenu"
arch="all"
license="MIT"
makedepends="meson
	libxkbcommon-dev
	pango-dev
	scdoc
	wayland-dev
	wayland-protocols
	"
options="!check" # no test suite
subpackages="$pkgname-doc"
source="$pkgname-$pkgver.tar.gz::https://git.sr.ht/~adnano/wmenu/archive/$pkgver.tar.gz"

build() {
	abuild-meson \
		. output
	meson compile ${JOBS:+-j ${JOBS}} -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
5b3f6c578a064b437ba310bbe02578bce0a85d51732034bf92192cb94b34f1177e96eac9212a525afc3040a53f7230c27779e243ab955f20986525e8d9415c1d  wmenu-0.1.1.tar.gz
"
