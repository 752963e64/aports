# Maintainer: Fabian Affolter <fabian@affolter-engineering.ch>
pkgname=py3-furl
_pkgname=furl
pkgver=2.1.0
pkgrel=2
pkgdesc="Python3 URL manipulator"
url="https://github.com/gruns/furl"
arch="noarch"
license="Unlicense"
depends="py3-orderedmultidict py3-six"
makedepends="py3-setuptools"
checkdepends="py3-flake8 py3-pycodestyle py3-pyflakes"
source="https://files.pythonhosted.org/packages/source/${_pkgname:0:1}/$_pkgname/$_pkgname-$pkgver.tar.gz
	python-3.9.patch"
builddir="$srcdir"/$_pkgname-$pkgver

build() {
	python3 setup.py build
}

check() {
	# https://github.com/gruns/furl/issues/121
	PYTHONPATH="build:$PYTHONPATH" pytest -v -k "not test_join"
}

package() {
	python3 setup.py install --prefix=/usr --root="$pkgdir"
}

