# Contributor: David Demelier <markand@malikania.fr>
# Maintainer: David Demelier <markand@malikania.fr>
pkgname=ardour
pkgver=6.0.0
pkgrel=0
pkgdesc="professional-grade digital audio workstation"
url="https://ardour.org"
arch="all !ppc64le" # Does not build on ppc64le.
license="GPL-2.0-or-later"
makedepends="
	alsa-lib-dev
	atkmm-dev
	aubio-dev
	boost-dev
	fftw-dev
	gtk+2.0-dev
	gtkmm-dev
	jack-dev
	libarchive-dev
	libexecinfo-dev
	liblo-dev
	libpng-dev
	libsamplerate-dev
	libsigc++-dev
	libsndfile-dev
	lilv-dev
	lrdf-dev
	lv2-dev
	pulseaudio-dev
	python3
	readline-dev
	redland-dev
	rubberband-dev
	serd-dev
	sratom-dev
	taglib-dev
	vamp-sdk-dev
	"
source="https://community.ardour.org/src/Ardour-$pkgver.tar.bz2
	always-link-execinfo.patch"
builddir="$srcdir/Ardour-$pkgver"

build() {
	python3 waf configure \
		--prefix=/usr \
		--with-backends=pulseaudio,jack,alsa,dummy
	python3 waf build
}

check() {
	python3 waf test
}

package() {
	python3 waf install --destdir="$pkgdir"
}

