pkgname=bieaz
pkgver=0.0.18
pkgrel=0
pkgdesc="Pure shell script Root on ZFS boot environment manager for Linux"
url="https://gitlab.com/m_zhou/bieaz"
arch="noarch"
license="GPL-3.0-or-later"
# must depend on coreutils & util-linux
# busybox utils does not support ZFS
depends="
	coreutils
	util-linux
	"
source="https://gitlab.com/m_zhou/bieaz/-/archive/$pkgver/bieaz-$pkgver.tar.gz"
package() {
	make DESTDIR="$pkgdir" install
}
