# Contributor: rubicon <rubicon@mailo.com>
# Maintainer:
pkgname=ocaml-lablgtk3
_pkgname=lablgtk
pkgver=3.1.2
pkgrel=0
pkgdesc="OCaml interface to GTK+3"
url="https://github.com/garrigue/lablgtk"
arch="all !riscv64" # restricted by ocaml
license="LGPL-2.1-or-later-WITH-linking-exception"
depends="ocaml-runtime"
depends_dev="$pkgname=$pkgver-r$pkgrel"
makedepends="
	dune
	dune-configurator-dev
	ocaml
	ocaml-cairo2-dev
	ocaml-compiler-libs
	ocaml-csexp-dev
	ocaml-lablgtk3-dev
	gtksourceview-dev
	"
options="!check"
subpackages="$pkgname-dev"
source="$pkgname-$pkgver.tar.gz::https://github.com/garrigue/lablgtk/archive/$pkgver.tar.gz"
builddir="$srcdir/$_pkgname-$pkgver"

# 32-bit archs
case "$CARCH" in
	arm*|x86) options="$options textrels" ;;
esac

build() {
	export OCAMLPATH=/usr/lib/ocaml
	dune build -p lablgtk3,lablgtk3-sourceview3 \
		@install --no-buffer --verbose
}

check() {
	dune runtest --no-buffer --verbose
}

package() {
	dune install \
		--destdir="$pkgdir" \
		--prefix=/usr \
		--libdir=/usr/lib/ocaml \
		lablgtk3 lablgtk3-sourceview3

	rm -Rf "$pkgdir"/usr/doc
}

dev() {
	default_dev

	cd "$pkgdir"

	local path; for path in $(find usr/lib/ocaml \( \
			-name '*.cmt' -o \
			-name '*.cmti' -o \
			-name '*.cmx' -o \
			-name '*.cmxa' -o \
			-name '*.ml' -o \
			-name '*.mli' \
		\))
	do
		amove "$path"
	done
}

sha512sums="
c63a492160f36685f65cb6bc0e72ff4939005acb2c65c56c0d9ba8f2112a618f24db84765e7b4416e49024048a36895028cfc5ef2c3e298dd4a309e902e34af5  ocaml-lablgtk3-3.1.2.tar.gz
"
