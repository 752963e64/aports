# Maintainer: psykose <alice@ayaya.dev>
pkgname=activate-linux
pkgver=0.0.1
pkgrel=0
pkgdesc="Activate Windows watermark for Linux"
url="https://github.com/MrGlockenspiel/activate-linux"
arch="all"
license="LicenseRef-Based"
makedepends="
	cairo-dev
	libx11-dev
	libxfixes-dev
	libxinerama-dev
	"
source="https://github.com/MrGlockenspiel/activate-linux/archive/v$pkgver/activate-linux-v$pkgver.tar.gz"
options="!check" # no tests

build() {
	make CC=gcc
}

package() {
	install -Dm755 ./bin/activate-linux -t "$pkgdir"/usr/bin
}

sha512sums="
