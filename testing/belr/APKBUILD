# Contributor: Francesco Colista <fcolista@alpinelinux.org>
# Maintainer: Francesco Colista <fcolista@alpinelinux.org>
pkgname=belr
pkgver=4.4.33
pkgrel=0
pkgdesc="ABNF Parser"
url="https://www.linphone.org"
arch="all"
license="GPL-3.0-or-later"
options="!check" # not test available
makedepends="cmake bctoolbox-dev eudev-dev"
subpackages="$pkgname-dev"
source="$pkgname-$pkgver.tar.gz::https://github.com/BelledonneCommunications/belr/archive/$pkgver.tar.gz"

build() {
	cmake \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DCMAKE_MODULE_PATH=/usr/lib/cmake \
		-DENABLE_STRICT=NO \
		-DENABLE_SHARED=YES \
		-DENABLE_TESTS=NO \
		-DENABLE_STATIC=NO \
		.
	make
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="50b39db4fb6465dbd4e65ab65d2433c365e7b4bf1f20fb969d25e0adaa2a2a3307c87abc9dd65798113e57987508fce67209d290fce414af8570e96d59b71539  belr-4.4.33.tar.gz"
