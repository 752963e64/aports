# Maintainer: Francesco Colista <fcolista@alpinelinux.org>
pkgname=belr
pkgver=5.1.10
pkgrel=0
pkgdesc="ABNF Parser"
url="https://www.linphone.org"
arch="all"
license="GPL-3.0-or-later"
options="!check" # not test available
makedepends="cmake bctoolbox-dev eudev-dev"
subpackages="$pkgname-dev"
source="$pkgname-$pkgver.tar.gz::https://github.com/BelledonneCommunications/belr/archive/$pkgver.tar.gz"

build() {
	cmake -B build \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DCMAKE_MODULE_PATH=/usr/lib/cmake \
		-DENABLE_STRICT=NO \
		-DENABLE_SHARED=YES \
		-DENABLE_TESTS=NO \
		-DENABLE_STATIC=NO \
		.
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
1d69bc0583075b3fdd2dffacc53004a35da346b09307ddff5e1f72b20acc656dd754b5ffb12c591bac98e078d09e2eecf2a9ec3beb822e7c17be1165239e7a91  belr-5.1.10.tar.gz
"
