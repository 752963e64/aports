# Contributor: psykose <alice@ayaya.dev>
# Maintainer: Milan P. StaniÄ‡ <mps@arvanta.net>
pkgname=dosbox-staging
pkgver=0.78.1
pkgrel=1
pkgdesc="revitalized dosbox DOS-emulator"
url="https://dosbox-staging.github.io/"
arch="all !x86" # TEXTREL on x86
license="GPL-2.0-or-later"
options="!check" # no
depends="!dosbox" # dosbox provides same binary in /usr/bin/dosbox
makedepends="
	alsa-lib-dev
	fluidsynth-dev
	libpng-dev
	libslirp-dev
	opus-dev
	opusfile-dev
	sdl2-dev
	sdl2_net-dev
	meson
	"
subpackages="$pkgname-doc"
source="$pkgname-$pkgver.tar.gz::https://github.com/dosbox-staging/dosbox-staging/archive/v$pkgver.tar.gz"

build() {
	CFLAGS="$CFLAGS -DLOGURU_STACKTRACES=0" \
	CXXFLAGS="$CXXFLAGS -DLOGURU_STACKTRACES=0" \
	abuild-meson \
	--prefix /usr \
	--buildtype=release \
	-Duse_mt32emu=false \
	. output
	meson compile ${JOBS:+-j ${JOBS}} -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
3179e8eac00e22e35b36623c11688b8c60408bf487a56683269ff065988fbdf4319c16097232cc191695cf2e10c05f4c4eee15e92d9887ebf03a23f808d5db7c  dosbox-staging-0.78.1.tar.gz
"
