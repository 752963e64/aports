# Contributor: Bart Ribbers <bribbers@disroot.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=communicator
pkgver=2.0.0
pkgrel=0
pkgdesc="Contacts and dialer application"
# armhf blocked by extra-cmake-modules
# mips64, s390x and riscv64 blocked by mauikit
arch="all !armhf !mips64 !s390x !riscv64"
url="https://invent.kde.org/maui/communicator"
license="GPL-3.0-or-later"
depends="mauikit"
makedepends="
	extra-cmake-modules
	kcontacts-dev
	kcoreaddons-dev
	ki18n-dev
	kpeople-dev
	kservice-dev
	mauikit-dev
	mauikit-filebrowsing-dev
	qt5-qtbase-dev
	qt5-qtdeclarative-dev
	qt5-qtquickcontrols2-dev
	"
source="https://download.kde.org/stable/maui/communicator/$pkgver/communicator-$pkgver.tar.xz
	0001-fix-installation-with-rightorg-names-in-files.patch
	"
options="!check" # No tests

build() {
	cmake -B build \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr
	cmake --build build
}

check() {
	cd build
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}
sha512sums="
