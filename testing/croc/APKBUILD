# Contributor: André Klitzing <aklitzing@@gmail.com>
# Maintainer: André Klitzing <aklitzing@gmail.com>
pkgname=croc
pkgver=8.6.9
pkgrel=0
pkgdesc="Easily and securely send things from one computer to another"
url="https://github.com/schollz/croc"
arch="all !s390x !mips !mips64" # s390x fails: https://github.com/schollz/croc/issues/218
license="MIT"
makedepends="go"
source="https://github.com/schollz/croc/releases/download/v$pkgver/croc_${pkgver}_src.tar.gz"

build() {
	export CGO_LDFLAGS="$LDFLAGS"
	export GOFLAGS="$GOFLAGS -trimpath -mod=vendor"
	go build
}

check() {
	go test ./...
}

package() {
	install -Dm755 -t "$pkgdir/usr/bin/" "$pkgname"
}

sha512sums="474cf105e636e8c0221beca49372bf127f967b54ebc75c12642eb984f60678d17e352efe314ba16304486545c007997afc1fbd53e95c2e8b2a804a120227eece  croc_8.6.9_src.tar.gz"
