pkgname=lagrange
pkgver=1.2.2
pkgrel=0
pkgdesc="Beautiful Gemini client"
url="https://gmi.skyjake.fi/lagrange"
license="BSD-2-Clause"
arch="all"
options="!check" # no test suite
makedepends="cmake zlib-dev pcre-dev openssl-dev sdl2-dev libunistring-dev mpg123-dev"
source="https://git.skyjake.fi/skyjake/lagrange/releases/download/v$pkgver/lagrange-$pkgver.tar.gz"

build() {
	cmake -B build \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --build build --target install
}

sha512sums="cdb460d3b2e5c3a72d15079f948fc0f9c53d293ab9c14b40d8097a0745a3d62d01acae3a64bfc6d0aeef079c2c51e3b240cdf1ff584f95e4bca80b5d77dacfc6  lagrange-1.2.2.tar.gz"
