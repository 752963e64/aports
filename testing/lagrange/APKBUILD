pkgname=lagrange
pkgver=1.3.4
pkgrel=0
pkgdesc="Beautiful Gemini client"
url="https://gmi.skyjake.fi/lagrange"
license="BSD-2-Clause"
arch="all"
options="!check" # no test suite
makedepends="cmake zlib-dev pcre-dev openssl-dev sdl2-dev libunistring-dev mpg123-dev"
source="https://git.skyjake.fi/gemini/lagrange/releases/download/v$pkgver/lagrange-$pkgver.tar.gz"

build() {
	cmake -B build \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --build build --target install
}

sha512sums="50d0b74720153dd026f546bac2ffcf471a863c553b95886bd9c83863778ba9844d396e38e7766e211536ebccb1879a5aad1d13d07ccb67cdf743ec2c0c5a73d7  lagrange-1.3.4.tar.gz"
