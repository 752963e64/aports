# Contributor: Carlo Landmeter <clandmeter@alpinelinux.org>
# Maintainer: Rasmus Thomsen <oss@cogitri.dev>
pkgname=drone-cli
pkgver=1.3.2
pkgrel=0
pkgdesc="Drone CLI"
url="https://github.com/drone/drone-cli"
license="Apache-2.0"
arch="all"
makedepends="go"
source="drone-cli-$pkgver.tar.gz::https://github.com/drone/drone-cli/archive/v$pkgver.tar.gz"

build() {
	export GOPATH="$srcdir"
	go build -ldflags "-X main.version=$pkgver" -o bin/drone ./drone
}

check() {
	go test ./...
}

package() {
	install -Dm755 "$builddir"/bin/drone "$pkgdir"/usr/bin/drone
}

cleanup_srcdir() {
	go clean -modcache
	default_cleanup_srcdir
}

sha512sums="
0f1f7605ed770fcbe6a2c3857f97dfe442b1919c76d37a4f05d31578ab4cd14b719886e0983d99c6ed98a4453728421c312b6ed171703a60e28f29a3324be764  drone-cli-1.3.2.tar.gz
"
