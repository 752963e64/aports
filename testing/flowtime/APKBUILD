# Contributor:
# Maintainer: Krassy Boykinov <kboykinov@teamcentrixx.com>
pkgname=flowtime
pkgver=3.0
pkgrel=0
pkgdesc="GTK4 / libadwaita assistant for the Flowtime working technique"
url="https://github.com/Diego-Ivan/Flowtime"
arch="all"
license="GPL-3.0-or-later"
makedepends="
	desktop-file-utils
	gst-plugins-bad-dev
	gstreamer-dev
	gtk4.0-dev
	libadwaita-dev
	libgee-dev
	libxml2-dev
	meson
	vala
	"
checkdepends="appstream-glib"
options="!check" # upstream bug in third check
subpackages="$pkgname-lang"
source="$pkgname-$pkgver.tar.gz::https://github.com/Diego-Ivan/Flowtime/archive/refs/tags/v$pkgver.tar.gz"
builddir="$srcdir/Flowtime-$pkgver"

build() {
	abuild-meson -Db_lto=true . build
	meson compile -C build
}

check() {
	meson test --no-rebuild --print-errorlogs -C build
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C build
}

sha512sums="
9355fb27d57c362c0c5fca047c76b8acd6e155c108de080713fafca9d9ca1f622ce8d60616b91afdbd386d93d722143dd59abbbb12311ec169335e5e2bc98446  flowtime-3.0.tar.gz
"
