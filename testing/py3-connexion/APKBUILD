pkgname=py3-connexion
_pkgname=connexion
pkgver=2.14.1
pkgrel=0
pkgdesc="Swagger/OpenAPI First framework for Python on top of Flask with automatic endpoint validation & OAuth2 support"
url="https://github.com/spec-first/connexion"
arch="noarch !ppc64le !armhf" # limited by missing depends
license="Apache-2.0"
options="!check" # require pytest <7 and unpackaged py3-swagger-ui-bundle
checkdepends="
	py3-flask
	py3-itsdangerous
	py3-pytest
	py3-pytest-aiohttp
	py3-pytest-cov
	py3-swagger-ui-bundle
	py3-testfixtures
	"
makedepends="
	py3-flake8
	py3-setuptools
	"
depends="
	py3-clickclick
	py3-httpx
	py3-inflection
	py3-jsonschema
	py3-requests
	py3-starlette
	py3-typing-extensions
	py3-werkzeug
	py3-yaml
	python3
	"
source="https://github.com/spec-first/connexion/archive/$pkgver/$_pkgname-$pkgver.tar.gz"
builddir="$srcdir/$_pkgname-$pkgver"

build() {
	python3 setup.py build
}

check() {
	python3 setup.py test
}

package() {
	python3 setup.py install --prefix=/usr --root="$pkgdir"
}

