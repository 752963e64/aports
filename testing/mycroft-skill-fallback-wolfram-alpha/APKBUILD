builddir="$srcdir/fallback-wolfram-alpha-$_commit"

package() {
	mkdir -p "$pkgdir"/usr/share/mycroft/skills/fallback-wolfram-alpha.mycroftai
	cp -r ./* "$pkgdir"/usr/share/mycroft/skills/fallback-wolfram-alpha.mycroftai/
}

