pkgname=gops
pkgver=0.3.16
pkgrel=0
pkgdesc="A tool to list and diagnose Go processes currently running on your system"
url="https://github.com/google/gops"
license="BSD-3-Clause"
arch="all"
makedepends="go"
source="$pkgname-$pkgver.tar.gz::https://github.com/google/gops/archive/v$pkgver.tar.gz"

build() {
	go build -ldflags "-s -w" -v -o bin/$pkgname
}

check() {
	go test ./...
}

package() {
	install -Dm755 bin/$pkgname "$pkgdir"/usr/bin/$pkgname
}

cleanup_srcdir() {
	go clean -modcache
	default_cleanup_srcdir
}

sha512sums="bb01d2544ec847cc2d4023ac9e461a6548fda7ff06a965006b803450bdb2605d02bbcad57c55d997fb944dc6cd4d78cd412185c4a7ac80cb280f6f627c6bcc7c  gops-0.3.16.tar.gz"
